





<DockPanel xmlns="clr-namespace:System.Windows.Controls;assembly=PresentationFramework" xmlns:editPad="clr-namespace:DRT;assembly=DrtEditing" xmlns:media="clr-namespace:System.Windows.Media;assembly=PresentationCore" xmlns:anim="clr-namespace:System.Windows.Media.Animation;assembly=PresentationFramework" xmlns:coreAnim="www.microsoft.com/Avalon/CoreAnimation" xmlns:MappingPIGen1="clr-namespace:System.Windows.Controls;assembly=PresentationFramework" xmlns:MappingPIGen2="clr-namespace:System.Windows.Media;assembly=PresentationCore" xmlns:MappingPIGen3="clr-namespace:System.Windows.Media.Animation;assembly=PresentationFramework" xmlns:MappingPIGen4="clr-namespace:System.Windows.Media.Animation;assembly=PresentationCore" xmlns:MappingPIGen5="clr-namespace:System.Windows.Input;assembly=PresentationCore" xmlns:MappingPIGen6="clr-namespace:DRT;assembly=DrtEditing">

    <!-- ************ -->
    <!-- Toolbar      -->
    <!-- ************ -->
    <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
        <Button Name="CutButton" Focusable="False" Command="ApplicationCommands.Cut" Width="36" Height="36" ToolTip="Cut">Cut</Button>
        <Button Name="CopyButton" Focusable="False" Command="ApplicationCommands.Copy" Width="36" Height="36" ToolTip="Copy">Copy</Button>
        <Button Name="PasteButton" Focusable="False" Command="ApplicationCommands.Paste" Width="36" Height="36" ToolTip="Paste">Paste</Button>

        <Button Name="UndoButton" Focusable="False" Command="ApplicationCommands.Undo" Width="36" Height="36" ToolTip="Undo">Undo</Button>
        <Button Name="RedoButton" Focusable="False" Command="ApplicationCommands.Redo" Width="36" Height="36" ToolTip="Redo">Redo</Button>

        <Button Name="BoldButton" Focusable="False" Command="EditCommands.Bold" Width="36" Height="36" ToolTip="Bold">B</Button>
        <Button Name="ItalicButton" Focusable="False" Command="EditCommands.Italic" Width="36" Height="36" ToolTip="Italic">I</Button>
        <Button Name="UnderlineButton" Focusable="False" Command="EditCommands.Underline" Width="36" Height="36" ToolTip="Underline">U</Button>

        <Button Name="LeftJustifyButton" Focusable="False" Command="EditCommands.LeftJustify" Width="36" Height="36" ToolTip="Align Left">L</Button>
        <Button Name="CenterJustifyButton" Focusable="False" Command="EditCommands.CenterJustify" Width="36" Height="36" ToolTip="Center">C</Button>
        <Button Name="RightJustifyButton" Focusable="False" Command="EditCommands.RightJustify" Width="36" Height="36" ToolTip="Align Right">R</Button>

    </StackPanel>

    <editPad:RichTextBox Name="RichTextBox" />

</DockPanel>
