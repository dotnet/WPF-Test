<DockPanel xmlns='http://schemas.microsoft.com/winfx/2006/xaml/presentation'
xmlns:x='http://schemas.microsoft.com/winfx/2006/xaml' Background="white">
  <StackPanel Orientation='Horizontal' DockPanel.Dock='Top' Background='Lightblue' Height='25'>
	<CheckBox DockPanel.Dock='Top' Name='AcceptsReturn' IsChecked='true'>AcceptsReturn</CheckBox>
	<CheckBox DockPanel.Dock='Top' Name='AcceptsTab' IsChecked='true'>AcceptsTab</CheckBox>
	<CheckBox DockPanel.Dock='Top' Name='AllowDrop' IsChecked='true'>AllowDrop</CheckBox>
	<CheckBox DockPanel.Dock='Top' Name='Focusable' IsChecked='true'>Focusable</CheckBox>
	<CheckBox DockPanel.Dock='Top' Name='Enabled' IsChecked='true'>Enabled</CheckBox>	
	<CheckBox DockPanel.Dock='Top' Name='IsReadOnly'>IsReadOnly</CheckBox>
	<CheckBox DockPanel.Dock='Top' Name='AutoWordSelection'>AutoWordSelection</CheckBox>
	<CheckBox DockPanel.Dock='Top' Name='IsUndoEnabled' IsChecked='true'>IsUndoEnabled</CheckBox>
  </StackPanel>

  <Grid ShowGridLines="false" DockPanel.Dock='Top' Background='Lightyellow' Height='140'>
   <Grid.ColumnDefinitions>
    <ColumnDefinition/>
    <ColumnDefinition/>
    <ColumnDefinition/>
    <ColumnDefinition/>
    <ColumnDefinition/>
    <ColumnDefinition/>
    <ColumnDefinition/>  
   </Grid.ColumnDefinitions>
   <Grid.RowDefinitions>
    <RowDefinition/>
    <RowDefinition/>
    <RowDefinition/>
    <RowDefinition/>
   </Grid.RowDefinitions>

	<StackPanel Grid.Row='0' Grid.Column='0'><TextBlock>Background</TextBlock>
	<TextBox DockPanel.Dock='Top' Name='Background'>White</TextBox></StackPanel>

	<StackPanel Grid.Row='0' Grid.Column='1'><TextBlock>BorderBrush</TextBlock>
	<TextBox DockPanel.Dock='Top' Name='BorderBrush'>Transparent</TextBox></StackPanel>	

	<StackPanel Grid.Row='0' Grid.Column='2'><TextBlock>BorderThickness</TextBlock>
	<TextBox DockPanel.Dock='Top' Name='BorderThickness'>1,1,1,1</TextBox></StackPanel>

	<StackPanel Grid.Row='0' Grid.Column='3'><TextBlock>CharacterCasing</TextBlock>
	<TextBox DockPanel.Dock='Top' Name='CharacterCasing' ToolTip="0 = Normal; 1 = Lower; 2 = Upper">0</TextBox></StackPanel>

	<StackPanel Grid.Row='0' Grid.Column='4'><TextBlock>FlowDirection</TextBlock>
	<TextBox DockPanel.Dock='Top' Name='FlowDirection' ToolTip="0 = LTRThenTTB; 1 = RTLThenTTB;">0</TextBox></StackPanel>

	<StackPanel Grid.Row='0' Grid.Column='5'><TextBlock>Foreground</TextBlock>
	<TextBox DockPanel.Dock='Top' Name='Foreground'>Black</TextBox></StackPanel>

	<StackPanel Grid.Row='0' Grid.Column='6'><TextBlock>FontFamily</TextBlock>
	<TextBox DockPanel.Dock='Top' Name='FontFamily'>Arial</TextBox></StackPanel>

	<StackPanel Grid.Row='1' Grid.Column='0'><TextBlock>FontSize</TextBlock>
	<TextBox DockPanel.Dock='Top' Name='FontSize'>18</TextBox></StackPanel>

	<StackPanel Grid.Row='1' Grid.Column='1'><TextBlock>FontStretch</TextBlock>
	<TextBox DockPanel.Dock='Top' Name='FontStretch' ToolTip="5 = Normal; 1 = UltraCondensed; 2 = ExtraCondensed; 3 = Condensed; 4 = SemiCondensed; 6 = SemiExpanded; 7 = Expanded; 8 = ExtraExpanded; 9 = UltraExpanded">5</TextBox></StackPanel>

	<StackPanel Grid.Row='1' Grid.Column='2'><TextBlock>FontWeight</TextBlock>
	<TextBox DockPanel.Dock='Top' Name='FontWeight' ToolTip="400 = Normal; 100 = Thin; 200 = ExtraThin; 300 = Light; 500 = Medium; 600 = SemiBold; 700 = Bold; 800 = ExtraBold; 900 = Black; 950 = ExtraBlack">400</TextBox></StackPanel>

	<StackPanel Grid.Row='1' Grid.Column='3'><TextBlock>FontStyle</TextBlock>
	<TextBox DockPanel.Dock='Top' Name='FontStyle' ToolTip="Normal/Oblique/Italic">Normal</TextBox></StackPanel>

	<StackPanel Grid.Row='1' Grid.Column='4'><TextBlock>HScrollBarV</TextBlock>
	<TextBox DockPanel.Dock='Top' Name='HScrollBarV' ToolTip="0 = Disabled; 1 = Auto; 2 = Hidden; 3 = Visible">1</TextBox></StackPanel>

	<StackPanel Grid.Row='1' Grid.Column='5'><TextBlock>Height</TextBlock>
	<TextBox DockPanel.Dock='Top' Name='Height'>300</TextBox></StackPanel>

	<StackPanel Grid.Row='1' Grid.Column='6'><TextBlock>MaxLength</TextBlock>
	<TextBox DockPanel.Dock='Top' Name='MaxLength'>0</TextBox></StackPanel>

	<StackPanel Grid.Row='2' Grid.Column='0'><TextBlock>Padding</TextBlock>
	<TextBox DockPanel.Dock='Top' Name='Padding'>4,1,4,1</TextBox></StackPanel>

	<StackPanel Grid.Row='2' Grid.Column='1'><TextBlock>TextAlignment</TextBlock>
	<TextBox DockPanel.Dock='Top' Name='TextAlignment'>Left</TextBox></StackPanel>

	<StackPanel Grid.Row='2' Grid.Column='2'><TextBlock>ToolTip</TextBlock>
	<TextBox DockPanel.Dock='Top' Name='ToolTip'>TestTextBox</TextBox></StackPanel>

	<StackPanel Grid.Row='2' Grid.Column='3'><TextBlock>TextWrapping</TextBlock>
	<TextBox DockPanel.Dock='Top' Name='TextWrapping' ToolTip="NoWrap/Wrap/WrapWithOverflow">Wrap</TextBox></StackPanel>	

	<StackPanel Grid.Row='2' Grid.Column='4'><TextBlock>VScrollBarV</TextBlock>
	<TextBox DockPanel.Dock='Top' Name='VScrollBarV' ToolTip="0 = Disabled; 1 = Auto; 2 = Hidden; 3 = Visible">1</TextBox></StackPanel>

	<StackPanel Grid.Row='2' Grid.Column='5'><TextBlock>Width</TextBlock>
	<TextBox DockPanel.Dock='Top' Name='Width'>500</TextBox></StackPanel>

	<StackPanel Grid.Row='2' Grid.Column='6'><TextBlock>Margin</TextBlock>
	<TextBox DockPanel.Dock='Top' Name='Margin'>Auto,Auto,Auto,Auto</TextBox></StackPanel>

	<StackPanel Grid.Row='3' Grid.Column='0'><TextBlock>HorizontalContentAlignment</TextBlock>
	<TextBox DockPanel.Dock='Top' Name='HCA'>Left</TextBox></StackPanel>

	<StackPanel Grid.Row='3' Grid.Column='1'><TextBlock>VerticalContentAlignment</TextBlock>
	<TextBox DockPanel.Dock='Top' Name='VCA'>Top</TextBox></StackPanel>
  </Grid>	

  <Grid ShowGridLines="false" DockPanel.Dock='Right' Background='LightBlue' >
   <Grid.ColumnDefinitions>
    <ColumnDefinition Width="Auto"/>
    <ColumnDefinition Width="Auto"/>
   </Grid.ColumnDefinitions>
   <Grid.RowDefinitions>
    <RowDefinition Height="Auto"/>
    <RowDefinition Height="Auto"/>
    <RowDefinition Height="Auto"/>
    <RowDefinition Height="Auto"/>
    <RowDefinition Height="Auto"/>
    <RowDefinition Height="Auto"/>
    <RowDefinition Height="Auto"/>
    <RowDefinition Height="Auto"/>
   </Grid.RowDefinitions>
	<TextBlock Grid.Row='0' Grid.Column='0'>MaxHeight</TextBlock>
	<TextBox Grid.Row='0' Grid.Column='1' DockPanel.Dock='Top' Name='MaxHeight'></TextBox>

	<TextBlock Grid.Row='1' Grid.Column='0'>MinHeight</TextBlock>
	<TextBox Grid.Row='1' Grid.Column='1' DockPanel.Dock='Top' Name='MinHeight'></TextBox>

	<TextBlock Grid.Row='2' Grid.Column='0'>MaxWidth</TextBlock>
	<TextBox Grid.Row='2' Grid.Column='1' DockPanel.Dock='Top' Name='MaxWidth'></TextBox>

	<TextBlock Grid.Row='3' Grid.Column='0'>MinWidth</TextBlock>
	<TextBox Grid.Row='3' Grid.Column='1' DockPanel.Dock='Top' Name='MinWidth'></TextBox>

	<TextBlock Grid.Row='4' Grid.Column='0'>MaxLines</TextBlock>
	<TextBox Grid.Row='4' Grid.Column='1' DockPanel.Dock='Top' Name='MaxLines' ToolTip="Wont work due to existing binding to Height property"></TextBox>

	<TextBlock Grid.Row='5' Grid.Column='0'>MinLines</TextBlock>
	<TextBox Grid.Row='5' Grid.Column='1' DockPanel.Dock='Top' Name='MinLines' ToolTip="Wont work due to existing binding to Height property"></TextBox>

	<TextBlock Grid.Row='6' Grid.Column='0'>Opacity</TextBlock>
	<TextBox Grid.Row='6' Grid.Column='1' DockPanel.Dock='Top' Name='Opacity'>1</TextBox>

	<TextBlock Grid.Row='7' Grid.Column='0'>Visibility</TextBlock>
	<TextBox  Grid.Row='7' Grid.Column='1' DockPanel.Dock='Top' Name='Visibility' ToolTip="0 = Visible; 1 = Hidden; 2 = Collapsed">0</TextBox>
  </Grid>

 <Border Background="LightGray" Padding="5" BorderBrush="Black" BorderThickness="1">
  <Canvas>
    <TextBox Name='TestTB'
	AcceptsReturn='{Binding Path=IsChecked, ElementName=AcceptsReturn, Mode=OneWay}' 
	AcceptsTab='{Binding Path=IsChecked, ElementName=AcceptsTab, Mode=OneWay}' 
	AutoWordSelection='{Binding Path=IsChecked, ElementName=AutoWordSelection, Mode=OneWay}' 
	IsReadOnly='{Binding Path=IsChecked, ElementName=IsReadOnly, Mode=OneWay}' 
	IsUndoEnabled='{Binding Path=IsChecked, ElementName=IsUndoEnabled, Mode=OneWay}' 
	TextWrapping='{Binding Path=Text, ElementName=TextWrapping, Mode=OneWay}' 
	HorizontalContentAlignment='{Binding Path=Text, ElementName=HCA, Mode=OneWay}'
	VerticalContentAlignment='{Binding Path=Text, ElementName=VCA, Mode=OneWay}'
	TextAlignment='{Binding Path=Text, ElementName=TextAlignment, Mode=OneWay}' 
	ToolTip='{Binding Path=Text, ElementName=ToolTip, Mode=OneWay}'
	AllowDrop='{Binding Path=IsChecked, ElementName=AllowDrop, Mode=OneWay}'
	Focusable='{Binding Path=IsChecked, ElementName=Focusable, Mode=OneWay}'
	IsEnabled='{Binding Path=IsChecked, ElementName=Enabled, Mode=OneWay}'

	Background='{Binding Path=Text, ElementName=Background, Mode=OneWay}'
	CharacterCasing='{Binding Path=Text, ElementName=CharacterCasing, Mode=OneWay}'
	Foreground='{Binding Path=Text, ElementName=Foreground, Mode=OneWay}'
	FontFamily='{Binding Path=Text, ElementName=FontFamily, Mode=OneWay}'
	FontStyle='{Binding Path=Text, ElementName=FontStyle, Mode=OneWay}'
	FontSize='{Binding Path=Text, ElementName=FontSize, Mode=OneWay}'
	FontStretch='{Binding Path=Text, ElementName=FontStretch, Mode=OneWay}'
	FontWeight='{Binding Path=Text, ElementName=FontWeight, Mode=OneWay}'
	HorizontalScrollBarVisibility='{Binding Path=Text, ElementName=HScrollBarV, Mode=OneWay}'
	VerticalScrollBarVisibility='{Binding Path=Text, ElementName=VScrollBarV, Mode=OneWay}'
	Height='{Binding Path=Text, ElementName=Height, Mode=OneWay}'
	Width='{Binding Path=Text, ElementName=Width, Mode=OneWay}'

	FlowDirection='{Binding Path=Text, ElementName=FlowDirection, Mode=TwoWay}'
	BorderBrush='{Binding Path=Text, ElementName=BorderBrush, Mode=OneWay}'
	BorderThickness='{Binding Path=Text, ElementName=BorderThickness, Mode=OneWay}'
	Margin='{Binding Path=Text, ElementName=Margin, Mode=OneWay}'
	Padding='{Binding Path=Text, ElementName=Padding, Mode=OneWay}'

	MaxHeight='{Binding Path=Text, ElementName=MaxHeight, Mode=OneWay}'
	MinHeight='{Binding Path=Text, ElementName=MinHeight, Mode=OneWay}'
	MaxWidth='{Binding Path=Text, ElementName=MaxWidth, Mode=OneWay}'
	MinWidth='{Binding Path=Text, ElementName=MinWidth, Mode=OneWay}'
	MaxLines='{Binding Path=Text, ElementName=MaxLines, Mode=OneWay}'
	MinLines='{Binding Path=Text, ElementName=MinLines, Mode=OneWay}'

	MaxLength='{Binding Path=Text, ElementName=MaxLength, Mode=TwoWay}'

	Visibility='{Binding Path=Text, ElementName=Visibility, Mode=TwoWay}'
	Opacity='{Binding Path=Text, ElementName=Opacity, Mode=TwoWay}'
    >
    Test TextBox
    </TextBox>
  </Canvas>
 </Border>
</DockPanel>
