      </PasswordBox>

    </WrapPanel>

    <WrapPanel Height="150">
      <!--Rotation effect on PasswordBox-->
      <PasswordBox Height="75" Width="150" Password="abc">
        <PasswordBox.Triggers>
          <EventTrigger RoutedEvent="PasswordBox.Loaded">
