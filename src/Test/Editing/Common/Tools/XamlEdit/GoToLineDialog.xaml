<Window x:Class="XamlPadEdit.GoToLineDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="GoTo Line#" Height="140" Width="300" Topmost="True"  
	SizeToContent="Height"
    >
	<Grid >
		<Grid.RowDefinitions>
			<RowDefinition MaxHeight="30"/>
			<RowDefinition MaxHeight="30"/>
			<RowDefinition MaxHeight="40"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Label Name="gotoLineLabel" Grid.ColumnSpan="3"  Grid.Column="0" Grid.Row="0"/>
		<TextBox Name="lineNum" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1" PreviewKeyUp="Text_PreviewKeyUp"/>
		<Button Name ="ok" Content ="OK"  Grid.Column="1" Grid.Row="2" Margin="2"/>
		<Button Name ="cancel" Content="Cancel" Grid.Column="2" Grid.Row="2" Margin="2"/>

	</Grid>
</Window>
