<FlowDocumentScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
    <FlowDocument TextAlignment="Left" PagePadding="0">
        <Table xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            CellSpacing="4"
            Background="#333333">
            <TableRowGroup>
                <TableRow>
                    <TableCell
                        BorderThickness="1,1,1,1"
                        BorderBrush="#cccccc"
                        Foreground="#cccccc"><Paragraph>First Body Row</Paragraph></TableCell>
                </TableRow>
                <TableRow>
                    <TableCell
                        BorderThickness="1,1,1,1"
                        BorderBrush="#cccccc"
                        Foreground="#cccccc"><Paragraph>Second Body Row</Paragraph></TableCell>
                </TableRow>
            </TableRowGroup>
        </Table>
    </FlowDocument>
</FlowDocumentScrollViewer>
