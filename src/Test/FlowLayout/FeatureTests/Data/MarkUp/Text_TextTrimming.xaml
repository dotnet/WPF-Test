<StackPanel
    HorizontalAlignment="Left"
    VerticalAlignment="Top"
    Name="PropertyDumpRoot"
    Background="Beige"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
>
    <TextBlock TextTrimming="CharacterEllipsis" Width="120" Foreground="Navy" FontFamily="Georgia" FontSize="8pt">
        TextTrimming is CharacterEllipsis.
    </TextBlock>

    <TextBlock TextTrimming="WordEllipsis" Width="120" Foreground="Red" FontFamily="Georgia" FontSize="8pt">
        TextTrimming is WordEllipsis.
    </TextBlock>

    <TextBlock TextTrimming="None" Width="100" Foreground="Green" FontFamily="Georgia" FontSize="8pt">
        TextTrimming is None.
    </TextBlock>
</StackPanel>
