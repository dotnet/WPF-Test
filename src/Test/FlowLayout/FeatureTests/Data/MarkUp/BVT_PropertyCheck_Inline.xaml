    <Span Typography.Variants="Superscript" Name="Superscript" FontFamily="Palatino Linotype">SuperScript type</Span>
    <Span Typography.Variants="Subscript" Name="Subscript" FontFamily="Palatino Linotype">Subscript type</Span>
  </Paragraph>
