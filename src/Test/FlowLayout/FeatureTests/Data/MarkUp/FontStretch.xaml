    <Paragraph>fontstretch (condensed)</Paragraph>
	</FlowDocument></FlowDocumentScrollViewer>

	<FlowDocumentScrollViewer><FlowDocument Name="expanded" Background="LightYellow" FontFamily="Palatino LinoType">
    <Paragraph>fontstretch (expanded)</Paragraph>
	</FlowDocument></FlowDocumentScrollViewer>

	<FlowDocumentScrollViewer><FlowDocument Name="extracondensed" Background="LightBlue" FontFamily="Palatino LinoType">
    <Paragraph>fontstretch (extracondensed)</Paragraph>
	</FlowDocument></FlowDocumentScrollViewer>

	<FlowDocumentScrollViewer><FlowDocument Name="extraexpanded" Background="LightYellow" FontFamily="Palatino LinoType">
    <Paragraph>fontstretch (extraexpanded)</Paragraph>
	</FlowDocument></FlowDocumentScrollViewer>

	<FlowDocumentScrollViewer><FlowDocument Name="normal" Background="LightBlue" FontFamily="Palatino LinoType">
    <Paragraph>fontstretch (normal)</Paragraph>
	</FlowDocument></FlowDocumentScrollViewer>

	<FlowDocumentScrollViewer><FlowDocument Name="semicondensed" Background="LightYellow" FontFamily="Palatino LinoType">
    <Paragraph>fontstretch (semicondensed)</Paragraph>
	</FlowDocument></FlowDocumentScrollViewer>

	<FlowDocumentScrollViewer><FlowDocument Name="semiexpanded"  Background="LightBlue" FontFamily="Palatino LinoType">
    <Paragraph>fontstretch (semiexpanded)</Paragraph>
	</FlowDocument></FlowDocumentScrollViewer>

	<FlowDocumentScrollViewer><FlowDocument Name="ultracondensed" Background="LightYellow" FontFamily="Palatino LinoType">
    <Paragraph>fontstretch (ultracondensed)</Paragraph>
	</FlowDocument></FlowDocumentScrollViewer>

	<FlowDocumentScrollViewer><FlowDocument Name="ultraexpanded" Background="LightBlue" FontFamily="Palatino LinoType">
    <Paragraph>fontstretch  (ultraexpanded)</Paragraph>
	</FlowDocument></FlowDocumentScrollViewer>
</StackPanel>
