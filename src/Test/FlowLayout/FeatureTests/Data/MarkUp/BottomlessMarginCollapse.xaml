<UniformGrid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        Background="White"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Name="Root"
        Rows="1"
>
    <FlowDocumentScrollViewer><FlowDocument Background="Pink" PagePadding="0">
        <Paragraph Background="Wheat" Margin="0">
		Margin="0"<LineBreak />
		The margin between me and the top of the document should be 0px<LineBreak />
		The margin between me and the next paragraph should be 30px
	</Paragraph>

        <Paragraph Background="Yellow" Margin="0, 30">
            Margin="0, 30"<LineBreak />
		The margin between me and the next paragraph should be 30px not 60px
        </Paragraph>
        <Paragraph Background="LightBlue" Margin="0, 30">
            Margin="0, 30"<LineBreak />
		The margin between me and the next paragraph should be 60px not 90 px
        </Paragraph>
        <Paragraph Background="LightGreen" Margin="0, 60">
            Margin="0, 60"<LineBreak />
        </Paragraph>
    </FlowDocument></FlowDocumentScrollViewer>
</UniformGrid>
