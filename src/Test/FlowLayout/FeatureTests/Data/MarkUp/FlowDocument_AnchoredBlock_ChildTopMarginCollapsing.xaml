<Section xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" FontSize="14">
	<Paragraph>
		<Figure Background="LightBlue" Margin="0" Padding="0" VerticalAnchor="PageTop">
			<Paragraph BorderBrush="Red" BorderThickness="2" Margin="10">This is a Paragraph in a Figure with Margin="10".</Paragraph>
		</Figure>
	</Paragraph>

	<Paragraph>
		<Floater Background="LightGray" HorizontalAlignment="Left" Margin="0" Padding="0">
			<Paragraph BorderBrush="Red" BorderThickness="2" Margin="10">This is a Paragraph in a Floater with Margin="10".</Paragraph>
		</Floater>
	</Paragraph>


	<Paragraph>
		<Figure Background="LightBlue" Margin="0" Padding="0" VerticalAnchor="PageBottom">
			<Table BorderBrush="Red" BorderThickness="2" Margin="10">
				<TableRowGroup>
					<TableRow>
						<TableCell><Paragraph>This is a Table in a Figure with Margin="10".</Paragraph></TableCell>
					</TableRow>
				</TableRowGroup>
			</Table>
		</Figure>
	</Paragraph>

	<Paragraph>
		<Floater Background="LightGray" Margin="0" Padding="0">
			<Table BorderBrush="Red" BorderThickness="2" Padding="0" Margin="10">
				<TableRowGroup>
					<TableRow>
						<TableCell><Paragraph>This is a Table in a Floater with Margin="10".</Paragraph></TableCell>
					</TableRow>
				</TableRowGroup>
			</Table>
		</Floater>
	</Paragraph>
</Section>