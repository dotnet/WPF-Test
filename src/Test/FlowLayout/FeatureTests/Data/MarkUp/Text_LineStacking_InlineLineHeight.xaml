<StackPanel
    HorizontalAlignment="Left"
    VerticalAlignment="Top"
    Background="Beige"
    Name="PropertyDumpRoot"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
>
  <Border Width="300" Height="150" Background="Yellow">
      <TextBlock TextWrapping="WrapWithOverflow" FontSize="10pt">LineStackingStrategy is now deprecated!! Font Size is 10 pt, LineHeight is default, LineStackingStrategy is InlineLineHeight</TextBlock>
  </Border>
  <Border Width="300" Height="150" Background="LightGray">
      <TextBlock TextWrapping="WrapWithOverflow" FontSize="10pt" LineHeight="25">Font Size is 10 pt, LineHeight is 25pt, LineStackingStrategy is InlineLineHeight</TextBlock>
  </Border>
  <Border Width="300" Height="150" Background="AliceBlue">
      <TextBlock TextWrapping="WrapWithOverflow" FontSize="10pt" LineHeight="5">Font Size is 10 pt, LineHeight is 5pt, LineStackingStrategy is InlineLineHeight</TextBlock>
  </Border>
</StackPanel>
