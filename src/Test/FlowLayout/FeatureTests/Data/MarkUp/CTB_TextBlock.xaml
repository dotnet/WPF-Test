<Section xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
	<Paragraph>ClipToBounds="False":</Paragraph>
	<BlockUIContainer>
		<TextBlock Background="LightGreen" ClipToBounds="False" Width="400" Height="30" HorizontalAlignment="Left">
			<Canvas Background="Red" Width="500" Height="10" Margin="0,10"/>
		</TextBlock>
	</BlockUIContainer>
	<Paragraph>ClipToBounds="True":</Paragraph>
	<BlockUIContainer>
		<TextBlock Background="LightGreen" ClipToBounds="True" Width="400" Height="30" HorizontalAlignment="Left">
			<Canvas Background="Red" Width="500" Height="10" Margin="0,10"/>
		</TextBlock>
	</BlockUIContainer>
</Section>