<Section xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" FontSize="16"> 
	<Table Background="Tan" CellSpacing="10" BorderBrush="Green" BorderThickness="5">
		<Table.Resources>
			<Style TargetType="{x:Type TableCell}">
                         	<Setter Property="BorderBrush" Value="Black" />
                            	<Setter Property="BorderThickness" Value="2" />
                        </Style>
		</Table.Resources>
		
		<TableRowGroup Background="Red">
			<TableRow Background="Yellow">
				<TableCell Background="black" RowSpan="2"><Paragraph Foreground="White">1</Paragraph></TableCell>
				<TableCell><Paragraph>2</Paragraph></TableCell>
				<TableCell><Paragraph>3</Paragraph></TableCell>
			</TableRow>
			<TableRow>
				<TableCell><Paragraph>4</Paragraph></TableCell>
				<TableCell><Paragraph>5</Paragraph></TableCell>
			</TableRow>
		</TableRowGroup>

		<TableRowGroup>
			<TableRow>
				<TableCell><Paragraph>6</Paragraph></TableCell>
				<TableCell Background="LightGreen" ColumnSpan="2"><Paragraph>7</Paragraph></TableCell>
			</TableRow>
			<TableRow>
				<TableCell ColumnSpan="2"><Paragraph>8</Paragraph></TableCell>
				<TableCell><Paragraph>9</Paragraph></TableCell>
			</TableRow>
		</TableRowGroup>
    <Table.Columns>
      <TableColumn Background="LightBlue" />
      <TableColumn />
      <TableColumn />
    </Table.Columns>
	</Table>
</Section> 
