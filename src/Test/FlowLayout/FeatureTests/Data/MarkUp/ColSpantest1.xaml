<Border xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Background="cornsilk" BorderThickness="1,1,1,1" BorderBrush="red">
	<FlowDocumentScrollViewer Width="400px" Height="400px" HorizontalAlignment="Left" VerticalAlignment="Top"><FlowDocument>
	<Table>
    <Table.Columns>
      <TableColumn Background="lightblue" />
      <TableColumn Background="lightpink" />
      <TableColumn Background="lightgreen" />
      </Table.Columns>
		<TableRowGroup>
			<TableRow>
				<TableCell BorderThickness="1,1,1,1" BorderBrush="blue" ColumnSpan="5"><Paragraph>ColSpan:5</Paragraph></TableCell>
			</TableRow>
			<TableRow>
				<TableCell BorderThickness="1,1,1,1" BorderBrush="blue" ColumnSpan="2"><Paragraph>ColSpan:2</Paragraph></TableCell>
				<TableCell BorderThickness="1,1,1,1" BorderBrush="blue"><Paragraph>ColSpan:1</Paragraph></TableCell>
			</TableRow>
			<TableRow>
				<TableCell BorderThickness="1,1,1,1" BorderBrush="blue"><Paragraph>ColSpan:1</Paragraph></TableCell>
				<TableCell BorderThickness="1,1,1,1" BorderBrush="blue"><Paragraph>ColSpan:1</Paragraph></TableCell>
				<TableCell BorderThickness="1,1,1,1" BorderBrush="blue" ColumnSpan="2"><Paragraph>ColSpan:2</Paragraph></TableCell>
			</TableRow>
			<TableRow>
				<TableCell BorderThickness="1,1,1,1" BorderBrush="blue"><Paragraph>ColSpan:1</Paragraph></TableCell>
				<TableCell BorderThickness="1,1,1,1" BorderBrush="blue"><Paragraph>ColSpan:1</Paragraph></TableCell>
				<TableCell BorderThickness="1,1,1,1" BorderBrush="blue"><Paragraph>ColSpan:1</Paragraph></TableCell>
			</TableRow>
		</TableRowGroup>
	</Table>
	</FlowDocument></FlowDocumentScrollViewer>
</Border>
