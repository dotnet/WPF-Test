<Section xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:sys="clr-namespace:System;assembly=mscorlib" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" FontSize="14">
	<Paragraph LineStackingStrategy="MaxHeight" LineHeight="8" Background="LightGreen">This is a Paragraph with LineHeight = 8 and LineStackingStrategy=MaxHeight</Paragraph>
	<Paragraph LineStackingStrategy="BlockLineHeight" LineHeight="8" Background="LightBlue">This is a Paragraph with LineHeight = 8 and LineStackingStrategy=BlockLineHeight</Paragraph>
	<Paragraph LineStackingStrategy="MaxHeight" LineHeight="8" Background="LightGreen">This is a Paragraph with LineHeight = 8 and LineStackingStrategy=MaxHeight <Canvas Margin="0" Height="30" Width="30" Background="Red"/></Paragraph>
	<Paragraph LineStackingStrategy="BlockLineHeight" LineHeight="8" Background="LightBlue">This is a Paragraph with LineHeight = 8 and LineStackingStrategy=BlockLineHeight <Canvas Margin="0" Height="30" Width="30" Background="Blue"/></Paragraph>	
	<BlockUIContainer BorderThickness="2" BorderBrush="Green">
		<StackPanel>
			<TextBlock LineStackingStrategy="MaxHeight" LineHeight="8" Background="Pink" TextWrapping="Wrap">This is a TextBlock with LineHeight = 8 and LineStackingStrategy=MaxHeight</TextBlock>
			<TextBlock LineStackingStrategy="BlockLineHeight" LineHeight="8" Background="LightGray" TextWrapping="Wrap" Margin="0,10,0,0">This is a TextBlock with LineHeight = 8 and LineStackingStrategy=BlockLineHeight</TextBlock>
			<TextBlock LineStackingStrategy="MaxHeight" LineHeight="8" Background="Pink" TextWrapping="Wrap" Margin="0,10,0,0">This is a TextBlock with LineHeight = 8 and LineStackingStrategy=MaxHeight <Canvas Margin="0" Height="30" Width="30" Background="Red"/></TextBlock>
			<TextBlock LineStackingStrategy="BlockLineHeight" LineHeight="15" Background="LightGray" TextWrapping="Wrap" Margin="0,10,0,0">This is a TextBlock with LineHeight = 15 and LineStackingStrategy=BlockLineHeight <Canvas Margin="0" Height="30" Width="30" Background="Blue"/></TextBlock>
		</StackPanel>
	</BlockUIContainer>	
	<Table BorderThickness="2" BorderBrush="Orange" Padding="5">
		<Table.Resources>
			<Style TargetType="{x:Type TableCell}">
				<Setter Property="BorderBrush" Value="Black"/>
				<Setter Property="BorderThickness" Value="1"/>
			</Style>
		</Table.Resources>
		<TableRowGroup>
			<TableRow Background="Yellow">
				<TableCell LineStackingStrategy="MaxHeight" LineHeight="8"><Paragraph>This is a TableCell with LineHeight = 8 and LineStackingStrategy = MaxHeight</Paragraph></TableCell>
				<TableCell LineStackingStrategy="BlockLineHeight" LineHeight="8"><Paragraph>This is a TableCell with LineHeight = 8 and LineStackingStrategy = BlockLineHeight</Paragraph></TableCell>
			</TableRow>
			<TableRow Background="Aqua">
				<TableCell LineStackingStrategy="MaxHeight" LineHeight="8"><Paragraph>This is a TableCell with LineHeight = 8 and LineStackingStrategy = MaxHeight <Canvas Margin="0" Height="30" Width="30" Background="Red"/></Paragraph></TableCell>
				<TableCell LineStackingStrategy="BlockLineHeight" LineHeight="15"><Paragraph>This is a TableCell with LineHeight = 15 and LineStackingStrategy = BlockLineHeight <Canvas Margin="0" Height="30" Width="30" Background="Blue"/></Paragraph></TableCell>
			</TableRow>
		</TableRowGroup>
	</Table>
	<List>
		<ListItem LineStackingStrategy="MaxHeight" LineHeight="8" Background="LightYellow"><Paragraph>This is a ListItem with LineHeight = 8 and LineStackingStrategy = MaxHeight </Paragraph></ListItem>
		<ListItem LineStackingStrategy="BlockLineHeight" LineHeight="8" Background="Tan" Margin="0,5,0,0"><Paragraph>This is a ListItem with LineHeight = 8 and LineStackingStrategy = BlockLineHeight </Paragraph></ListItem>
		<ListItem LineStackingStrategy="MaxHeight" LineHeight="8" Background="LightYellow" Margin="0,5,0,0"><Paragraph>This is a ListItem with LineHeight = 8 and LineStackingStrategy = MaxHeight <Canvas Margin="0" Height="30" Width="30" Background="Red"/></Paragraph></ListItem>
		<ListItem LineStackingStrategy="BlockLineHeight" LineHeight="15" Background="Tan" Margin="0,5,0,0"><Paragraph>This is a ListItem with LineHeight = 15 and LineStackingStrategy = BlockLineHeight <Canvas Margin="0" Height="30" Width="30" Background="Blue"/></Paragraph></ListItem>
	</List>
</Section>

