<Section xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Section.Resources>
		<Style TargetType="{x:Type Paragraph}">
			<Setter Property="Margin" Value="0" />
		</Style>
		<Style TargetType="{x:Type List}">
			<Setter Property="Margin" Value="0" />
		</Style>
	</Section.Resources>
	<List MarkerStyle="UpperRoman">
		<ListItem><Paragraph>item</Paragraph></ListItem>
		<ListItem><Paragraph>item</Paragraph></ListItem>
		<ListItem><Paragraph>item</Paragraph>
	        <List MarkerStyle="UpperLatin">
		        <ListItem><Paragraph>sub item</Paragraph></ListItem>	       
		        <ListItem><Paragraph>sub item</Paragraph>
	                <List MarkerStyle="Decimal">
		                <ListItem><Paragraph>sub sub item</Paragraph>
	                        <List MarkerStyle="LowerRoman">
		                        <ListItem><Paragraph>sub sub sub item</Paragraph></ListItem>
		                        <ListItem><Paragraph>sub sub sub item</Paragraph></ListItem>
		                        <ListItem><Paragraph>sub sub sub item</Paragraph>
	                                <List MarkerStyle="LowerLatin">
		                                <ListItem><Paragraph>sub sub sub sub item</Paragraph></ListItem>
		                                <ListItem><Paragraph>sub sub sub sub item</Paragraph></ListItem>
		                                <ListItem><Paragraph>sub sub sub sub item</Paragraph></ListItem>
	                                </List>
                                </ListItem>
                            </List>
                        </ListItem>
                        <ListItem><Paragraph>sub sub item</Paragraph></ListItem>
		                <ListItem><Paragraph>sub sub item</Paragraph></ListItem>
                    </List>
                </ListItem>
                 <ListItem><Paragraph>sub item</Paragraph></ListItem>
            </List>
        </ListItem>
	    <ListItem><Paragraph>item</Paragraph>
            <List MarkerStyle="UpperLatin">
		            <ListItem><Paragraph>sub item</Paragraph></ListItem>
		            <ListItem><Paragraph>sub item</Paragraph>
                        <List MarkerStyle="Decimal">
		                    <ListItem><Paragraph>sub sub item</Paragraph></ListItem>
		                    <ListItem><Paragraph>sub sub item</Paragraph></ListItem>
		                    <ListItem><Paragraph>sub sub item</Paragraph></ListItem>
	                    </List>
                    </ListItem>
		            <ListItem><Paragraph>sub item</Paragraph></ListItem>
	        </List>
        </ListItem>
    </List>
</Section>

