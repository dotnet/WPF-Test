<FlowDocumentScrollViewer Name="textpanel" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
<FlowDocument>
<Table Name="table" Background="RoyalBlue">
  <Table.Columns>
    <TableColumn Name="column" Width="200" Background="LightYellow" />
  </Table.Columns>
<TableRowGroup Name="header">
	<TableRow Name="header_row" Background="SkyBlue">
		<TableCell Name="header_row_cell" FontSize="20"><Paragraph>this cell is in the header</Paragraph></TableCell>
	</TableRow>
</TableRowGroup>

<TableRowGroup Name="body">
	<TableRow Name="body_row" Background="SkyBlue">
		<TableCell Name="body_row_cell" FontSize="20"><Paragraph>this cell is in the body</Paragraph></TableCell>
	</TableRow>
</TableRowGroup>

<TableRowGroup Name="footer">
	<TableRow Name="footer_row" Background="SkyBlue">
		<TableCell Name="footer_row_cell" FontSize="20"><Paragraph>this cell is in the footer</Paragraph></TableCell>
	</TableRow>
</TableRowGroup>

</Table>

</FlowDocument></FlowDocumentScrollViewer>
