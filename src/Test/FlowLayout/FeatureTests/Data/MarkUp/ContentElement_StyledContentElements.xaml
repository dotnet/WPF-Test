<Section xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Background="LightGray" FontSize="16"> 
	<Section.Resources>
	        <Style x:Key="bold" TargetType="{x:Type Bold}">	 
			<Setter Property="FontSize" Value="24" />
	        </Style>
	         <Style x:Key="italic" TargetType="{x:Type Italic}">
			<Setter Property="FontSize" Value="24" />
	        </Style> 
    	</Section.Resources>
    	
	<Paragraph TextAlignment="Center">
		<LineBreak />
		<Bold Style="{DynamicResource bold}">I'm a styled Bold element.</Bold>	
		<LineBreak />
		<Bold FontSize="24">I'm a Bold element that is not styled.</Bold>	
		<LineBreak />
		<Italic Style="{DynamicResource italic}">I'm a styled Italic element.</Italic>	
		<LineBreak />
		<Italic FontSize="24">I'm an Italic element that is not styled.</Italic>
		<LineBreak />
	</Paragraph>
</Section>
