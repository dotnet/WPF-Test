<StackPanel
    HorizontalAlignment="Left"
    VerticalAlignment="Top"
    Background="Beige"
    Name="PropertyDumpRoot"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
>
    <TextBlock
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Width="200px"
        Foreground="Navy"
        TextWrapping="WrapWithOverflow"
        FontFamily="Georgia"
        FontSize="8pt"
    >
        This is a TextRange that should be 200px wide
    </TextBlock>
    
    <TextBlock
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Width="300px"
        Foreground="Red"
        TextWrapping="WrapWithOverflow"
        FontFamily="Georgia"
        FontSize="8pt"
    >
        While this TextRange, slightly longer, is 300px wide
    </TextBlock>
</StackPanel>
