<DockPanel
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="Microsoft.Test.Graphics.AnimatedCubeSphere"
    Name="TOPLEVELCONTAINER"
    Background="Blue" >
    
    <Viewport3D Name="VIEWPORT" ClipToBounds="true" Initialized="OnLoaded" >
        <Viewport3D.Camera>
            <PerspectiveCamera
                Position="15,12,15"
                LookDirection="-16,-12,-16"
                UpDirection="0,1,0"
                NearPlaneDistance="1"
                FarPlaneDistance="200"
                FieldOfView="45" />
        </Viewport3D.Camera>
    </Viewport3D>
</DockPanel>