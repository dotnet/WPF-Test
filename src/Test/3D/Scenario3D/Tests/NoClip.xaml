<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="Microsoft.Test.Graphics.NoClip"
    >
    <Grid Background="DarkBlue">
        <Canvas Background="Orange" Name="CONTAINER">

            <Button>Hello</Button>
            <Ellipse
                Fill="Red"
                Stroke="Yellow"
                StrokeThickness="3.5"
                Width="200" Height="200"
                Canvas.Top="200"
                Canvas.Left="100" />

            <Viewport3D
                Name="VIEWPORT"
                Initialized="OnLoaded"
                Width="200"
                Height="200"
                ClipToBounds="false"
                Canvas.Left="100"
                Canvas.Top="100" />

        </Canvas>
    </Grid>
</Page>