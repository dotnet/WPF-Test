    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="Microsoft.Test.Graphics.DiffuseMaterialSampler"
    >
    <Viewport3D Name="VIEWPORT" ClipToBounds="true" Initialized="OnLoaded">
        <Viewport3D.Camera>
            <PerspectiveCamera
                Position="5.2,3.8,5.2"
                LookDirection="-5.2,-2.8,-5.2"
                UpDirection="0,1,0"
                NearPlaneDistance="1"
                FarPlaneDistance="200"
                FieldOfView="45" />
        </Viewport3D.Camera>
    </Viewport3D>
</Page>