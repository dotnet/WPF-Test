<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="Microsoft.Test.Graphics.MorphMesh"
    >
    <DockPanel Background="Black">
        <DockPanel Name="VISUAL_BRUSH_HOST" Background="#00000000" DockPanel.Dock="Bottom" LastChildFill="false">
            <Border>
                <Border Margin="10" Name="CAPTION">
                    <TextBox
                        Background="#00000000"
                        Foreground="Green"
                        DockPanel.Dock="Bottom"
                        Width="80"
                        Height="45"
                        AcceptsReturn="true"
                        FontWeight="Bold" />
                </Border>
            </Border>
        </DockPanel>
        <DockPanel Background="Black">
            <Viewport3D
                Name="VIEWPORT"
                ClipToBounds="true"
                Initialized="OnLoaded" />
        </DockPanel>
    </DockPanel>
</Page>