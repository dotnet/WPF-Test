<Grid
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    >
    <Viewport3D>
        <Viewport.Camera>
            <PerspectiveCamera
                FarPlaneDistance="100"
                LookDirection="0,0,-1"
                UpDirection="0,1,0"
                NearPlaneDistance="1"
                Position="0,0,10"
                FieldOfView="45"
                  />
        </Viewport.Camera>

        <ModelVisual3D>

            <!-- ModelVisual3D isn't allowed to have non-Visual3D children -->

            <Model3DGroup>
                <AmbientLight Color="#FF252525" />
                <GeometryModel3D />
            </Model3DGroup>

        </ModelVisual3D>
    </Viewport3D>
</Grid>
