<Grid
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    >
    <Viewport3D>
        <Viewport3D.Camera>
            <PerspectiveCamera
                FarPlaneDistance="100"
                LookDirection="0,0,-1"
                UpDirection="0,1,0"
                NearPlaneDistance="1"
                Position="0,0,10"
                FieldOfView="45"
                  />
        </Viewport3D.Camera>
        <ModelVisual3D>
            <ModelVisual3D.Content>
                <Model3DGroup>
                    <AmbientLight Color="#FF252525" />
                    <GeometryModel3D>
                        <GeometryModel3D.Material>
                            <MaterialGroup>
                                <DiffuseMaterial Brush="red" />

                                <!-- This isn't a Material! -->
                                <PerspectiveCamera />

                                <SpecularMaterial Brush="white" />
                            </MaterialGroup>
                        </GeometryModel3D.Material>
                    </GeometryModel3D>
                </Model3DGroup>
            </ModelVisual3D.Content>
        </ModelVisual3D>
    </Viewport3D>
</Grid>
