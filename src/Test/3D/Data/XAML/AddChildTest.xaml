     The goal of this file is to cover the IAddChild interface implementations for our collection classes -->

<!-- Groups that have Children properties need to test IAddChild interfaces for both themselves and their Children -->

<Grid
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xml:space="preserve"
    >
    <Canvas>
        <Canvas.Resources>
            <Transform3DGroup x:Key="transforms">
                <TranslateTransform3D />
                <RotateTransform3D />
                <ScaleTransform3D />
                <MatrixTransform3D />
            </Transform3DGroup>

            <Transform3DGroup x:Key="transformchildrens">
                <Transform3DGroup.Children>
                    <TranslateTransform3D />
                    <RotateTransform3D />
                    <ScaleTransform3D />
                    <MatrixTransform3D />
                </Transform3DGroup.Children>
            </Transform3DGroup>

            <Transform3DGroup x:Key="transformchildrenses">
                <Transform3DGroup.Children>
                    <Transform3DGroup>
                        <TranslateTransform3D />
                        <RotateTransform3D />
                        <ScaleTransform3D />
                        <MatrixTransform3D />
                    </Transform3DGroup>
                </Transform3DGroup.Children>
            </Transform3DGroup>

            <Model3DGroup x:Key="models">
                <AmbientLight />
                <DirectionalLight />
                <PointLight />
                <SpotLight />
                <Model3DGroup />
                <GeometryModel3D />
            </Model3DGroup>

            <Model3DGroup x:Key="modelchildrens">
                <Model3DGroup.Children>
                    <AmbientLight />
                    <DirectionalLight />
                    <PointLight />
                    <SpotLight />
                    <Model3DGroup />
                    <GeometryModel3D />
                </Model3DGroup.Children>
            </Model3DGroup>

            <Model3DGroup x:Key="modelchildrenses">
                <Model3DGroup.Children>
                    <Model3DGroup>
                        <AmbientLight />
                        <DirectionalLight />
                        <PointLight />
                        <SpotLight />
                        <Model3DGroup />
                        <GeometryModel3D />
                    </Model3DGroup>
                </Model3DGroup.Children>
            </Model3DGroup>

            <ModelVisual3D x:Key="visual">
                <ModelVisual3D />
                <ModelVisual3D>
                    <ModelVisual3D />
                    <ModelVisual3D />
                    <ModelVisual3D />
                    <ModelVisual3D>
                    </ModelVisual3D>
                </ModelVisual3D>
            </ModelVisual3D>

            <ModelVisual3D x:Key="visualchildrens">
                <ModelVisual3D.Children>
                    <ModelVisual3D />
                    <ModelVisual3D>
                        <ModelVisual3D.Children>
                            <ModelVisual3D />
                            <ModelVisual3D />
                            <ModelVisual3D />
                            <ModelVisual3D>
                            </ModelVisual3D>
                        </ModelVisual3D.Children>
                    </ModelVisual3D>
                </ModelVisual3D.Children>
            </ModelVisual3D>

<!--

	This is no longer valid

