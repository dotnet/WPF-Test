<?xml version="1.0" ?>
<INIT
    Class="Visual3DActionTest"
    SilhouetteEdgeTolerance="0.4"
    WindowWidth="300"
    WindowHeight="300"
    Filename="Visual3DChildren.xaml"
    DefaultColorTolerance="4,4,4,4"
    UseViewport3D="true"
    >

    <VARIATION
        Action="RemoveVisual"
        Visual="Children[0]"
        />
    <VARIATION
        Action="RemoveVisual"
        Visual="Children[1]"
        />
    <VARIATION
        Action="RemoveVisual"
        Visual="Children[2]"
        />
    <VARIATION
        Action="RemoveVisual"
        Visual="Children[2].Children[1]"
        />
    <VARIATION
        Action="RemoveVisual"
        Visual="Children[2].Children[1].Children[0]"
        />
    <VARIATION
        Action="RemoveVisual"
        Visual="Children[2].Children[1].Children[0].Children[0]"
        />

    <VARIATION
        Action="InsertVisual"
        Name="WhiteAmbient"
        Location="Children[0].Children[0]"
        />
    <VARIATION
        Action="InsertVisual"
        Name="FullScreenMesh"
        Location="Children[2].Children[1].Children[0].Children[1].Children[0]"
        />

    <VARIATION
        Action="MoveVisual"
        From="Children[2].Children[1].Children[0].Children[1]"
        To="Children[0].Children[0]"
        />
    <VARIATION
        Action="MoveVisual"
        From="Children[2]"
        To="Children[1].Children[0]"
        />

    <VARIATION
        Action="CopyVisual"
        From="Children[2]"
        To="Children[1].Children[0]"
        />

    <VARIATION
        Action="SwapVisuals"
        Visual1="Children[0]"
        Visual2="Children[1]"
        />
    <VARIATION
        Action="SwapVisuals"
        Visual1="Children[1]"
        Visual2="Children[2]"
        />

  <VARIATION
       Action="ClearVisual"
       Visual="Children[0]"
        />
  <VARIATION
      Action="ClearVisual"
      Visual="Children[2].Children[1]"
        />
  <VARIATION
      Action="ClearVisual"
      Visual="Children[2].Children[1].Children[0]"
        />
  <VARIATION
      Action="ClearVisual"
      Visual="Children[2].Children[1].Children[0].Children[0]"
      />

</INIT>
