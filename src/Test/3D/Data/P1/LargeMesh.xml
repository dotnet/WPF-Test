<?xml version="1.0" ?>
<INIT
    Class="RenderingTest3D"
    LogFilePrefix="LargeMeshTest"

    BackgroundColor="255,0,0,0"
    WindowWidth="300"
    WindowHeight="200"

    PixelToEdgeTolerance="0.0"
    TextureLookUpTolerance="0.6"
    SilhouetteEdgeTolerance="1"
    LogRendererPerformance="true"
    DefaultColorTolerance="4,4,4,4"

    LightColor="255,255,255,255"
    LightType="Ambient"

    Material="255,255,155,0"

    CameraType="Perspective"
    CameraPosition="0,0,5"
    CameraLookDirection="0,0,-1"
    CameraUp="0,1,0"
    CameraFieldOfView="45"
    CameraNearPlaneDistance="1"
    CameraFarPlaneDistance="20"

    >


    <!-- Test with nxn grids -->
    <VARIATION
        Mesh="CreateFlatGridUV 50 50 0 0,0 2,2"
        Description="50x50 grid."
        />
    <VARIATION
        Mesh="CreateFlatGridUV 100 100 0 0,0 2,2"
        Description="100x100 grid."
        />
    <VARIATION
        Mesh="CreateFlatGridUV 200 200 0 0,0 2,2"
        Description="200x200 grid."
        />


    <!-- Test with nxn spheres -->
    <VARIATION
        Mesh="Sphere 50 50 1.2"
        Description="50x50 sphere."
        />
    <VARIATION
        Mesh="Sphere 100 100 1.2"
        Description="100x100 sphere."
        />
    <VARIATION
        Mesh="Sphere 200 200 1.2"
        Description="200x200 sphere."
        />
    <VARIATION
        Mesh="Sphere 400 400 1.2"
        Description="400x400 sphere."
        />


    <!-- Test with n-spoked discs -->
    <VARIATION
        Mesh="CreateFlatDisc 50"
        Description="50-spoked disc"
        />
    <VARIATION
        Mesh="CreateFlatDisc 200"
        Description="200-spoked disc"
        />
    <VARIATION
        Mesh="CreateFlatDisc 800"
        Description="800-spoked disc"
        />
    <VARIATION
        Mesh="CreateFlatDisc 3200"
        Description="3200-spoked disc"
        />
    <VARIATION
        Mesh="CreateFlatDisc 12800"
        Description="12800-spoked disc"
        />
    <VARIATION
        Mesh="CreateFlatDisc 25600"
        Description="25600-spoked disc"
        />


</INIT>
