<?xml version="1.0" ?>
<INIT
    Class="RenderingTest3D"
    LogFilePrefix="MipMap_HiFreq"

    BackgroundColor="255,0,0,0"
    WindowWidth="300"
    WindowHeight="300"

    PixelToEdgeTolerance="0.0"
    TextureLookUpTolerance="0.2"
    SilhouetteEdgeTolerance="4"
    LogRendererPerformance="true"

    LightColor="255,255,255,255"
    LightType="Ambient"

    Mesh="FullScreenMesh"

    MaterialType="Diffuse"
    Material="moo.bmp"

    CameraType="Perspective"
    CameraUp="0,1,0"
    CameraFieldOfView="45"
    CameraNearPlaneDistance="1"
    CameraFarPlaneDistance="100"
