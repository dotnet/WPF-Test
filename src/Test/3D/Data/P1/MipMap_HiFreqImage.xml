        Description="Distance test, small minification distance."
        />

    <VARIATION
        CameraPosition="0,0,16"
        CameraLookDirection="0,0,-1"
        Description="Distance test, medium minification distance."
        />

    <VARIATION
        CameraPosition="0,0,32"
        CameraLookDirection="0,0,-1"
        Description="Distance test, large minification distance."
        />

    <VARIATION
        CameraPosition="0,0,64"
        CameraLookDirection="0,0,-1"
        Description="Distance test, very large minification distance."
        />

