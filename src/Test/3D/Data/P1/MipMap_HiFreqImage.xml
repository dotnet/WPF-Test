    <VARIATION
        CameraPosition="2,0,2"
        CameraLookDirection="-1,0,-1"
        Description="Angle test, medium."
        />

    <VARIATION
        CameraPosition="2,0,.4"
        CameraLookDirection="-2,0,-.4"
        Description="Angle test, medium sharp."
        />

    <VARIATION
        CameraPosition="2,0,.2"
        CameraLookDirection="-2,0,-.2"
        Description="Angle test, sharp."
        />

    <VARIATION
        CameraPosition="2,0,.02"
        CameraLookDirection="-2,0,-.02"
        Description="Angle test, edge on."
        />

    <VARIATION
        CameraPosition="2,2,2"
        CameraLookDirection="-1,-1,-1"
        Description="Angle test, horizontal and vertical, low."
        />

    <VARIATION
        CameraPosition="2,2,.4"
        CameraLookDirection="-2,-2,-.4"
        Description="Angle test, horizontal and vertical, medium."
