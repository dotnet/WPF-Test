<?xml version="1.0" ?>
<INIT
    Class="TemplateTest"
    WindowWidth="200"
    WindowHeight="200"
    LogFilePrefix="TemplateTest"
    BackgroundColor="255,255,255,255"
    PixelToEdgeTolerance="0.05"

    UseViewport3D="true"

    Scene="Explicit"
    Visual0="FullScreenMesh"
    Visual1="WhitePoint"
    Camera="PerspectiveDefault"
    >

<!--
     Test the major derivites of Control & Page 
     DocumentViewer and StickyNote control are not supported
-->
    <VARIATION
        TargetType="System.Windows.Controls.Button"
        />
    <VARIATION
        VisualTransform1="Rotate 0,1,0 15"
        TargetType="System.Windows.Controls.Frame"
        />
    <VARIATION
        VisualTransform1="Rotate 0,1,0 30"
        TargetType="System.Windows.Controls.FlowDocumentReader"
        />
    <VARIATION
        VisualTransform1="Rotate 0,1,0 45"
        TargetType="System.Windows.Controls.FlowDocumentScrollViewer"
        />
    <VARIATION
        VisualTransform1="Rotate 0,1,0 60"
        Visual00="FullScreenMesh"
        VisualTransform00="Translate 1,0,-1"
        Visual01="FullScreenMesh"
        VisualTransform01="Translate -1,0,-1"
        Visual010="FullScreenMesh"
        VisualTransform010="Translate 1,-1,0"
        Visual0100="FullScreenMesh"
        VisualTransform0100="Translate 0,2,0"
        TargetType="System.Windows.Controls.Menu"
        />
    <VARIATION
        VisualTransform1="Rotate 0,1,0 75"
        Visual2="Spiral 2 18 1.3 2.0"
        BackMaterial2="255,127,235,120"
        TargetType="System.Windows.Controls.PasswordBox"
        />
    <VARIATION
        VisualTransform1="Rotate 0,1,0 60"
        TargetType="System.Windows.Controls.Slider"
        />
    <VARIATION
        VisualTransform1="Rotate 0,1,0 45"
        TargetType="System.Windows.Controls.Primitives.ResizeGrip"
        />
    <VARIATION
        VisualTransform1="Rotate 0,1,0 30"
        TargetType="System.Windows.Controls.TextBox"
        />
    <VARIATION
        VisualTransform1="Rotate 0,1,0 15"
        TargetType="System.Windows.Controls.Primitives.Thumb"
        />

<!-- troublemaker

    <VARIATION
        VisualTransform1="Rotate 0,1,0 -60"
        TargetType="System.Windows.Controls.Separator"
        />
-->

    <VARIATION
        TargetType="System.Windows.Controls.Page"
        />

</INIT>