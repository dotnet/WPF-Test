<?xml version="1.0" ?>
<INIT
    Class="RenderingTest3D"
    LogFilePrefix="TranslateTransform3DTest"
    PixelToEdgeTolerance="0.05"

    Mesh="SingleFrontFacingTriangle"
    Material="255,255,0,0"
    Camera="PerspectiveDefault"
    Light="WhiteAmbient"
    TransformType="Translate"

    SaveExpectedZBuffer="false"
    SaveDiffFrameBuffer="false"
    SaveDiffZBuffer="false"
    >

    <!-- transform the scene -->

    <VARIATION
        TranslateOffset="0,0,0"
        TransformTarget="Group"
        />
    <VARIATION
        TranslateOffset="1,1,1"
        TransformTarget="Group"
        />
    <VARIATION
        TranslateOffset="1,-1,-1"
        TransformTarget="Group"
        />
    <VARIATION
        TranslateOffset="-2,0.5,-10"
        TransformTarget="Group"
        />

    <!-- transform the model -->

    <VARIATION
        TranslateOffset="0,0,0"
        TransformTarget="Model"
        />
    <VARIATION
        TranslateOffset="1,1,1"
        TransformTarget="Model"
        />
    <VARIATION
        TranslateOffset="1,-1,-1"
        TransformTarget="Model"
        />
    <VARIATION
        TranslateOffset="-2,0.5,-10"
        TransformTarget="Model"
        />
</INIT>
