<?xml version="1.0" ?>
<INIT
    Class="RenderingTest3D"
    LogFilePrefix="ScaleTransform3D"
    SilhouetteEdgeTolerance="0.5"

    Mesh="SingleFrontFacingTriangle"
    Material="255,0,255,0"
    Camera="PerspectiveDefault"
    Light="WhiteAmbient"
    TransformType="Scale"

    SaveExpectedZBuffer="false"
    SaveDiffFrameBuffer="false"
    SaveDiffZBuffer="false"
    >

    <!-- Transform the scene -->

    <VARIATION
        ScaleVector="1,1,1"
        />
    <VARIATION
        ScaleVector="1,0.5,1"
        TransformTarget="Group"
        />
    <VARIATION
        ScaleVector="-2,-1.5,1"
        TransformTarget="Group"
        />

    <!-- transform the model -->

    <VARIATION
        ScaleVector="1,1,1"
        TransformTarget="Model"
        />
    <VARIATION
        ScaleVector="1,0.5,1"
        TransformTarget="Model"
        />
    <VARIATION
        ScaleVector="-2,-1.5,1"
        TransformTarget="Model"
        />
</INIT>
