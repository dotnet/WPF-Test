<?xml version="1.0" ?>
<INIT
    Class="RenderingTest3D"
    LogFilePrefix="RotateTransform3DTest"
    PixelToEdgeTolerance="0.05"

    Mesh="UnitPlaneTriangle"
    Material="255,0,0,255"
    Camera="PerspectiveDefault"
    Light="WhiteAmbient"
    TransformType="RotateAxisAngleCenter"

    SaveExpectedZBuffer="false"
    SaveDiffFrameBuffer="false"
    SaveDiffZBuffer="false"
    >

    <!-- transform the scene -->

    <VARIATION
        RotateAngle="90"
        RotateAxis="0,0,1"
        RotateCenter="0,0,0"
        TransformTarget="Group"
        />
    <VARIATION
        RotateAngle="90"
        RotateAxis="0,0,1"
        RotateCenter="1,0,0"
        TransformTarget="Group"
        />
    <VARIATION
        RotateAngle="270"
        RotateAxis="0,0,1"
        RotateCenter="0,1,0"
        TransformTarget="Group"
        />
    <VARIATION
        RotateAngle="45"
        RotateAxis="0,0,1"
        RotateCenter="0.5,0.5,0.5"
        TransformTarget="Group"
        />

    <!-- transform the model -->

    <VARIATION
        RotateAngle="90"
        RotateAxis="0,0,1"
        RotateCenter="0,0,0"
        TransformTarget="Model"
        />
    <VARIATION
        RotateAngle="90"
        RotateAxis="0,0,1"
        RotateCenter="1,0,0"
        TransformTarget="Model"
        />
    <VARIATION
        RotateAngle="270"
        RotateAxis="0,0,1"
        RotateCenter="0,1,0"
        TransformTarget="Model"
        />
    <VARIATION
        RotateAngle="45"
        RotateAxis="0,0,1"
        RotateCenter="0.5,0.5,0.5"
        TransformTarget="Model"
        />
</INIT>
