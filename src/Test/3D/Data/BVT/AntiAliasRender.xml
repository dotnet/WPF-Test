<?xml version="1.0" ?>
<INIT
    Class="RenderingTest3D"
    LogFilePrefix="AntiAliasRENDERTest"
    WindowBackground="255,255,255,255"
    WindowWidth="100"
    WindowHeight="100"

    LightType="Ambient"
    LightColor="255,255,255,255"

    CameraPosition="0,0,5"
    CameraLookDirection="0,0,-1"
    CameraUp="0,1,0"
    CameraNearPlaneDistance=".1"
    CameraFarPlaneDistance="10"

    LogRendererPerformance="true"
    EnableAntiAliasedRendering="true"
    SilhouetteEdgeTolerance = "0"
    >

    <VARIATION
        CameraType="Orthographic"
        CameraWidth="3"
        Mesh="SingleFrontFacingTriangle"
        Material="255,0,0,0"
        TransformType="RotateAxisAngle"
        RotateAngle="19"
        RotateAxis="0,0,1"
        TransformTarget="Group"
        Description="Simple Black triangle on White background. Ortho Cam."
        />

    <VARIATION
        CameraType="Orthographic"
        CameraWidth="3"
        Mesh="DoubleTriangleMesh"
        Material="255,0,255,0"
        TransformType="RotateAxisAngle"
        RotateAngle="197"
        RotateAxis="0,0,1"
        TransformTarget="Group"
        Description="Double Green triangles on White background. Ortho Cam."
        />

    <VARIATION
        CameraType="Orthographic"
        CameraWidth="3"
        Mesh="SingleFrontFacingTriangle"
        Material="255,127,0,64"
        TransformType="RotateAxisAngle"
        RotateAngle="93"
        RotateAxis="0,0,1"
        TransformTarget="Group"
        Description="Simple triangle on White background. Ortho Cam."
        />

    <VARIATION
        CameraType="Orthographic"
        CameraWidth="3"
        LightColor="255,255,255,155"
        Material="255,0,0,164"
        Mesh="Sphere 10 10 1.0"
        Description="Blue sphere on White background. Ortho Cam."
        />


    <VARIATION
        CameraType="Perspective"
        CameraFieldOfView="45"
        Mesh="SingleFrontFacingTriangle"
        Material="255,0,0,0"
        TransformType="RotateAxisAngle"
        RotateAngle="19"
        RotateAxis="0,0,1"
        TransformTarget="Group"
        Description="Simple Black triangle on White background. Perspective Cam."
        />

    <VARIATION
        CameraType="Perspective"
        CameraFieldOfView="45"
        Mesh="DoubleTriangleMesh"
        Material="255,0,255,0"
        TransformType="RotateAxisAngle"
        RotateAngle="197"
        RotateAxis="0,0,1"
        TransformTarget="Group"
        Description="Double Green triangles on White background. Perspective Cam."
        />

    <VARIATION
        CameraType="Perspective"
        CameraFieldOfView="45"
        Mesh="SingleFrontFacingTriangle"
        Material="255,127,0,64"
        TransformType="RotateAxisAngle"
        RotateAngle="93"
        RotateAxis="0,0,1"
        TransformTarget="Group"
        Description="Simple Purple triangle on White background. Perspective Cam."
        />

    <VARIATION
        CameraType="Perspective"
        CameraFieldOfView="45"
        LightColor="255,255,255,155"
        Material="255,0,0,164"
        Mesh="Sphere 10 10 1.0"
        Description="Blue sphere on White background. Perspective Cam."
        />

</INIT>
