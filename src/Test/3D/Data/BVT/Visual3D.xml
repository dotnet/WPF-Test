        Child00="DefaultSphere"
        Material00="255,0,0,255"
        ModelTransform00="Translate -1,0,-2"

        Child03="WhiteDirectionalNegZ"
        />

    <!-- Ordered spheres with transforms on the visuals -->

	<!-- [matthohn/03.21.11] Disabling unstable test -->
