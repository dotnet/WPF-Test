<?xml version="1.0" ?>
<INIT
    Class="RenderingTest3D"
    LogFilePrefix="MeshGeometryTest"
    ForceSave="false"
    Camera="OrthographicDefault"
    Material="255,0,0,255"

    SaveExpectedZBuffer="false"
    SaveDiffFrameBuffer="false"
    SaveDiffZBuffer="false"
    >

    <!-- testing to make sure that something actually renders (AmbientLight) -->

    <VARIATION
        Light="WhiteAmbient"
        Mesh="Positions"
        />
    <VARIATION
        Light="WhiteAmbient"
        Mesh="PositionsElseNull"
        />
    <VARIATION
        Light="WhiteAmbient"
        Mesh="PositionsNormals"
        />
    <VARIATION
        Light="WhiteAmbient"
        Mesh="PositionsUV"
        />
    <VARIATION
        Light="WhiteAmbient"
        Mesh="PositionsIndices"
        />
    <VARIATION
        Light="WhiteAmbient"
        Mesh="PositionsNormalsUV"
        />
    <VARIATION
        Light="WhiteAmbient"
        Mesh="PositionsNormalsIndices"
        />
    <VARIATION
        Light="WhiteAmbient"
        Mesh="PositionsUVIndices"
        />
    <VARIATION
        Light="WhiteAmbient"
        Mesh="PositionsNormalsUVIndices"
        />

    <!-- testing to make sure that normals are generated correctly -->

    <VARIATION
        Light="WhiteSpot"
        Mesh="Positions"
        />
    <VARIATION
        Light="WhiteSpot"
        Mesh="PositionsElseNull"
        />
    <VARIATION
        Light="WhiteSpot"
        Mesh="PositionsNormals"
        />
    <VARIATION
        Light="WhiteSpot"
        Mesh="PositionsUV"
        />
    <VARIATION
        Light="WhiteSpot"
        Mesh="PositionsIndices"
        />
    <VARIATION
        Light="WhiteSpot"
        Mesh="PositionsNormalsUV"
        />
    <VARIATION
        Light="WhiteSpot"
        Mesh="PositionsNormalsIndices"
        />
    <VARIATION
        Light="WhiteSpot"
        Mesh="PositionsUVIndices"
        />
    <VARIATION
        Light="WhiteSpot"
        Mesh="PositionsNormalsUVIndices"
        />
</INIT>
