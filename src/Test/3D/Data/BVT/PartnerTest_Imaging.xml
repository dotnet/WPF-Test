<?xml version="1.0" ?>
<INIT
    Class="ImagePartnerTest"
    LogFilePrefix="PartnerTest_Imaging"

    WindowWidth="600"
    WindowHeight="600"

    LightType="Ambient"
    LightColor="255,255,255,255"
    Camera="OrthographicDefault"
    Mesh="FullScreenMesh"

    DefaultColorTolerance="10,10,10,10"
    TextureBlurRadius="3"
    >

    <!-- ImageBrush -->
    <VARIATION
        Material="cars.bmp"
        Description="ImageBrush, file: cars.bmp, blur=3."
        />

    <!-- ImageBrush -->
    <VARIATION
        Material="cars.bmp"
        TextureBlurRadius="0"
        Description="ImageBrush, file: cars.bmp, no blur."
        />

    <!-- SolidColorBrush -->
    <VARIATION
        Material="255,0,255,0"
        Description="SolidColorBrush, color: 255,0,255,0."
        />

    <!-- LinearGradientBrush -->
    <VARIATION
        Material="LinearGradientBrush 255,255,0,0 255,0,255,255 0"
        Description="LinearGradientBrush, from:255,255,0,0 to:255,0,255,255 angle:0"
        />

</INIT>
