<?xml version="1.0" ?>
<INIT
    Class="Visual3DRenderingTest"
    LogFilePrefix="Model3D_Visual3D_TransformTest"

    Scene="Explicit"
    Visual0="UnitPlaneTriangle"
    Visual1="WhiteAmbient"

    Camera="OrthographicDefault"
    UseViewport3D="false"
    ZBufferTolerance="0.001"
    >

    <!-- Translations -->
    <VARIATION
        Description="Translation on Model only"
        ModelTransform0="Translate 0,-1,0"
        />
    <VARIATION
        Description="Translation on Visual only"
        VisualTransform0="Translate -1,0,0"
        />
    <VARIATION
        Description="Translation on Model + Visual"
        ModelTransform0="Translate 0,-1,0"
        VisualTransform0="Translate -1,0,0"
        />

    <!-- Rotations -->
    <VARIATION
        Description="Rotation on Model only"
        ModelTransform0="Rotate -1,0,0 90"
        />
    <VARIATION
        Description="Rotation on Visual only"
        VisualTransform0="Rotate 0,0,1 90"
        />
    <VARIATION
        Description="Rotation on Model + Visual"
        ModelTransform0="Rotate -1,0,0 90"
        VisualTransform0="Rotate 0,0,1 90"
        />

    <!-- Scales -->
    <VARIATION
        Description="Scale on Model only"
        ModelTransform0="ScaleCenter 2,2,2 2,0,0"
        />
    <VARIATION
        Description="Scale on Visual only"
        VisualTransform0="ScaleCenter 2,2,2 0,2,0"
        />
    <VARIATION
        Description="Scale on Model + Visual"
        ModelTransform0="ScaleCenter 2,2,2 1,0,0"
        VisualTransform0="ScaleCenter 2,2,2 0,2,0"
        />


    <!-- Same thing again, with PerspectiveCamera -->

    <VARIATION
        Camera="PerspectiveDefault"
        Description="Translation on Model only"
        ModelTransform0="Translate 0,-1,0"
        />
    <VARIATION
        Camera="PerspectiveDefault"
        Description="Translation on Visual only"
        VisualTransform0="Translate -1,0,0"
        />
    <VARIATION
        Camera="PerspectiveDefault"
        Description="Translation on Model + Visual"
        ModelTransform0="Translate 0,-1,0"
        VisualTransform0="Translate -1,0,0"
        />
    <VARIATION
        Camera="PerspectiveDefault"
        Description="Rotation on Model only"
        ModelTransform0="Rotate -1,0,0 90"
        />
    <VARIATION
        Camera="PerspectiveDefault"
        Description="Rotation on Visual only"
        VisualTransform0="Rotate 0,0,1 90"
        />
    <VARIATION
        Camera="PerspectiveDefault"
        Description="Rotation on Model + Visual"
        ModelTransform0="Rotate -1,0,0 90"
        VisualTransform0="Rotate 0,0,1 90"
        />
    <VARIATION
        Camera="PerspectiveDefault"
        Description="Scale on Model only"
        ModelTransform0="ScaleCenter 2,2,2 2,0,0"
        />
    <VARIATION
        Camera="PerspectiveDefault"
        Description="Scale on Visual only"
        VisualTransform0="ScaleCenter 2,2,2 0,2,0"
        />
    <VARIATION
        Camera="PerspectiveDefault"
        Description="Scale on Model + Visual"
        ModelTransform0="ScaleCenter 2,2,2 1,0,0"
        VisualTransform0="ScaleCenter 2,2,2 0,2,0"
        />
</INIT>
