<PageFunction xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:sys="clr-namespace:System;assembly=mscorlib"
              x:Class="DrtPagefunctionTest.MarkupPF2"
              x:TypeArguments="sys:String">
    <DockPanel>
        <StackPanel DockPanel.Dock="Left"
                    Orientation="Vertical"
                  Background="LightGray">

            <TextBlock FontSize="14"
               FontWeight="Bold"
               Margin="10,20,10,10">Some Explanatory Text</TextBlock>
        </StackPanel>

        <StackPanel Background="LightGreen"
                    Orientation="Vertical">
            <TextBlock Name="SomeText"
                       FontSize="14"
                       FontWeight="Bold"
                       Margin="10,20,10,10">PageFunction 2: True or False?</TextBlock>

            <StackPanel>
                <RadioButton Name="rdbtnTrue">True</RadioButton>
                <RadioButton Name="rdbtnFalse">False</RadioButton>
            </StackPanel>

            <Button Margin="10,20,10,10"
                    HorizontalAlignment="Left"
                    Name="done"
                    Height="25"
                    Width="100">Done</Button>

            <Button Margin="10,20,10,10"
                    HorizontalAlignment="Left"
                    Name="cancel"
                    Height="25"
                    Width="100">Cancel</Button>
        </StackPanel>
    </DockPanel>

</PageFunction>
