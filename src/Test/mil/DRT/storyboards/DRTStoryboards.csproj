<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <AssemblyName>DRTStoryboards</AssemblyName>
    <OutputType>winexe</OutputType>
    <AssemblyAttributeClsCompliant>false</AssemblyAttributeClsCompliant>
  </PropertyGroup>
    
  <ItemGroup>
    <Compile Include="DRTStoryboards.cs" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="ding.wav" />
  </ItemGroup>

  <ItemGroup>
    <None Include="DRTStoryboards.xaml">
        <Link>\DrtFiles\DRTStoryboards\%(FileName)%(Extension)</Link>
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Include="ding.wav">
        <Link>\DrtFiles\DRTStoryboards\%(FileName)%(Extension)</Link>
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>
</Project>
