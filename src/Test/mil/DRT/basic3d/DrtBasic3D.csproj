<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <AssemblyName>DrtBasic3D</AssemblyName>
    <LinkSubsystem>console</LinkSubsystem>
    <AssemblyIdentityVersionName>WCP</AssemblyIdentityVersionName>
    <OutputType>EXE</OutputType>
    <GenerateAssemblyAttribute>false</GenerateAssemblyAttribute>
    <TestCode>true</TestCode>
  </PropertyGroup>
  <ItemGroup>
    <Compile Include="CycleAnimation.cs" />
    <Compile Include="DrtBasic3D.cs" />
    <Compile Include="TestCase.cs" />
    <Compile Include="Torus.cs" />
    <Compile Include="Trackball.cs" />
    <Compile Include="WeirdMeshes.cs" />
    <Compile Include="3DMeshCreation\Exceptions.cs" />
    <Compile Include="3DMeshCreation\Expressions.cs" />
    <Compile Include="3DMeshCreation\FunctionMesh.cs" />
    <Compile Include="3DMeshCreation\FunctionParser.cs" />
    <Compile Include="3DMeshCreation\Functions.cs" />
    <Compile Include="3DMeshCreation\Token.cs" />
    <Compile Include="3DMeshCreation\Tokenizer.cs" />
    <Compile Include="3DMeshCreation\TokenSet.cs" />
    <None Include="*.png">
      <Link>\DrtFiles\DrtBasic3D\%(FileName)%(Extension)</Link>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Include="*.bmp">
      <Link>\DrtFiles\DrtBasic3D\%(FileName)%(Extension)</Link>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>
</Project>
