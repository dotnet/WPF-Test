<UserControl x:Class="DRTAnimation.EasingFunctionGraph"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Height="104" Width="104">
    <Border BorderThickness="2" BorderBrush="#AAAAFF" Background="#EEEEFF">
        <Canvas Height="100" Width="100">
            <Rectangle Canvas.Top="25" Height="1" Width="100" StrokeDashArray="2, 2" Stroke="#BBBBFF" />
            <Rectangle Canvas.Top="75" Height="1" Width="100" StrokeDashArray="2, 2" Stroke="#BBBBFF" />
            <Path x:Name="functionPath" Canvas.Top="75" Stroke="Blue" StrokeThickness="2" StrokeEndLineCap="Round" StrokeStartLineCap="Round" StrokeLineJoin="Round" />
            <Ellipse Canvas.Top="71" Canvas.Left="-4" Width="8" Height="8" Fill="Green">
                <Ellipse.RenderTransform>
                    <TranslateTransform x:Name="functionCircle"/>
                </Ellipse.RenderTransform>
            </Ellipse>
            <Ellipse Canvas.Top="71" Canvas.Left="-4" Width="8" Height="8" Fill="Red">
                <Ellipse.RenderTransform>
                    <TranslateTransform x:Name="animationCircle"/>
                </Ellipse.RenderTransform>
            </Ellipse>
        </Canvas>
    </Border>
</UserControl>
