<Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" Background="#CCCCCC">
<Rectangle StrokeThickness="2" Canvas.Left="10" Canvas.Top="10" Width="300" Height="200" Stroke="blue">
    <Rectangle.Fill>
       
       <LinearGradientBrush StartPoint="0,1" EndPoint="1,1" SpreadMethod="Repeat" MappingMode="RelativeToBoundingBox">
       <LinearGradientBrush.GradientStops>
        <GradientStop Color="purple" Offset="0" />
        <GradientStop Color="yellow" Offset="1" />
        <GradientStop Color="orange" Offset="0.5" />
        </LinearGradientBrush.GradientStops>
       </LinearGradientBrush>
    </Rectangle.Fill>
</Rectangle>

</Canvas>
