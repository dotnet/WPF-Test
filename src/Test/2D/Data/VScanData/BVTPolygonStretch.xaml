<Canvas
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="#CCCCCC">

<Rectangle Width="300" Height="400" Stroke="black" StrokeThickness="1" />
<Polygon Stroke="red" StrokeThickness="5" Stretch="None">

    <Polygon.Points>
        10,200 100,10  200,200 100,250
    </Polygon.Points></Polygon>


 <Polygon Stroke="blue" StrokeThickness="5" Stretch="Fill" Width="300" Height="400">

     <Polygon.Points>
        10,200 100,10  200,200 100,250
    </Polygon.Points></Polygon>


 <Polygon Stroke="purple" StrokeThickness="5" Stretch="UniformToFill" Width="300" Height="400">

      <Polygon.Points>
          10,200 100,10  200,200 100,250
    </Polygon.Points></Polygon> 


 <Polygon Stroke="yellow" StrokeThickness="5" Stretch="Uniform" Width="300" Height="400">

       <Polygon.Points>
           10,200 100,10  200,200 100,250
    </Polygon.Points></Polygon> 
    
    


</Canvas>
