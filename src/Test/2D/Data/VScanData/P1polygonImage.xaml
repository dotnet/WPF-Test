<Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" Background="#CCCCCC">
    <Polygon Stroke="yellow" StrokeThickness="4" Points="100,10 150,35 150,65 100,90 50,65 50,35">
        <Polygon.Fill>
            <ImageBrush ImageSource="pack://siteoforigin:,,,/macaw.jpg">
                <ImageBrush.Stretch>
                        None
                    </ImageBrush.Stretch>
                <ImageBrush.AlignmentX>
                        Left
                    </ImageBrush.AlignmentX>
                <ImageBrush.AlignmentY>
                        Top
                    </ImageBrush.AlignmentY>
                <ImageBrush.Viewport>
                       0,0,1,1
                    </ImageBrush.Viewport>
                <ImageBrush.ViewportUnits>
                        RelativeToBoundingBox
                    </ImageBrush.ViewportUnits>
            </ImageBrush>
        </Polygon.Fill>
    </Polygon>
    <Polygon Stroke="blue" StrokeThickness="10" Opacity="0.5" Points="200,100 350,280 150,350">
        <Polygon.Fill>
            <ImageBrush ImageSource="pack://siteoforigin:,,,/macaw.jpg" />
        </Polygon.Fill>
    </Polygon>
</Canvas>
