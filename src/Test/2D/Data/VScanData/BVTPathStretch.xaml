<Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 Background="#CCCCCC">


    
<Rectangle Width="300" Height="400" Stroke="black" StrokeThickness="1" />
<Path Data="M 50 50 L 150 50 L 100 150 z"
         Stroke="red" StrokeThickness="10"
 Stretch="None"
  />

<Rectangle Width="300" Height="400" Stroke="black" StrokeThickness="1" />
<Path Data="M 50 50 L 150 50 L 100 150 z"
         Stroke="blue" StrokeThickness="10"
 Width="300" Height="400" Stretch="Fill"
  />

<Rectangle Width="300" Height="400" Stroke="black" StrokeThickness="1" />
<Path Data="M 50 50 L 150 50 L 100 150 z"
         Stroke="purple" StrokeThickness="10"
 Width="300" Height="400" Stretch="UniformToFill"
  />

<Rectangle Width="300" Height="400" Stroke="black" StrokeThickness="1" />
<Path Data="M 50 50 L 150 50 L 100 150 z"
         Stroke="yellow" StrokeThickness="10"
 Width="300" Height="400" Stretch="Uniform"
  />


</Canvas>
