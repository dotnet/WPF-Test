<!-- test of shapes with DrawingBrush stroke with different Linejoins-->

<Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Background="#CCCCCC">
<Rectangle Height="100" Width="100" StrokeThickness="25" StrokeLineJoin="Miter" StrokeMiterLimit="1">
<Rectangle.Stroke>
	<RadialGradientBrush Center="0.5,0.5" GradientOrigin="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
		<RadialGradientBrush.GradientStops>
			<GradientStop Color="Yellow" Offset="0" />
			<GradientStop Color="Orange" Offset="1" />
		</RadialGradientBrush.GradientStops>
	</RadialGradientBrush>
</Rectangle.Stroke>
</Rectangle>

<Rectangle Height="100" Width="100" Canvas.Top="150" StrokeThickness="25" StrokeLineJoin="Bevel">
<Rectangle.Stroke>
