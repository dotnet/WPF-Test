<!-- this test gradients applied to different shapes and strokes (both shorthand and complex way- the backgroud also has a gradient applied to it. Text is also incorporated on a shape-->
<Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
    <Canvas.Background>
        <LinearGradientBrush StartPoint="1,0" EndPoint="0,1">
            <GradientBrush.GradientStops>
                <GradientStopCollection>
                    <GradientStop Color="skyblue" Offset="0" />
                    <GradientStop Color="#000033" Offset="1" />
                </GradientStopCollection>
            </GradientBrush.GradientStops>
        </LinearGradientBrush>
    </Canvas.Background>
    <Ellipse Width="155" Height="155" Canvas.Left="72.5" Canvas.Top="72.5" StrokeThickness="5">
        <Ellipse.Fill>
            <LinearGradientBrush StartPoint="0,.5" EndPoint=".5,0">
                <GradientBrush.GradientStops>
                    <GradientStopCollection>
                        <GradientStop Color="yellow" Offset="0" />
                        <GradientStop Color="white" Offset="1" />
                    </GradientStopCollection>
                </GradientBrush.GradientStops>
            </LinearGradientBrush>
        </Ellipse.Fill>
        <Ellipse.Stroke>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientBrush.GradientStops>
                    <GradientStopCollection>
                        <GradientStop Color="red" Offset="0" />
                        <GradientStop Color="white" Offset="1" />
                    </GradientStopCollection>
                </GradientBrush.GradientStops>
            </LinearGradientBrush>
        </Ellipse.Stroke>
    </Ellipse>
    <Ellipse Width="170" Height="170" Canvas.Left="315" Canvas.Top="65" StrokeThickness="20">
        <Ellipse.Fill>
            <RadialGradientBrush>
                <GradientBrush.GradientStops>
