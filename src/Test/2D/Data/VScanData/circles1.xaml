<Border xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" Background="#CCCCCC">
    <Canvas>
        <Ellipse Width="105" Height="105" Canvas.Left="107.5" Canvas.Top="17.5" StrokeThickness="5">
            <Ellipse.Fill>
                <SolidColorBrush Color="blue" Opacity="0.3" />
            </Ellipse.Fill>
            <Ellipse.Stroke>
                <SolidColorBrush Color="orange" Opacity="0.5" />
            </Ellipse.Stroke>
        </Ellipse>
        <Ellipse Width="105" Height="105" Canvas.Left="147.5" Canvas.Top="67.5" StrokeThickness="5">
            <Ellipse.Fill>
                <SolidColorBrush Color="red" Opacity="0.5" />
            </Ellipse.Fill>
            <Ellipse.Stroke>
                <SolidColorBrush Color="blue" Opacity="0.5" />
            </Ellipse.Stroke>
        </Ellipse>
        <Ellipse Width="105" Height="105" Canvas.Left="77.5" Canvas.Top="67.5" StrokeThickness="5">
            <Ellipse.Fill>
                <SolidColorBrush Color="yellow" Opacity="0.5" />
            </Ellipse.Fill>
            <Ellipse.Stroke>
                <SolidColorBrush Color="purple" Opacity="0.5" />
            </Ellipse.Stroke>
        </Ellipse>
        <Ellipse Width="105" Height="105" Canvas.Left="107.5" Canvas.Top="117.5" StrokeThickness="5">
            <Ellipse.Fill>
                <SolidColorBrush Color="green" Opacity="0.5" />
            </Ellipse.Fill>
            <Ellipse.Stroke>
                <SolidColorBrush Color="red" Opacity="0.5" />
            </Ellipse.Stroke>
        </Ellipse>
        <!--second set of circles**************************************-->
        <Ellipse Width="105" Height="105" Canvas.Left="307.5" Canvas.Top="17.5" StrokeThickness="5" Stroke="orange">
            <Ellipse.Fill>
                <SolidColorBrush Color="blue" Opacity="0.3" />
            </Ellipse.Fill>
        </Ellipse>
        <Ellipse Width="105" Height="105" Canvas.Left="347.5" Canvas.Top="67.5" StrokeThickness="5" Stroke="blue">
            <Ellipse.Fill>
                <SolidColorBrush Color="red" Opacity="0.5" />
            </Ellipse.Fill>
        </Ellipse>
        <Ellipse Width="105" Height="105" Canvas.Left="277.5" Canvas.Top="67.5" StrokeThickness="5" Stroke="purple">
            <Ellipse.Fill>
                <SolidColorBrush Color="yellow" Opacity="0.5" />
            </Ellipse.Fill>
        </Ellipse>
        <Ellipse Width="105" Height="105" Canvas.Left="307.5" Canvas.Top="117.5" StrokeThickness="5" Stroke="red">
            <Ellipse.Fill>
                <SolidColorBrush Color="green" Opacity="0.5" />
            </Ellipse.Fill>
        </Ellipse>
        <!-- line of circles with gradients applied to the fill and to the strokes-->
        <Ellipse Width="105" Height="105" Canvas.Left="47.5" Canvas.Top="247.5" StrokeThickness="5" Stroke="orange">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientBrush.GradientStops>
                        <GradientStopCollection>
                            <GradientStop Color="Blue" Offset="0" />
                            <GradientStop Color="Green" Offset="1" />
                        </GradientStopCollection>
                    </GradientBrush.GradientStops>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
        <Ellipse Width="105" Height="105" Canvas.Left="197.5" Canvas.Top="247.5" StrokeThickness="5" Stroke="orange">
            <Ellipse.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientBrush.GradientStops>
                        <GradientStopCollection>
                            <GradientStop Color="red" Offset="0" />
                            <GradientStop Color="yellow" Offset="1" />
                        </GradientStopCollection>
                    </GradientBrush.GradientStops>
                </LinearGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
        <Ellipse Width="125" Height="125" Canvas.Left="337.5" Canvas.Top="237.5" StrokeThickness="25" Fill=" pink">
            <Ellipse.Stroke>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientBrush.GradientStops>
                        <GradientStopCollection>
                            <GradientStop Color="red" Offset="0" />
                            <GradientStop Color="yellow" Offset="1" />
                        </GradientStopCollection>
                    </GradientBrush.GradientStops>
                </LinearGradientBrush>
            </Ellipse.Stroke>
        </Ellipse>
        <Ellipse Width="155" Height="155" Canvas.Left="472.5" Canvas.Top="222.5" StrokeThickness="55">
            <Ellipse.Stroke>
                <RadialGradientBrush>
                    <GradientBrush.GradientStops>
                        <GradientStopCollection>
                            <GradientStop Color="Blue" Offset="0" />
                            <GradientStop Color="Green" Offset="1" />
                        </GradientStopCollection>
                    </GradientBrush.GradientStops>
                </RadialGradientBrush>
            </Ellipse.Stroke>
            <Ellipse.Stroke>
                <SolidColorBrush Color="skyblue" Opacity="0.5" />
            </Ellipse.Stroke>
        </Ellipse>
        <Ellipse Width="145" Height="145" Canvas.Left="527.5" Canvas.Top="77.5" StrokeThickness="45">
            <Ellipse.Stroke>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientBrush.GradientStops>
                        <GradientStopCollection>
                            <GradientStop Color="skyblue" Offset="0" />
                            <GradientStop Color="pink" Offset="1" />
                        </GradientStopCollection>
                    </GradientBrush.GradientStops>
                </LinearGradientBrush>
            </Ellipse.Stroke>
            <Ellipse.Fill>
                <SolidColorBrush Opacity="0.5" />
            </Ellipse.Fill>
        </Ellipse>
    </Canvas>
</Border>
