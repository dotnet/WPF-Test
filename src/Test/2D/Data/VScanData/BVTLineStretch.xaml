<Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" Background="#CCCCCC">

<Rectangle Width="300" Height="400" Stroke="black" StrokeThickness="1" />

<Line
                Stretch="None"
               X1="60"
               Y1="50"
               X2="150"
               Y2="240"
                Stroke="red"
                StrokeThickness="8px" />
        
 <Line Width="300" Height="400"
                Stretch="Fill"
                X1="60"
                Y1="50"
                X2="150"
                Y2="240"
                Stroke="blue"
                StrokeThickness="8px" />
  
 
        
  <Line Width="300" Height="400"
                Stretch="UniformToFill"
                 X1="60"
                 Y1="50"
                 X2="150"
                 Y2="240"
                 Stroke="purple"
                StrokeThickness="8px" />
                
    <Line Width="300" Height="400"
                   Stretch="Uniform"
                    X1="60"
                    Y1="50"
                    X2="150"
                    Y2="240"
                    Stroke="yellow"
                   StrokeThickness="8px" />
        
        
        
        </Canvas>
