<!-- This test covers all the shapes with SolidColorBrush -->
<Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        Background="#CCCCCC">
    <Path Data="M100,200 C100,100 250,100 250,200 S400,300 400,200"
          StrokeThickness="6">
        <Path.Stroke>
            <SolidColorBrush>
                <SolidColorBrush.Color>yellow</SolidColorBrush.Color>
            </SolidColorBrush>
        </Path.Stroke>
    </Path>
    <Ellipse Width="156"
             Height="106"
             Canvas.Left="222"
             Canvas.Top="22"
             StrokeThickness="6">
        <Ellipse.Stroke>red</Ellipse.Stroke>
        <Ellipse.Fill>
            <SolidColorBrush>
                <SolidColorBrush.Color>#CC6699</SolidColorBrush.Color>
            </SolidColorBrush>
        </Ellipse.Fill>
        <Ellipse.Stroke>orange</Ellipse.Stroke>
    </Ellipse>
    <Line>
        <Line.X1>455</Line.X1>
        <Line.Y1>255</Line.Y1>
        <Line.X2>200</Line.X2>
        <Line.Y2>100</Line.Y2>
        <Line.Fill>blue</Line.Fill>
        <Line.Stroke>
            <SolidColorBrush>
                <SolidColorBrush.Color>Red</SolidColorBrush.Color>
            </SolidColorBrush>
        </Line.Stroke>
        <Line.StrokeThickness>10</Line.StrokeThickness>
    </Line>
    <Polygon Stroke="white"
             StrokeThickness="2"
             Points="100,10 150,35 150,65 100,90 50,65 50,35">
        <Polygon.Fill>
            <SolidColorBrush>
                <SolidColorBrush.Color>#996699</SolidColorBrush.Color>
            </SolidColorBrush>
        </Polygon.Fill>
    </Polygon>
    <Polyline StrokeThickness="6"
              Points="10,10 48,30 15,100 100,100 100,300 300,300 300,500">
        <Polyline.Stroke>
            <SolidColorBrush>
                <SolidColorBrush.Color>#99FFFF</SolidColorBrush.Color>
            </SolidColorBrush>
        </Polyline.Stroke>
    </Polyline>
    <Rectangle Width="200px"
               Height="200px"
               StrokeThickness="15px"
               Stroke="#6699CC"
               Canvas.Top="320"
               Canvas.Left="50">
        <Rectangle.Fill>
            <SolidColorBrush>
                <SolidColorBrush.Color>gold</SolidColorBrush.Color>
            </SolidColorBrush>
        </Rectangle.Fill>
    </Rectangle>
</Canvas>