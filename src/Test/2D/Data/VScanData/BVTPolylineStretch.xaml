<Canvas
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="#CCCCCC">

<Rectangle Width="300" Height="400" Stroke="black" StrokeThickness="1" />
<Polyline Stroke="red" StrokeThickness="5" Stretch="None">
    
    <Polyline.Points>
        10,10 160,30 20,50 
    </Polyline.Points></Polyline>
    
    
 <Polyline Stroke="blue" StrokeThickness="15" Stretch="Fill" Width="300" Height="400">
     
     <Polyline.Points>
         10,10 160,30 20,50 
    </Polyline.Points></Polyline>
 
    
 <Polyline Stroke="purple" StrokeThickness="10" Stretch="UniformToFill" Width="300" Height="400">
      
      <Polyline.Points>
          10,10 160,30 20,50 
    </Polyline.Points></Polyline>
    
    
 <Polyline Stroke="yellow" StrokeThickness="4" Stretch="Uniform" Width="300" Height="400">
       
       <Polyline.Points>
           10,10 160,30 20,50 
    </Polyline.Points></Polyline>
 
</Canvas>
    
