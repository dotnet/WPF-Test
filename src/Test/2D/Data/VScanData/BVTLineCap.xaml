<!-- 
This test the different values of the StrokeLineCap property
Butt, Round and Square -->

<Border xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" Background="#CCCCCC">
<Canvas>

<Line X1="40" Y1="50" X2="250" Y2="50"
 StrokeStartLineCap="Flat" StrokeEndLineCap="Flat" Stroke="red" StrokeThickness="45" /> 

<Line X1="40" Y1="150" X2="250" Y2="150"
 StrokeStartLineCap="Round" StrokeEndLineCap="Round" Stroke="purple" StrokeThickness="45" />

<Line X1="40" Y1="250" X2="250" Y2="250"
 StrokeStartLineCap="Square" StrokeEndLineCap="Square" Stroke="yellow" StrokeThickness="45" />


<!-- guide lines -->

<Line X1="40" Y1="0" X2="40" Y2="400" Stroke="black" />
<Line X1="250" Y1="0" X2="250" Y2="400" Stroke="black" />

</Canvas>
</Border>
