<Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" Background="#CCCCCC">
    <Polygon Stroke="yellow" StrokeThickness="4" Points="100,10 150,35 150,65 100,90 50,65 50,35">
        <Polygon.Fill>
            <LinearGradientBrush Opacity="0.7" StartPoint="0,1" EndPoint="1,0" MappingMode="RelativeToBoundingBox">
                <LinearGradientBrush.GradientStops>
                    <GradientStop Color="green" Offset="0" />
                    <GradientStop Color="yellow" Offset="1" />
                    <GradientStop Color="blue" Offset="0.5" />
                </LinearGradientBrush.GradientStops>
            </LinearGradientBrush>
        </Polygon.Fill>
    </Polygon>
    <Polygon Stroke="blue" StrokeThickness="10" Points="200,100 350,280 150,350">
        <Polygon.Fill>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientBrush.GradientStops>
                    <GradientStopCollection>
                        <GradientStop Color="red" Offset="0" />
                        <GradientStop Color="yellow" Offset="1" />
                    </GradientStopCollection>
                </GradientBrush.GradientStops>
            </LinearGradientBrush>
        </Polygon.Fill>
    </Polygon>
</Canvas>
