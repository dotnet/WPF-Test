<Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" Background="#CCCCCC">
<Rectangle
 Canvas.Left="120"
 Canvas.Top="120"
 Width="200"
 Height="200">
  <Rectangle.Fill>
   <RadialGradientBrush Center="100,100" GradientOrigin="180, 100" RadiusX="60" RadiusY="60" SpreadMethod="Pad" MappingMode="Absolute">
    <RadialGradientBrush.GradientStops>
      <GradientStop Color="red" Offset="0" />
      <GradientStop Color="blue" Offset="0.5" />
      <GradientStop Color="white" Offset="1" />
      </RadialGradientBrush.GradientStops>
   </RadialGradientBrush>    
  </Rectangle.Fill>
</Rectangle>
</Canvas>
