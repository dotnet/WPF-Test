<Border xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" Background="#CCCCCC">
    <Canvas>
        <Decorator>
            <Decorator.LayoutTransform>
                <SkewTransform AngleY="20" />
            </Decorator.LayoutTransform>
            <Rectangle Stroke="red" StrokeThickness="3" Canvas.Top="10" Canvas.Left="5" Width="200" Height="50" Fill="pink" />
        </Decorator>
        <Decorator>
            <Decorator.LayoutTransform>
                <SkewTransform AngleX="10" />
            </Decorator.LayoutTransform>
            <Rectangle Stroke="blue" Canvas.Top="150" Canvas.Left="5" Width="200" Height="50" />
        </Decorator>
        <Decorator>
            <Decorator.LayoutTransform>
                <ScaleTransform ScaleX="2" ScaleY="2" />
            </Decorator.LayoutTransform>
            <Path StrokeThickness="3" Stroke="#a3F3" Fill="yellow">
                <Path.Data>
                    <EllipseGeometry Center="200 100" RadiusX="50" RadiusY="50" />
                </Path.Data>
            </Path>
        </Decorator>
    </Canvas>
</Border>
