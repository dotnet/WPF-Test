<Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" Background="pink">
    <Border Canvas.Left="240" Canvas.Top="100" Width="300" Height="300">
        <Border.OpacityMask>
            <RadialGradientBrush>
                <GradientBrush.GradientStops>
                    <GradientStopCollection>
                        <GradientStop Color="#0000" Offset="0" />
                        <GradientStop Color="#ff80" Offset="1" />
                    </GradientStopCollection>
                </GradientBrush.GradientStops>
            </RadialGradientBrush>
        </Border.OpacityMask>
        <Border.Background>
            <ImageBrush ImageSource="pack://siteoforigin:,,,/puppies.jpg" />
        </Border.Background>
    </Border>
</Canvas>
