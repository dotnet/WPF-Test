<Canvas
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="#CCCCCC">        
<Path Data="M100,200 C100,100 250,100 250,200 S400,300 400,200"

                   StrokeThickness="30"
                    StrokeDashOffset="1"
                    StrokeDashCap="Round"
                    StrokeDashArray="4 1.1">
<Path.Stroke>
                                        

<ImageBrush ImageSource="star.gif" TileMode="Tile">
                         <ImageBrush.Stretch>
                             None
                         </ImageBrush.Stretch>
                         <ImageBrush.AlignmentX>
                             Left
                         </ImageBrush.AlignmentX>
                         <ImageBrush.AlignmentY>
                             Top
                         </ImageBrush.AlignmentY>
                         <ImageBrush.Viewport>
                            0,0,1,1
                         </ImageBrush.Viewport>
                         <ImageBrush.ViewportUnits>
                             RelativeToBoundingBox
                         </ImageBrush.ViewportUnits>
                      
</ImageBrush></Path.Stroke></Path>

<Rectangle
        Canvas.Left="450" Canvas.Top="50"
           Width="200"
           Height="200"

           StrokeDashCap="Round"
           StrokeThickness="25"
           StrokeDashOffset="0.5"
          StrokeDashArray="1 3"
          Fill="orange">
 <Rectangle.Stroke>
 <ImageBrush ImageSource="disc.gif" TileMode="Tile">
                      <ImageBrush.Stretch>
                         None
                      </ImageBrush.Stretch>
                      <ImageBrush.AlignmentX>
                          Center
                      </ImageBrush.AlignmentX>
                      <ImageBrush.AlignmentY>
                          Center
                      </ImageBrush.AlignmentY>
                      <ImageBrush.Viewport>
                         0,0,1,1
                      </ImageBrush.Viewport>
                      <ImageBrush.ViewportUnits>
                          RelativeToBoundingBox
                      </ImageBrush.ViewportUnits>
                   
                 </ImageBrush></Rectangle.Stroke> </Rectangle>
    
</Canvas>
