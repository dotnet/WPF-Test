<!-- tests the clip on the polygon presenter with a scale transform applied to it-->
<Border xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" Background="#CCCCCC">
    <Canvas Canvas.Left="15" Canvas.Top="30">
        <Decorator>
            <Decorator.LayoutTransform>
                <ScaleTransform ScaleX="2" ScaleY="2" />
            </Decorator.LayoutTransform>
            <Polygon Fill="red" Width="100" Height="100" ClipToBounds="true" Points="100,10 150,35 150,65 100,90 50,65 50,35">
            </Polygon>
        </Decorator>
    </Canvas>
</Border>
