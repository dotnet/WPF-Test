
<Border xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:media="clr-namespace:System.Windows.Media;assembly=PresentationCore" Background="#CCCCCC" xmlns:MappingPIGen1="clr-namespace:System.Windows.Media;assembly=PresentationCore">
    <Canvas>
        <Decorator>
            <Decorator.LayoutTransform>
                <TransformGroup>
                    <TransformGroup.Children>
                        <TransformCollection>
                            <RotateTransform Angle="40" />
                            <TranslateTransform X="50" Y="100" />
                            <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
                        </TransformCollection>
                    </TransformGroup.Children>
                </TransformGroup>
            </Decorator.LayoutTransform>
            <Path StrokeThickness="6">
                <Path.Data>
                    <EllipseGeometry Center="100 75" RadiusX="75" RadiusY="50" />
                </Path.Data>
                <!--  DECLARED PROPERTIES -->
                <!--  PROPERTIES INHERITED FROM Shape -->
                <Path.Stroke>red</Path.Stroke>
                <Path.Fill>
                    <media:SolidColorBrush Color="blue" Opacity="0.6" />
                </Path.Fill>
                <Path.Stroke>
                    <media:SolidColorBrush Color="red" Opacity="0.5" />
                </Path.Stroke>
            </Path>
        </Decorator>
    </Canvas>
</Border>
