<Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" Background="#CCCCCC">
    <Polygon Stroke="yellow" StrokeThickness="4" Points="100,10 150,35 150,65 100,90 50,65 50,35">
        <Polygon.Fill>
            <RadialGradientBrush Opacity="0.7" MappingMode="RelativeToBoundingBox">
                <RadialGradientBrush.GradientStops>
                    <GradientStop Color="#FF0000" Offset="0" />
                    <GradientStop Color="blue" Offset="0.5" />
                    <GradientStop Color="orange" Offset="1" />
                </RadialGradientBrush.GradientStops>
            </RadialGradientBrush>
        </Polygon.Fill>
    </Polygon>
    <Polygon Stroke="blue" StrokeThickness="10" Points="200,100 350,280 150,350">
        <Polygon.Fill>
            <RadialGradientBrush>
                <GradientBrush.GradientStops>
                    <GradientStopCollection>
                        <GradientStop Color="red" Offset="0" />
                        <GradientStop Color="yellow" Offset="1" />
                    </GradientStopCollection>
                </GradientBrush.GradientStops>
            </RadialGradientBrush>
        </Polygon.Fill>
    </Polygon>
</Canvas>
