<!-- 
This test the StrokeLineJoin property, with the Meter, Round and Bevel values. It also tests the StrokeMiterLimit applied to the rectangle
 -->
<Border xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" Background="#CCCCCC">
<Canvas>



<Polyline Points="30,30 45,15 60,30"
 StrokeLineJoin="miter" Stroke="red" StrokeThickness="20" />


<Polyline Points="30,130 45,115 60,130"
 StrokeLineJoin="round" Stroke="blue" StrokeThickness="20" />

<Polyline Points="30,230 45,215 60,230"
 StrokeLineJoin="bevel" Stroke="purple" StrokeThickness="20" />


<Rectangle Fill="red" Canvas.Top="300" Canvas.Left="15" Width="100" Height="50" StrokeLineJoin="miter" Stroke="green" StrokeThickness="10" />


<Rectangle Fill="yellow" Canvas.Top="300" Canvas.Left="135" Width="100" Height="50" StrokeLineJoin="round" Stroke="blue" StrokeThickness="10" />


<Rectangle Fill="orange" Canvas.Top="300" Canvas.Left="255" Width="100" Height="50" StrokeLineJoin="bevel" Stroke="purple" StrokeThickness="10" />

<Rectangle Fill="yellow" Canvas.Top="130" Canvas.Left="200" Width="200" Height="100" StrokeLineJoin="miter" Stroke="red" StrokeThickness="20" StrokeMiterLimit="1" />



</Canvas>
</Border>
