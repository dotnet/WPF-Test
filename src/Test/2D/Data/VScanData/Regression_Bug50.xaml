<Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Background="white">
    <Path Canvas.Left="0" Canvas.Top="0" Width="200" Height="200" Stroke="Black" Fill="Gray">
        <Path.Data>
            <RectangleGeometry Rect="0 0 100 100">
                <RectangleGeometry.Transform>
                    <RotateTransform Angle="30" />
                </RectangleGeometry.Transform>
            </RectangleGeometry>
        </Path.Data>
    </Path>
    <Path Canvas.Left="200" Canvas.Top="0" Width="200" Height="200" Stroke="Black" Fill="Gray">
        <Path.Data>
            <RectangleGeometry Rect="0 0 100 100">
                <RectangleGeometry.Transform>
                    <RotateTransform Angle="30" />
                </RectangleGeometry.Transform>
            </RectangleGeometry>
        </Path.Data>
    </Path>
    <Path Canvas.Left="400" Canvas.Top="0" Width="200" Height="200" Stroke="Black" Fill="Gray">
        <Path.Data>
            <GeometryGroup>
                <GeometryGroup.Transform>
                    <RotateTransform Angle="30" />
                </GeometryGroup.Transform>
                <RectangleGeometry Rect="0 0 100 100" />
            </GeometryGroup>
        </Path.Data>
    </Path>
</Canvas>
