<Border xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
    <Border.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientBrush.GradientStops>
                <GradientStopCollection>
                    <GradientStop Color="Turquoise" Offset="0" />
                    <GradientStop Color="White" Offset="1" />
                </GradientStopCollection>
            </GradientBrush.GradientStops>
        </LinearGradientBrush>
    </Border.Background>
    <Canvas Canvas.Left="150" Canvas.Top="125" Width="400" Height="400">
        <Image Canvas.Left="150" Canvas.Top="100">
            <Image.Source>
                <CustomLoadingBitmapImage Uri="Avalon.png" DecodePixelWidth="150" DecodePixelHeight="150" Rotation="Rotate90" />
            </Image.Source>
        </Image>
    </Canvas>
</Border>
