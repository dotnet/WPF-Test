<!-- A rotate transform is applied to a path with dash -->
<Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Decorator>
        <Decorator.RenderTransform>
            <RotateTransform Angle="35" />
        </Decorator.RenderTransform>
        <Path Data="M100,200 C100,100 250,100 250,200 S400,300 400,200" StrokeThickness="16" StrokeDashOffset="0" StrokeDashCap="Flat" StrokeDashArray="2 2">
            <Path.Stroke>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientBrush.GradientStops>
                        <GradientStopCollection>
                            <GradientStop Color="red" Offset="0" />
                            <GradientStop Color="blue" Offset="1" />
                        </GradientStopCollection>
                    </GradientBrush.GradientStops>
                </LinearGradientBrush>
            </Path.Stroke>
        </Path>
    </Decorator>
    <Path Data="M100,200 C100,100 250,100 250,200 S400,300 400,200" StrokeThickness="16" StrokeDashOffset="0" StrokeDashCap="Flat" StrokeDashArray="2 2">
        <Path.Stroke>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientBrush.GradientStops>
                    <GradientStopCollection>
                        <GradientStop Color="red" Offset="0" />
                        <GradientStop Color="blue" Offset="1" />
                    </GradientStopCollection>
                </GradientBrush.GradientStops>
            </LinearGradientBrush>
        </Path.Stroke>
    </Path>
</Canvas>
