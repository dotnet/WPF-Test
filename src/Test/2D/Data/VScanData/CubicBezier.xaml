<!--Test of cubic Bezier path-->
<Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Decorator>
        <Decorator.RenderTransform>
            <TransformGroup>
                <TransformGroup.Children>
                    <TransformCollection>
                        <TranslateTransform X="0" Y="150" />
                        <ScaleTransform ScaleX="0.8" ScaleY="0.8" />
                    </TransformCollection>
                </TransformGroup.Children>
            </TransformGroup>
        </Decorator.RenderTransform>
        <Path Data="M100,200 C100,100 250,100 250,200 S400,300 400,200" Shape.Stroke="Blue" StrokeThickness="2">
            <Path.Fill>
                <RadialGradientBrush>
                    <GradientBrush.GradientStops>
                        <GradientStopCollection>
                            <GradientStop Color="green" Offset="0" />
                            <GradientStop Color="yellow" Offset="1" />
                        </GradientStopCollection>
                    </GradientBrush.GradientStops>
                </RadialGradientBrush>
            </Path.Fill>
        </Path>
    </Decorator>
    <Decorator>
        <Decorator.RenderTransform>
            <TransformGroup>
                <TransformGroup.Children>
                    <TransformCollection>
                        <TranslateTransform X="450" Y="150" />
                        <ScaleTransform ScaleX="0.8" ScaleY="0.8" />
                    </TransformCollection>
                </TransformGroup.Children>
            </TransformGroup>
        </Decorator.RenderTransform>
        <Path Data="M100,200 C100,100 250,100 250,200 S400,300 400,200" Shape.Stroke="Blue" StrokeThickness="2">
            <Path.Fill>
                <RadialGradientBrush>
                    <GradientBrush.GradientStops>
                        <GradientStopCollection>
                            <GradientStop Color="purple" Offset="0" />
                            <GradientStop Color="#F20" Offset="1" />
                        </GradientStopCollection>
                    </GradientBrush.GradientStops>
                </RadialGradientBrush>
            </Path.Fill>
        </Path>
    </Decorator>
</Canvas>
