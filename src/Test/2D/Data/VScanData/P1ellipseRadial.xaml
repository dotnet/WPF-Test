<Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Background="#CCCCCC">
    <Ellipse Width="245" Height="155" Canvas.Left="127.5" Canvas.Top="122.5" StrokeThickness="5" Stroke="yellow">
        <Ellipse.Fill>
            <RadialGradientBrush Opacity="0.7" MappingMode="RelativeToBoundingBox">
                <RadialGradientBrush.GradientStops>
                    <GradientStop Color="#FF0000" Offset="0" />
                    <GradientStop Color="blue" Offset="0.5" />
                    <GradientStop Color="orange" Offset="1" />
                </RadialGradientBrush.GradientStops>
            </RadialGradientBrush>
        </Ellipse.Fill>
    </Ellipse>
    <Ellipse Width="255" Height="165" Canvas.Left="122.5" Canvas.Top="317.5" StrokeThickness="15" Stroke="yellow" Opacity="0.7">
        <Ellipse.Fill>
            <RadialGradientBrush>
                <GradientBrush.GradientStops>
                    <GradientStopCollection>
                        <GradientStop Color="red" Offset="0" />
                        <GradientStop Color="blue" Offset="1" />
                    </GradientStopCollection>
                </GradientBrush.GradientStops>
            </RadialGradientBrush>
        </Ellipse.Fill>
    </Ellipse>
</Canvas>
