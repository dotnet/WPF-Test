<Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" Background=" white">
    <Polyline>
        <Polyline.RenderTransform>
            <TransformGroup>
                <TransformGroup.Children>
                    <TransformCollection>
                        <ScaleTransform ScaleX="3" ScaleY="3" />
                        <TranslateTransform X="200" Y="100" />
                    </TransformCollection>
                </TransformGroup.Children>
            </TransformGroup>
        </Polyline.RenderTransform>
        <Polyline.Points>10,10 60,30 10,50 60,70 10,90 30,25</Polyline.Points>
        <Polyline.StrokeThickness>3</Polyline.StrokeThickness>
        <Polyline.StrokeLineJoin>miter</Polyline.StrokeLineJoin>
        <Polyline.StrokeMiterLimit>1</Polyline.StrokeMiterLimit>
        <Polyline.Fill>
            <SolidColorBrush Color="yellow" />
        </Polyline.Fill>
        <Polyline.Stroke>
            <LinearGradientBrush>
                <LinearGradientBrush.GradientStops>
                    <GradientStop Color="white" Offset="0" />
                    <GradientStop Color="SlateBlue" Offset="1" />
                </LinearGradientBrush.GradientStops>
            </LinearGradientBrush>
        </Polyline.Stroke>
    </Polyline>
</Canvas>
