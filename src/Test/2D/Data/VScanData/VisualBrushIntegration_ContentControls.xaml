        <Rectangle.Fill>
            <VisualBrush AlignmentX="Left" AlignmentY="Top">
	        <VisualBrush.Visual>
                    <TextBlock Background="White" Foreground="Blue">
                        <Hyperlink FontSize="20" Background="White" Foreground="Blue">_______________</Hyperlink>
                    </TextBlock>
 	        </VisualBrush.Visual>
            </VisualBrush>
        </Rectangle.Fill>
    </Rectangle>

    </Canvas>
</Page>
