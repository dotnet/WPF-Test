    <!-- SECTION 2: Use Content Controls in a VisualBrush -->

    <!-- Button: Use Button in a VisualBrush -->
    <Rectangle Canvas.Top="150" Canvas.Left="10" Width="150" Height="50" Stroke="Red" StrokeThickness="2">
        <Rectangle.Fill>
            <VisualBrush AlignmentX="Left" AlignmentY="Top">
	        <VisualBrush.Visual>
                    <Button Width="100" Height="40" BorderThickness="2" BorderBrush="Yellow" Background="White" Foreground="Blue">|||||||||</Button>
 	        </VisualBrush.Visual>
            </VisualBrush>
        </Rectangle.Fill>
    </Rectangle> 

