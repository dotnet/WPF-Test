<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
    <Canvas>
    <!-- SECTION 1: Use a VisualBrush as a Background for Content Controls -->
    <!-- Button: Use VisualBrush in Button.Background, Button.Foreground and Button.BorderBrush -->
    <Button Canvas.Top="10" Canvas.Left="10" Width="100" Height="40" BorderThickness="5">
    |||||||||
        <Button.Background>
            <VisualBrush>
	        <VisualBrush.Visual>
	            <Canvas Width="50" Height="50" Background="Beige" /> 
 	        </VisualBrush.Visual>
            </VisualBrush>
        </Button.Background>
        <Button.Foreground>
            <VisualBrush>
	        <VisualBrush.Visual>
	            <Canvas Width="50" Height="50" Background="Blue" /> 
 	        </VisualBrush.Visual>
            </VisualBrush>
        </Button.Foreground>
        <Button.BorderBrush>
            <VisualBrush>
	        <VisualBrush.Visual>
	            <Canvas Width="50" Height="50" Background="Red" /> 
 	        </VisualBrush.Visual>
            </VisualBrush>
        </Button.BorderBrush>
    </Button>

