<Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" Background="#CCCCCC">
    <Decorator>
        <Decorator.LayoutTransform>
            <TransformGroup>
                <TransformGroup.Children>
                    <TransformCollection>
                        <SkewTransform AngleY="20" />
                        <SkewTransform AngleX="20" />
                    </TransformCollection>
                </TransformGroup.Children>
            </TransformGroup>
        </Decorator.LayoutTransform>
        <Rectangle Stroke="red" StrokeThickness="3" Canvas.Top="10" Canvas.Left="5" Width="200" Height="150" Fill="pink" />
    </Decorator>
</Canvas>
