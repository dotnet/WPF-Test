<Canvas
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="#CCCCCC">





<Rectangle

       Width="300" Height="400"
        Stroke="purple"
        StrokeThickness="5px"
        Stretch="UniformToFill"
        RadiusX="15"
        RadiusY="15"
        >
</Rectangle>

<Rectangle

       Width="300" Height="400"
        Stroke="blue"
        StrokeThickness="5px"
        Stretch="Fill"
        RadiusX="15"
        RadiusY="15"
        >
</Rectangle>



<Rectangle

       Width="300" Height="400"
        Stroke="yellow"
        StrokeThickness="5px"
        Stretch="Uniform"
        RadiusX="15"
        RadiusY="15"
        >
</Rectangle>



<Rectangle

      Canvas.Left="50" Canvas.Top="50"
        Stroke="red"
        StrokeThickness="15"
        Stretch="None"
        RadiusX="15"
        RadiusY="15"
        >
</Rectangle>

<Rectangle Width="300" Height="400" Stroke="black" StrokeThickness="1" />

</Canvas>
