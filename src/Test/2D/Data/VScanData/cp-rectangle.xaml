<!-- This test sets writeable properties on the Rectangle element.
Includes:
  All properties declared on the Rectangle element
  All properties inherited from Shape.
  All properties inheritied from VisualElement
-->

<Border xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:media="clr-namespace:System.Windows.Media;assembly=PresentationCore" Background="#CCCCCC" xmlns:MappingPIGen1="clr-namespace:System.Windows.Media;assembly=PresentationCore">
    <Canvas>
        <Decorator>
            <Decorator.LayoutTransform>
                <TransformGroup>
                    <TransformGroup.Children>
                        <TransformCollection>
                            <RotateTransform Angle="20" />
                            <TranslateTransform X="20" Y="20" />
                            <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
                        </TransformCollection>
                    </TransformGroup.Children>
                </TransformGroup>
            </Decorator.LayoutTransform>
            <Rectangle>
                <!--  DECLARED PROPERTIES -->
                <Canvas.Top>75</Canvas.Top>
                <Canvas.Left>75</Canvas.Left>
                <Rectangle.Height>100</Rectangle.Height>
                <Rectangle.Width>75</Rectangle.Width>
                <Rectangle.RadiusX>10</Rectangle.RadiusX>
                <Rectangle.RadiusY>10</Rectangle.RadiusY>
                <!--  PROPERTIES INHERITED FROM Shape -->
                <Rectangle.StrokeThickness>10</Rectangle.StrokeThickness>
                <Rectangle.StrokeLineJoin>bevel</Rectangle.StrokeLineJoin>
                <Rectangle.Fill>
                    <media:SolidColorBrush Color="blue" Opacity="0.6" />
                </Rectangle.Fill>
                <Rectangle.Stroke>
                    <media:SolidColorBrush Color="red" Opacity="0.5" />
                </Rectangle.Stroke>
            </Rectangle>
        </Decorator>
        <Decorator>
            <Decorator.LayoutTransform>
                <TransformGroup>
                    <TransformGroup.Children>
                        <TransformCollection>
                            <RotateTransform Angle="20" />
                            <TranslateTransform X="20" Y="20" />
                            <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
                        </TransformCollection>
                    </TransformGroup.Children>
                </TransformGroup>
            </Decorator.LayoutTransform>
            <Rectangle>
                <!--  DECLARED PROPERTIES -->
                <Canvas.Top>75</Canvas.Top>
                <Canvas.Left>275</Canvas.Left>
                <Rectangle.Height>100</Rectangle.Height>
                <Rectangle.Width>125</Rectangle.Width>
                <!--  PROPERTIES INHERITED FROM Shape -->
                <Rectangle.StrokeThickness>10</Rectangle.StrokeThickness>
                <Rectangle.StrokeLineJoin>miter</Rectangle.StrokeLineJoin>
                <Rectangle.StrokeMiterLimit>2</Rectangle.StrokeMiterLimit>
                <Rectangle.Fill>
                    <media:SolidColorBrush Color="yellow" Opacity="0.6" />
                </Rectangle.Fill>
                <Rectangle.Stroke>
                    <media:SolidColorBrush Color="red" Opacity="0.5" />
                </Rectangle.Stroke>
            </Rectangle>
        </Decorator>
        <Rectangle>
            <!--  DECLARED PROPERTIES -->
            <Canvas.Top>275</Canvas.Top>
            <Canvas.Left>275</Canvas.Left>
            <Rectangle.Height>100</Rectangle.Height>
            <Rectangle.Width>125</Rectangle.Width>
            <!--  PROPERTIES INHERITED FROM Shape -->
            <Rectangle.Stroke>orange</Rectangle.Stroke>
            <Rectangle.StrokeThickness>15</Rectangle.StrokeThickness>
            <Rectangle.StrokeLineJoin>round</Rectangle.StrokeLineJoin>
            <Rectangle.Fill>
                <media:SolidColorBrush Color="purple" Opacity="0.6" />
            </Rectangle.Fill>
            <Rectangle.Stroke>
                <media:SolidColorBrush Color="orange" Opacity="0.5" />
            </Rectangle.Stroke>
        </Rectangle>
    </Canvas>
</Border>
