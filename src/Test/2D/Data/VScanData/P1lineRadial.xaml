<Canvas
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   Background="#CCCCCC">

<Line>
      <Line.X1>25</Line.X1>
      <Line.Y1>25</Line.Y1>
      <Line.X2>300</Line.X2>
      <Line.Y2>250</Line.Y2>
      <Line.Stroke>
      
      <RadialGradientBrush Opacity="0.8" Center="1,1" RadiusX="1" RadiusY="1" SpreadMethod="reflect" MappingMode="RelativeToBoundingBox">
    <RadialGradientBrush.GradientStops>
      <GradientStop Color="skyblue" Offset="0" />
      <GradientStop Color="green" Offset="0.3" />
      <GradientStop Color="purple" Offset=".8" />
    <GradientStop Color="yellow" Offset="1" />
    </RadialGradientBrush.GradientStops>
    </RadialGradientBrush>
      </Line.Stroke>
      <Line.StrokeThickness>50</Line.StrokeThickness></Line>
</Canvas>
