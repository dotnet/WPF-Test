<Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" Background="Pink">
    <Border Canvas.Left="240" Canvas.Top="100" Width="300" Height="300">
        <Border.OpacityMask>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                <GradientBrush.GradientStops>
                    <GradientStopCollection>
                        <GradientStop Color="#0000" Offset="0" />
                        <GradientStop Color="#ff80" Offset="1" />
                    </GradientStopCollection>
                </GradientBrush.GradientStops>
            </LinearGradientBrush>
        </Border.OpacityMask>
        <Border.Background>
            <ImageBrush ImageSource="puppies.jpg" />
        </Border.Background>
    </Border>
</Canvas>
