<!-- testing lines with different slopes -->
<Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" Background="#CCCCCC">
    <Line X1="60" Y1="50" X2="350" Y2="340" StrokeThickness="30">
        <Line.Stroke>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientBrush.GradientStops>
                    <GradientStopCollection>
                        <GradientStop Color="yellow" Offset="0" />
                        <GradientStop Color="blue" Offset="1" />
                    </GradientStopCollection>
                </GradientBrush.GradientStops>
            </LinearGradientBrush>
        </Line.Stroke>
    </Line>
    <Line X1="30" Y1="30" X2="30" Y2="300" StrokeThickness="30">
        <Line.Stroke>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientBrush.GradientStops>
                    <GradientStopCollection>
                        <GradientStop Color="orange" Offset="0" />
                        <GradientStop Color="pink" Offset="1" />
                    </GradientStopCollection>
                </GradientBrush.GradientStops>
            </LinearGradientBrush>
        </Line.Stroke>
    </Line>
    <Line X1="25" Y1="30" X2="300" Y2="30" StrokeThickness="30">
        <Line.Stroke>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                <GradientBrush.GradientStops>
                    <GradientStopCollection>
                        <GradientStop Color="red" Offset="0" />
                        <GradientStop Color="blue" Offset="1" />
                    </GradientStopCollection>
                </GradientBrush.GradientStops>
            </LinearGradientBrush>
        </Line.Stroke>
    </Line>
    <Line X1="300" Y1="30" X2="30" Y2="300" StrokeThickness="30">
        <Line.Stroke>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                <GradientBrush.GradientStops>
                    <GradientStopCollection>
                        <GradientStop Color="yellow" Offset="0" />
                        <GradientStop Color="purple" Offset="1" />
                    </GradientStopCollection>
                </GradientBrush.GradientStops>
            </LinearGradientBrush>
        </Line.Stroke>
    </Line>
</Canvas>
