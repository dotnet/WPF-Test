
<Border xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:media="clr-namespace:System.Windows.Media;assembly=PresentationCore" Background="#CCCCCC" xmlns:MappingPIGen1="clr-namespace:System.Windows.Media;assembly=PresentationCore">
    <Canvas>
        <Decorator>
            <Decorator.LayoutTransform>
                <TransformGroup>
                    <TransformGroup.Children>
                        <TransformCollection>
                            <RotateTransform Angle="10" />
                            <TranslateTransform X="10" Y="10" />
                            <ScaleTransform ScaleX="3" ScaleY="3" />
                        </TransformCollection>
                    </TransformGroup.Children>
                </TransformGroup>
            </Decorator.LayoutTransform>
            <Line>
                <!--  DECLARED PROPERTIES -->
                <Line.X1>5</Line.X1>
                <Line.Y1>5</Line.Y1>
                <Line.X2>100</Line.X2>
                <Line.Y2>100</Line.Y2>
                <!--  PROPERTIES INHERITED FROM Shape -->
                <Line.Fill>blue</Line.Fill>
                <Line.Stroke>red</Line.Stroke>
                <Line.StrokeThickness>10</Line.StrokeThickness>
                <Line.StrokeStartLineCap>Round</Line.StrokeStartLineCap>
                <Line.StrokeEndLineCap>Round</Line.StrokeEndLineCap>
            </Line>
        </Decorator>
        <Line>
            <Line.X1>200</Line.X1>
            <Line.Y1>100</Line.Y1>
            <Line.X2>300</Line.X2>
            <Line.Y2>10</Line.Y2>
            <Line.StrokeThickness>10</Line.StrokeThickness>
            <Line.Stroke>
                <media:SolidColorBrush Color="red" Opacity="0.5" />
            </Line.Stroke>
        </Line>
        <Line>
            <Line.X1>300</Line.X1>
            <Line.Y1>100</Line.Y1>
            <Line.X2>400</Line.X2>
            <Line.Y2>10</Line.Y2>
            <Line.Stroke>blue</Line.Stroke>
            <Line.StrokeThickness>10</Line.StrokeThickness>
        </Line>
    </Canvas>
</Border>
