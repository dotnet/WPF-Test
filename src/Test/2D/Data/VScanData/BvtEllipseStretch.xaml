<Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Background="#CCCCCC">
    <Ellipse Width="400" Height="400" Stroke="purple" StrokeThickness="5px" Stretch="UniformToFill">
        <Ellipse.Fill>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                <GradientBrush.GradientStops>
                    <GradientStopCollection>
                        <GradientStop Color="yellow" Offset="0" />
                        <GradientStop Color="red" Offset="1" />
                    </GradientStopCollection>
                </GradientBrush.GradientStops>
            </LinearGradientBrush>
        </Ellipse.Fill>
    </Ellipse>
    <Ellipse Width="30" Height="400" Stroke="blue" StrokeThickness="5px" Stretch="Fill">
        <Ellipse.Fill>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientBrush.GradientStops>
                    <GradientStopCollection>
                        <GradientStop Color="yellow" Offset="0" />
                        <GradientStop Color="red" Offset="1" />
                    </GradientStopCollection>
                </GradientBrush.GradientStops>
            </LinearGradientBrush>
        </Ellipse.Fill>
    </Ellipse>
    <Ellipse Canvas.Left="420" Width="300" Height="400" Stroke="yellow" StrokeThickness="5px" Stretch="Uniform">
        <Ellipse.Fill>
            <RadialGradientBrush>
                <GradientBrush.GradientStops>
                    <GradientStopCollection>
                        <GradientStop Color="Blue" Offset="0" />
                        <GradientStop Color="red" Offset="1" />
                    </GradientStopCollection>
                </GradientBrush.GradientStops>
            </RadialGradientBrush>
        </Ellipse.Fill>
    </Ellipse>
    <Ellipse Canvas.Left="50" Width="200" Height="250" Stroke="red" StrokeThickness="25" Stretch="None">
        <Ellipse.Fill>
            <RadialGradientBrush>
                <GradientBrush.GradientStops>
                    <GradientStopCollection>
                        <GradientStop Color="Blue" Offset="0" />
                        <GradientStop Color="red" Offset="1" />
                    </GradientStopCollection>
                </GradientBrush.GradientStops>
            </RadialGradientBrush>
        </Ellipse.Fill>
    </Ellipse>
</Canvas>
