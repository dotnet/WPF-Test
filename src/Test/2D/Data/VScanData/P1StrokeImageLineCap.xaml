<!-- test of shapes with DrawingBrush stroke with different Linecaps-->

<Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Background="#CCCCCC">

<Path Data="M 20 20 L 120 80 L 20 100 z" StrokeThickness="25" StrokeStartLineCap="Flat" StrokeEndLineCap="Flat">
<Path.Stroke>
	<ImageBrush ImageSource="1BFLY.GIF" />
</Path.Stroke>
</Path>

<Path Data="M 200 20 L 300 80 L 200 100 z" StrokeThickness="25" StrokeStartLineCap="Square" StrokeEndLineCap="Square">
<Path.Stroke>
	<ImageBrush ImageSource="1BFLY.GIF" />
</Path.Stroke>
</Path>

<Path Data="M 350 20 L 450 80 L 350 100 z" StrokeThickness="25" StrokeStartLineCap="Round" StrokeEndLineCap="Round">
<Path.Stroke>
	<ImageBrush ImageSource="1BFLY.GIF" />
</Path.Stroke>
</Path>

<Path Data="M 500 20 L 600 80 L 500 100 z" StrokeThickness="25" StrokeStartLineCap="Triangle" StrokeEndLineCap="Triangle">
<Path.Stroke>
	<ImageBrush ImageSource="1BFLY.GIF" />
</Path.Stroke>
</Path>

<Line X1="20" Y1="150" X2="120" Y2="150" StrokeThickness="25" StrokeStartLineCap="Flat" StrokeEndLineCap="Flat">
