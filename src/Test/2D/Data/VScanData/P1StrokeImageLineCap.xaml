</Line.Stroke>
</Line>

<Line X1="450" Y1="150" X2="550" Y2="150" StrokeThickness="25" StrokeStartLineCap="Triangle" StrokeEndLineCap="Triangle">
<Line.Stroke>
	<ImageBrush ImageSource="1BFLY.GIF" />
</Line.Stroke>
</Line>

<Polyline StrokeThickness="25" StrokeStartLineCap="Flat" StrokeEndLineCap="Flat">
