<Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" Background="#CCCCCC">

<Polygon>
    
    <Polygon.Points>
        150,300 450,50 460,500
    </Polygon.Points>
    
<Polygon.Stroke>blue</Polygon.Stroke>
<Polygon.StrokeThickness>16</Polygon.StrokeThickness>
<Polygon.StrokeLineJoin>miter</Polygon.StrokeLineJoin>
<Polygon.StrokeMiterLimit>1</Polygon.StrokeMiterLimit>
<Polygon.Fill>yellow</Polygon.Fill>
       
    
</Polygon>



<Polygon>
    
    <Polygon.Points>
        350,300 650,50 660,500
    </Polygon.Points>
    
<Polygon.Stroke>red</Polygon.Stroke>
<Polygon.StrokeThickness>16</Polygon.StrokeThickness>
<Polygon.StrokeLineJoin>miter</Polygon.StrokeLineJoin>
<Polygon.StrokeMiterLimit>0.2</Polygon.StrokeMiterLimit>
<Polygon.Fill>purple</Polygon.Fill>
<Polygon.Opacity>0.8</Polygon.Opacity>
       
    
</Polygon>

</Canvas>
