<?xml version="1.0" ?>
<INIT
    Class="AnimationAPITest2D"
    TestType="BaseValueFirst"
    UseViewport3D="true"
    >

    <!-- ===================================================================================== -->
    <!--                    Test animation on Shapes' properties                               -->
    <!-- ===================================================================================== -->

    <VARIATION Shape="SimpleRectangle"

        Description="Animating Rectangle.Width from 0 To 90"

        ClassName="Rectangle"
        Property="Width"
        DefaultValue="100"
        From="10"
        To="90"
        DurationSeconds="1.5"
        />

    <VARIATION Shape="SimpleRectangle"

      Description="Animating Rectangle.Height from 0 To 90"

      ClassName="Rectangle"
      Property="Height"
      DefaultValue="100"
      From="10"
      To="90"
      DurationSeconds="1.5"
        />

    <VARIATION Shape="SimpleRectangle"

        Description="Animating Stroke.Color from White To Green"

        ClassName="Rectangle"
        Property="Stroke.Color"
        DefaultValue="255,255,255,255"
        From="0,0,0,0"
        To="255,0,255,0"
        DurationSeconds="1.5"
        />

    <VARIATION Shape="SimpleRectangle"

      Description="Animating Rectangle.RadiusX from -2 To 30"

      ClassName="Rectangle"
      Property="RadiusX"
      DefaultValue="0"
      From="-2"
      To="30"
      DurationSeconds="1.5"
        />

