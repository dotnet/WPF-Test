<!-- To show this window, do this: Window w=new Window1; w.Show(); -->
<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="Microsoft.Test.Graphics.DockPanelTest"

    ContentRendered="RunTest"
    >
<DockPanel LastChildFill="false">
        <Rectangle
            Name="RectBlue"
            DockPanel.Dock="Top"
            Fill="blue"
            Width="250"
            Height="150"
            Stroke="white"
            StrokeThickness="5"
              />
        <Rectangle
            Name="RectRed"
            DockPanel.Dock="Top"
            Fill="red"
            Width="250"
            Height="150"
            Stroke="orange"
            StrokeThickness="5"
              />
        <Rectangle
            Name="RectPurple"
            DockPanel.Dock="Top"
            Fill="purple"
            Width="250"
            Height="150"
            Stroke="white"
            StrokeThickness="5"
              />
    </DockPanel>


</Window>