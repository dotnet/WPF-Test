<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
<Canvas Height="400" Width="400">
<Canvas.Triggers>
      <EventTrigger RoutedEvent="FrameworkElement.Loaded">
        <EventTrigger.Actions>
          <BeginStoryboard>
            <Storyboard>
              <ColorAnimation Storyboard.TargetProperty="(GradientStop.Color)" Storyboard.TargetName="gradientStop"  From="Red" To="Blue" BeginTime="0:0:0" Duration="0:0:1" AutoReverse="True" RepeatBehavior="Forever"/>
            </Storyboard>
          </BeginStoryboard>
        </EventTrigger.Actions>
      </EventTrigger>
    </Canvas.Triggers>

  <Rectangle Canvas.Left="100" Canvas.Top="100" Grid.Row="1" Name="r1" Width="100" Height="100" Stroke="Black">
    <Rectangle.Fill>
       <LinearGradientBrush  StartPoint="0,1" EndPoint="1,1" SpreadMethod="Repeat" MappingMode="RelativeToBoundingBox">
         <LinearGradientBrush.GradientStops>
            <GradientStop Color="purple" Offset="0"/>
            <GradientStop x:Name="gradientStop" Color="orange" Offset="0.5"/>
            <GradientStop Color="yellow" Offset="1"/>
         </LinearGradientBrush.GradientStops>
       </LinearGradientBrush>
    </Rectangle.Fill>
  </Rectangle>
</Canvas>
</Page>
