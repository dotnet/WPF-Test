<!--> opacitymask     VisualBrush</!-->
<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:sys="clr-namespace:System;assembly=mscorlib" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Page.OpacityMask>
        <LinearGradientBrush>
            <GradientStop Offset="0" Color="Gray" />
            <GradientStop Offset="0.99" Color="Gray" />
            <GradientStop Offset="1" Color="Transparent" />
        </LinearGradientBrush>
    </Page.OpacityMask>
    <Page.Background>
        <VisualBrush>
            <VisualBrush.Visual>
                <Button>
                    <Button.BitmapEffect>
                        <DropShadowBitmapEffect>
                        </DropShadowBitmapEffect>
                    </Button.BitmapEffect>
                    <TextBlock RenderOptions.ClearTypeHint="Enabled">Clear</TextBlock>
                </Button>
            </VisualBrush.Visual>
        </VisualBrush>
    </Page.Background>
</Page>