<!-->geometryClip    		tiledVisualBrush</!-->
<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:sys="clr-namespace:System;assembly=mscorlib" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Page.Background>
        <VisualBrush TileMode="Tile">
            <VisualBrush.Visual>
                <Button>
                    <Button.Clip>
                        <RectangleGeometry Rect="0 0 100 100" RadiusX="1" RadiusY="1" />
                    </Button.Clip>
                    <Button.BitmapEffect>
                        <DropShadowBitmapEffect>
                        </DropShadowBitmapEffect>
                    </Button.BitmapEffect>
                    <TextBlock  RenderOptions.ClearTypeHint="Enabled" >Clear</TextBlock>
                </Button>
            </VisualBrush.Visual>
        </VisualBrush>
    </Page.Background>
</Page>