<!-->Textblock+layered+opacity    DrawingBrush+GlyphRunDrawing</!-->
<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:sys="clr-namespace:System;assembly=mscorlib" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Page.OpacityMask>
        <LinearGradientBrush>
            <GradientStop Offset="0" Color="Gray" />
            <GradientStop Offset="0.99" Color="Gray" />
            <GradientStop Offset="1" Color="Transparent" />
        </LinearGradientBrush>
    </Page.OpacityMask>
    <Page.Background>
        <DrawingBrush>
            <DrawingBrush.Drawing>
                <DrawingGroup RenderOptions.ClearTypeHint="Enabled">
                    <GeometryDrawing>
                        <GeometryDrawing.Brush>
                            <VisualBrush TileMode="Tile">
                                <VisualBrush.Visual>
                                    <Button>
                                        <TextBlock Opacity="0.99" RenderOptions.ClearTypeHint="Enabled">Clear</TextBlock>
                                    </Button>
                                </VisualBrush.Visual>
                            </VisualBrush>
                        </GeometryDrawing.Brush>
                        <GeometryDrawing.Geometry>
                            <RectangleGeometry Rect="0 0 100 100" RadiusX="1" RadiusY="1" />
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                    <GlyphRunDrawing ForegroundBrush="Black">
                        <GlyphRunDrawing.GlyphRun>
                            <GlyphRun GlyphIndices="38 79 72 35 85" BaselineOrigin="0,12" FontRenderingEmSize="13" AdvanceWidths="8 2.5 4.5 10 10">
                                <GlyphRun.GlyphTypeface>
                                            <GlyphTypeface FontUri="pack://siteoforigin:,,,/times.ttf" />
                                </GlyphRun.GlyphTypeface>
                            </GlyphRun>
                        </GlyphRunDrawing.GlyphRun>
                    </GlyphRunDrawing>
                </DrawingGroup>
            </DrawingBrush.Drawing>
        </DrawingBrush>
    </Page.Background>
</Page>
