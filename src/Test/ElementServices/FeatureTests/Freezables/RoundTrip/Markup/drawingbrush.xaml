<Canvas 
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:PresentationOptions="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options" 
 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 mc:Ignorable="PresentationOptions"
>    <Canvas.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientBrush.GradientStops>
                <GradientStopCollection>
                    <GradientStop Color="#666699" Offset="0" />
                    <GradientStop Color="white" Offset="1" />
                </GradientStopCollection>
            </GradientBrush.GradientStops>
        </LinearGradientBrush>
    </Canvas.Background>
    <Decorator>
        <Decorator.RenderTransform>
            <TransformGroup>
                <TransformGroup.Children>
                    <TransformCollection>
                        <TranslateTransform X="50" Y="50" />
                        <ScaleTransform ScaleX="2.5" ScaleY="2.5" />
                    </TransformCollection>
                </TransformGroup.Children>
            </TransformGroup>
        </Decorator.RenderTransform>
        <Polygon Stroke="yellow" StrokeThickness="2" Points="100,10 150,35 150,65 100,90 50,65 50,35">
            <Polygon.Fill>
                <DrawingBrush Viewbox="0,.2,1,.6" Viewport="0,0,.2,.15" TileMode="FlipXY" 			PresentationOptions:Freeze="true">
                    <DrawingBrush.Drawing>
                        <DrawingGroup>
                            <DrawingGroup.Children>
                                <GeometryDrawing>
                                    <GeometryDrawing.Brush>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientBrush.GradientStops>
                                                <GradientStopCollection>
                                                    <GradientStop Color="green" Offset="0" />
                                                    <GradientStop Color="yellow" Offset="1" />
                                                </GradientStopCollection>
                                            </GradientBrush.GradientStops>
                                        </LinearGradientBrush>
                                    </GeometryDrawing.Brush>
                                    <GeometryDrawing.Geometry>
                                        <EllipseGeometry RadiusX=".5" RadiusY=".3" Center=".5, .5" 						PresentationOptions:Freeze="false"/>
                                    </GeometryDrawing.Geometry>
                                </GeometryDrawing>
                                <GeometryDrawing Brush="red">
                                    <GeometryDrawing.Geometry>
                                        <EllipseGeometry RadiusX=".2" RadiusY=".2" Center=".2, .2" />
                                    </GeometryDrawing.Geometry>
                                </GeometryDrawing>
                            </DrawingGroup.Children>
                        </DrawingGroup>
                    </DrawingBrush.Drawing>
                </DrawingBrush>
            </Polygon.Fill>
        </Polygon>
    </Decorator>
</Canvas>
