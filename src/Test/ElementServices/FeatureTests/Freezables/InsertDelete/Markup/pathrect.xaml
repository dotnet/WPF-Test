<Canvas 
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:PresentationOptions="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options" 
 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 mc:Ignorable="PresentationOptions"
>


 
    <Path StrokeThickness="1.0" PresentationOptions:Freeze="false">
  	<Path.Stroke>
              	<LinearGradientBrush PresentationOptions:Freeze="false">
               		<LinearGradientBrush.GradientStops >
      	                 	<GradientStop Color="Red" />
                        	<GradientStop Color="Green" />
                      		</LinearGradientBrush.GradientStops>
                  	</LinearGradientBrush>
        </Path.Stroke>
   	<Path.Data>
               	    <RectangleGeometry Rect="150 120 201 214" PresentationOptions:Freeze="true">
			<RectangleGeometry.Transform>
				<TranslateTransform X="200" Y="230"  />
			</RectangleGeometry.Transform>
		    </RectangleGeometry>
        </Path.Data>
	
    </Path>
    <Path StrokeThickness="5.0" PresentationOptions:Freeze="true">
  	<Path.Stroke>
              	<LinearGradientBrush >
               		<LinearGradientBrush.GradientStops >
      	                 	<GradientStop Color="Blue" />
                        	<GradientStop Color="Yellow" />
                      		</LinearGradientBrush.GradientStops>
                  	</LinearGradientBrush>
        </Path.Stroke>
   	<Path.Data>
		<PathGeometry>
		      <PathGeometry.Transform>
                                <TranslateTransform X="225" Y="25" />
                      </PathGeometry.Transform>
                            
                      <PathFigure IsClosed="False">
                        <LineSegment Point="36, 136" />
                      </PathFigure>
                </PathGeometry>
        </Path.Data>

	
    </Path>

</Canvas>
