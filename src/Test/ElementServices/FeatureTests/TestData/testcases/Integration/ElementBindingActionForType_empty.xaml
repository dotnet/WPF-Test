<cmn:CustomStackPanel
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:av="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:cmn="clr-namespace:Microsoft.Test.Serialization.CustomElements;assembly=TestRuntime"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
>
  <cmn:CustomStackPanel.Resources>
  </cmn:CustomStackPanel.Resources>

  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
       <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>

    <!-- 
    ***********************************************************
    **** Element with locally defined properties ******
    ***********************************************************
    -->
    <StackPanel Grid.Column="0" Name="RootForElementWithInitialValues" Width="50" Height="50" Background="Pink">
    </StackPanel>

    <!-- 
    ****************************************
    **** Element with Binding****** ************
    ****************************************
    -->
    <StackPanel Grid.Column="1" Name="RootForElementWithBindings" Width="50" Height="50" Background="Orange">
    </StackPanel>
    
    <!-- 
     ***************************************
    **** Element with Binding in Style ***********
    ****************************************
    -->
    <StackPanel Grid.Column="2" Name="RootForElementWithBindingsInStyle" Width="50" Height="50" Background="Blue">
    </StackPanel>

    <!-- 
     ***************************************
    **** Element with Binding in Template *******
    ***************************************
    -->
    <StackPanel Grid.Column="3" Name="RootForElementWithBindingsInTemplate" Width="50" Height="50" Background="Green">
    </StackPanel>

    <!-- 
     ***************************************
    **** Element with Binding in DataTemplate *******
    ***************************************
    -->
    <StackPanel Grid.Column="4" Name="RootForElementWithBindingsInDataTemplate" Width="50" Height="50" Background="Yellow">
    </StackPanel>

    <!-- 
     ***************************************
    **** Element with Binding in DataTemplate *******
    ***************************************
    -->
    <StackPanel Grid.Column="5" Name="RootForElementWithStyleInResources" Width="50" Height="50" Background="Pink">
    </StackPanel>
  </Grid>
</cmn:CustomStackPanel>
