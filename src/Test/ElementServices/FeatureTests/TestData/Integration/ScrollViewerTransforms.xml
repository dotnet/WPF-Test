<?xml version="1.0" encoding="utf-8" ?>
<XamlTransformer    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  
  <!-- 1. Add a Scrollviewer with a Button to the second Viewport2DVisual3D's panel.-->
  <XmlTransform Name="ScrollViewerWithButton">
    <AppendXml TargetElement="//av:StackPanel[@Name='vp2d_parent2']">
      <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Canvas Width="200" Height="200">
          <Button  Name="scrollViewerButton" >blah</Button>
        </Canvas>
      </ScrollViewer>
    </AppendXml>
  </XmlTransform>

</XamlTransformer>
