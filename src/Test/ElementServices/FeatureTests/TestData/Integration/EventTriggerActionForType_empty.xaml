<cmn:CustomStackPanel
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:av="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:cmn="clr-namespace:Microsoft.Test.Serialization.CustomElements;assembly=TestRuntime"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
>
  <cmn:CustomStackPanel.Resources>
  </cmn:CustomStackPanel.Resources>

  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>

    
    <!-- 
    
    ****************************************
    **** Styled element section ************
    ****************************************
    -->
    <Button Grid.Column="0" Name="RootForElementWithEventTriggerInStyle" Width="50" Height="50" Background="Orange">
    </Button>

    <!-- 
    ****************************************
    ****  Templated element section ************
    ****************************************
    -->
    <Button Grid.Column="1" Name="RootForElementWithEventTriggerInTemplate" Width="50" Height="50" Background="Blue">
    </Button>
    <!-- 
    
    ***********************************************************
    **** Unstyled element with locally defined properties ******
    ***********************************************************
    -->
    <Button Grid.Column="2" Name="RootForElementWithInitialValues" Width="50" Height="50" Background="Pink">
    </Button>
    <!-- 
    
    **************************************
    **** element with EventTrigger  ******
    **************************************
    -->
    <Button Grid.Column="3" Name="RootForElementWithEventTrigger" Width="50" Height="50" Background="Green">
    </Button>
    
  </Grid>
</cmn:CustomStackPanel>
