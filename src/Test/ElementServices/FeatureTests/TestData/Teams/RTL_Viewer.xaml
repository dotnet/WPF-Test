<Section xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
	<BlockUIContainer Margin="10">
		<FlowDocumentScrollViewer Width="500" FlowDirection="RightToLeft">
			<FlowDocument Background="LightGreen">
				<Paragraph>This is a FlowDocumentScrollViewer.</Paragraph>
			</FlowDocument>
		</FlowDocumentScrollViewer>
	</BlockUIContainer>

	<BlockUIContainer Margin="20">
		<FlowDocumentPageViewer Width="500" Height="100" FlowDirection="RightToLeft">
			<FlowDocument Background="LightBlue">
				<Paragraph>This is a FlowDocumentPageViewer.</Paragraph>
				<Paragraph BreakPageBefore="True">This is the second page.</Paragraph>
			</FlowDocument>
		</FlowDocumentPageViewer>
	</BlockUIContainer>

	<BlockUIContainer Margin="20">
		<FlowDocumentReader Width="500" Height="100" FlowDirection="RightToLeft">
			<FlowDocument Background="LightGray">
				<Paragraph>This is a FlowDocumentReader.</Paragraph>
				<Paragraph BreakPageBefore="True">This is the second page.</Paragraph>
			</FlowDocument>
		</FlowDocumentReader>
	</BlockUIContainer>
</Section>