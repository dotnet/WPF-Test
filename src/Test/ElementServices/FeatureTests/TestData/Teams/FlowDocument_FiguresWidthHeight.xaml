<FlowDocumentPageViewer
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
>
    <FlowDocument
        Background="White"
        PagePadding="15"
        PageWidth="400"
        PageHeight="400"
    >    
        <FlowDocument.Resources>
            <Style TargetType="{x:Type Paragraph}">
                <Setter Property="Margin" Value="0" />
                <Setter Property="Padding" Value="0" />
            </Style>
            
            <Style TargetType="{x:Type Figure}">
                <Setter Property="Margin" Value="0" />
                <Setter Property="Padding" Value="0" />
            </Style>
        </FlowDocument.Resources>
        <Paragraph>
            <Figure Background="LightBlue" VerticalAnchor="PageTop" HorizontalAnchor="PageLeft">
                <Paragraph>Figure 1.</Paragraph>
            </Figure>
            
            <Figure Background="Pink" VerticalAnchor="PageTop" HorizontalAnchor="PageLeft" Width="100">
                <Paragraph>Figure 2. Width="100"</Paragraph>
            </Figure>
            
            <Figure Background="LightBlue" VerticalAnchor="PageTop" HorizontalAnchor="PageLeft" Height="30">
                <Paragraph>Figure 3. Height="30"</Paragraph>
            </Figure>
            
            <Figure Background="Pink" VerticalAnchor="PageTop" HorizontalAnchor="PageLeft" Width="70" Height="30">
                <Paragraph>Figure 4. Width="70" Height="30"</Paragraph>
            </Figure>
            
            <Figure Background="LightBlue" VerticalAnchor="PageTop" HorizontalAnchor="PageLeft" Width="5" Height="5">
                <Paragraph>Figure 5. Width="5" Height="5"</Paragraph>
            </Figure>
            
            <Figure Background="LightBlue" VerticalAnchor="PageTop" HorizontalAnchor="PageLeft" Width="500" Height="15">
                <Paragraph>Figure 6. Width="500" Height="15"</Paragraph>
            </Figure>
         </Paragraph>
    </FlowDocument>
</FlowDocumentPageViewer>
