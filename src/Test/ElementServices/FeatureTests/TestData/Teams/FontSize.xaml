<UniformGrid Background="LightYellow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UniformGrid.Resources>
        <Style x:Key="{x:Type FlowDocument}" TargetType="{x:Type FlowDocument}">
            <Setter Property="FontSize" Value="25" />
        </Style>
        <Style x:Key="{x:Type FlowDocumentScrollViewer}" TargetType="{x:Type FlowDocumentScrollViewer}">
            <Setter Property="VerticalScrollBarVisibility" Value="Hidden" />
        </Style>
    </UniformGrid.Resources>
    <FlowDocumentScrollViewer><FlowDocument Name="auto" Background="LightBlue">
        <Paragraph Margin="0">auto</Paragraph>
    </FlowDocument></FlowDocumentScrollViewer>
    <FlowDocumentScrollViewer><FlowDocument Name="pixel" Background="LightYellow">
        <Paragraph Margin="0">pixel</Paragraph>
    </FlowDocument></FlowDocumentScrollViewer>
    <FlowDocumentScrollViewer><FlowDocument Name="percent" Background="LightBlue">
        <Paragraph Margin="0">percent</Paragraph>
    </FlowDocument></FlowDocumentScrollViewer>
    <FlowDocumentScrollViewer><FlowDocument Name="large" Background="LightYellow">
        <Paragraph Margin="0">large</Paragraph>
    </FlowDocument></FlowDocumentScrollViewer>
    <FlowDocumentScrollViewer><FlowDocument Name="larger" Background="LightBlue">
        <Paragraph Margin="0">larger</Paragraph>
    </FlowDocument></FlowDocumentScrollViewer>
    <FlowDocumentScrollViewer><FlowDocument Name="medium" Background="LightYellow" >
        <Paragraph Margin="0">medium</Paragraph>
    </FlowDocument></FlowDocumentScrollViewer>
    <FlowDocumentScrollViewer><FlowDocument Name="point"  Background="LightBlue">
        <Paragraph Margin="0">point</Paragraph>
    </FlowDocument></FlowDocumentScrollViewer>
    <FlowDocumentScrollViewer><FlowDocument Name="small"  Background="LightYellow">
        <Paragraph Margin="0">small</Paragraph>
    </FlowDocument></FlowDocumentScrollViewer>
    <FlowDocumentScrollViewer><FlowDocument Name="smaller"  Background="LightBlue">
        <Paragraph Margin="0">smaller</Paragraph>
    </FlowDocument></FlowDocumentScrollViewer>
    <FlowDocumentScrollViewer><FlowDocument Name="xlarge"  Background="LightYellow">
        <Paragraph Margin="0">xlarge</Paragraph>
    </FlowDocument></FlowDocumentScrollViewer>
    <FlowDocumentScrollViewer><FlowDocument Name="xsmall"  Background="LightBlue">
        <Paragraph Margin="0">xsmall</Paragraph>
    </FlowDocument></FlowDocumentScrollViewer>
    <FlowDocumentScrollViewer><FlowDocument Name="xxlarge"  Background="LightYellow">
        <Paragraph Margin="0">xxlarge</Paragraph>
    </FlowDocument></FlowDocumentScrollViewer>
    <FlowDocumentScrollViewer><FlowDocument Name="xxsmall"  Background="LightBlue">
        <Paragraph Margin="0">xxsmall</Paragraph>
    </FlowDocument></FlowDocumentScrollViewer>
    <FlowDocumentScrollViewer><FlowDocument Name="em"  Background="LightYellow">
        <Paragraph Margin="0">em</Paragraph>
    </FlowDocument></FlowDocumentScrollViewer>
    <FlowDocumentScrollViewer><FlowDocument Name="ex"  Background="LightBlue">
        <Paragraph Margin="0">ex</Paragraph>
    </FlowDocument></FlowDocumentScrollViewer>
</UniformGrid>

