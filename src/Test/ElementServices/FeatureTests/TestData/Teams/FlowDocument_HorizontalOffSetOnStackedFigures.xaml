<Section xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Section.Resources> 
	    <Style TargetType="{x:Type Figure}">
		<Setter Property="Margin" Value="0" />
	    </Style>
	</Section.Resources>
	<Paragraph>            
	     <Figure Background="LightGreen" VerticalAnchor="PageTop" HorizontalAnchor="PageLeft" HorizontalOffset="20">
		<Paragraph>Figure 1. VerticalAnchor="PageTop" HorizontalAnchor="PageLeft" HorizontalOffset="20"</Paragraph>
	    </Figure>  
	    <Figure Background="LightPink" VerticalAnchor="PageTop" HorizontalAnchor="PageLeft" HorizontalOffset="20">
		<Paragraph>Figure 2. VerticalAnchor="PageTop" HorizontalAnchor="PageLeft" HorizontalOffset="20"</Paragraph>
	    </Figure>  
	    <Figure Background="LightBlue" VerticalAnchor="PageBottom" HorizontalAnchor="PageRight" HorizontalOffset="-15">
		<Paragraph>Figure 3. VerticalAnchor="PageBottom" HorizontalAnchor="PageRight" HorizontalOffset="-15"</Paragraph>
	    </Figure> 
	    <Figure Background="LightGray" VerticalAnchor="PageBottom" HorizontalAnchor="PageRight" HorizontalOffset="-15">
		<Paragraph>Figure 4. VerticalAnchor="PageBottom" HorizontalAnchor="PageRight" HorizontalOffset="-15"</Paragraph>
	    </Figure>  
	  </Paragraph>  
</Section>
