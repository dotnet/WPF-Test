<StackPanel
    HorizontalAlignment="Left"
    VerticalAlignment="Top"
    Background="Beige"
    Height="300" Width="800"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
>
        <TextBlock TextWrapping="WrapWithOverflow" FontSize="12pt" Name="PropertyDumpRoot" FontFamily="Tahoma">
            alignment.
            <Span FontFamily="Tahoma" FontSize="10pt" Background="Beige"> 
                <Run
                    BaselineAlignment="Top"
                    FontSize="8pt" FontFamily="Courier New" FontWeight="Bold"
                    Background="LightBlue"
                >
                    Top
                </Run> 
                vertical 
            </Span>
             
            alignment.
            <Span FontSize="10pt" Background="Beige" FontFamily="Tahoma"> 
                <Run
                    BaselineAlignment="Center"
                    FontSize="8pt" FontFamily="Courier New" FontWeight="Bold"
                    Background="LightBlue"
                >
                    Center
                </Run> 
                vertical 
            </Span>
            
            alignment.
            <Span FontSize="10pt" Background="Beige" FontFamily="Tahoma"> 
                <Run
                    BaselineAlignment="Bottom"
                    FontSize="8pt" FontFamily="Courier New" FontWeight="Bold"
                    Background="LightBlue"
                >
                    Bottom
                </Run> 
                vertical 
            </Span>
            
            alignment.
            <Span FontSize="10pt" Background="Beige" FontFamily="Tahoma"> 
                <Run
                    BaselineAlignment="TextTop"
                    FontSize="8pt" FontFamily="Courier New" FontWeight="Bold"
                    Background="LightBlue"
                >
                    TextTop
                </Run> 
                vertical 
            </Span>
            
            alignment.
            <Span FontSize="10pt" Background="Beige" FontFamily="Tahoma"> 
                <Run
                    BaselineAlignment="TextBottom"
                    FontSize="8pt" FontFamily="Courier New" FontWeight="Bold"
                    Background="LightBlue"
                >
                    TextBottom
                </Run> 
                vertical 
            </Span>
            
            alignment.
            <Span FontSize="10pt" Background="Beige" FontFamily="Tahoma"> 
                <Run
                    BaselineAlignment="Baseline"
                    FontSize="8pt" FontFamily="Courier New" FontWeight="Bold"
                    Background="LightBlue"
                >
                    Baseline
                </Run> 
                vertical 
            </Span>
            
            alignment.
            <Span FontSize="10pt" Background="Beige" FontFamily="Tahoma"> 
                <Run
                    BaselineAlignment="Subscript"
                    FontSize="8pt" FontFamily="Courier New" FontWeight="Bold"
                    Background="LightBlue"
                >
                    Subscript
                </Run> 
                vertical 
            </Span>
            
            alignment.
            <Span FontSize="10pt" Background="Beige" FontFamily="Tahoma"> 
                <Run
                    BaselineAlignment="Superscript"
                    FontSize="8pt" FontFamily="Courier New" FontWeight="Bold"
                    Background="LightBlue"
                >
                    Superscript
                </Run> 
                vertical 
            </Span>
        </TextBlock>
</StackPanel>
