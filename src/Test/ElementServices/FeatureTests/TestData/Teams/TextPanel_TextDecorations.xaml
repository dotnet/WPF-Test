<UniformGrid
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   Background="White"
    HorizontalAlignment="Left"
    VerticalAlignment="Top"
>
    <FlowDocumentScrollViewer><FlowDocument>
        <Paragraph TextDecorations="Underline">TextDecorations="Underline"</Paragraph>
    </FlowDocument></FlowDocumentScrollViewer>

    <FlowDocumentScrollViewer><FlowDocument>
        <Paragraph TextDecorations="Strikethrough">TextDecorations="Strikethrough"</Paragraph>
    </FlowDocument></FlowDocumentScrollViewer>

    <FlowDocumentScrollViewer><FlowDocument>
        <Paragraph TextDecorations="OverLine">TextDecorations="OverLine"</Paragraph>
    </FlowDocument></FlowDocumentScrollViewer>

</UniformGrid>
