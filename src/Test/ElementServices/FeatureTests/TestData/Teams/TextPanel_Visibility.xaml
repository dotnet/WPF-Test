<UniformGrid
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    HorizontalAlignment="Left"
    VerticalAlignment="Top"
    Columns="1"
>
    <Border BorderThickness="5" BorderBrush="Black" HorizontalAlignment="Left" VerticalAlignment="Top">
    <FlowDocumentScrollViewer
        DockPanel.Dock="Top"
        Visibility="Collapsed"
    >
    <FlowDocument>
        <Paragraph>Visibility="Collapsed"</Paragraph>
    </FlowDocument></FlowDocumentScrollViewer>
    </Border>

    <Border BorderThickness="5" BorderBrush="Black">
    <FlowDocumentScrollViewer 
        DockPanel.Dock="Top"
        Visibility="Hidden"
    >
    <FlowDocument Background="Wheat">
        <Paragraph>Visibility="Hidden"</Paragraph>
    </FlowDocument></FlowDocumentScrollViewer>
    </Border>

    <Border BorderThickness="5" BorderBrush="Black">
    <FlowDocumentScrollViewer 
        DockPanel.Dock="Top"
        Visibility="Visible"
    >
    <FlowDocument Background="Yellow">
        <Paragraph>Visibility="Visible"</Paragraph>
    </FlowDocument></FlowDocumentScrollViewer>
    </Border>
</UniformGrid>
