<StackPanel 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
>
    <StackPanel.Resources>
        <Style x:Key="{x:Type Paragraph}" TargetType="{x:Type Paragraph}">
            <Setter Property="FontSize" Value="24" />
        </Style>    
    </StackPanel.Resources>
    
    <FlowDocumentScrollViewer Height="100"><FlowDocument Name="palatinolinotype" Background="Crimson">
        <Paragraph Margin="0">Palatino LinoType</Paragraph>
    </FlowDocument></FlowDocumentScrollViewer>
    <FlowDocumentScrollViewer Height="100"><FlowDocument Name="couriernew" Background="LightYellow">
        <Paragraph Margin="0">Courier New</Paragraph>
    </FlowDocument></FlowDocumentScrollViewer>
    <FlowDocumentScrollViewer Height="100"><FlowDocument Name="timesnewroman" Background="Crimson">
        <Paragraph Margin="0">Times New Roman</Paragraph>
    </FlowDocument></FlowDocumentScrollViewer>
    <FlowDocumentScrollViewer Height="100"><FlowDocument Name="sanserif" Background="LightYellow">
        <Paragraph Margin="0">San Serif</Paragraph>
    </FlowDocument></FlowDocumentScrollViewer>
    <FlowDocumentScrollViewer Height="100"><FlowDocument Name="arial" Background="Crimson">
        <Paragraph Margin="0">Arial</Paragraph>
    </FlowDocument></FlowDocumentScrollViewer>
</StackPanel>

