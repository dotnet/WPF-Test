<Section xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
        <Section.Resources> 
            <Style TargetType="{x:Type Figure}">
                <Setter Property="Margin" Value="0" />
            </Style>
        </Section.Resources>
        <Paragraph>            
	     <Figure Background="LightGreen" VerticalOffset="20" VerticalAnchor="PageTop" HorizontalAnchor="PageLeft" Height="1 Page" Width="40" Margin="0">
            </Figure>  
            <Figure Background="LightBlue" VerticalOffset="20" VerticalAnchor="PageTop" HorizontalAnchor="PageLeft" Height="1 Page" Width="40" Margin="0">
            </Figure>   
            <Figure Background="LightGreen" VerticalOffset="-20" VerticalAnchor="PageTop" HorizontalAnchor="PageRight" Height="1 Page" Width="40" Margin="0">
            </Figure>  
            <Figure Background="LightBlue" VerticalOffset="-20" VerticalAnchor="PageTop" HorizontalAnchor="PageRight" Height="1 Page" Width="40" Margin="0">
            </Figure>   
	  </Paragraph>  
</Section>
