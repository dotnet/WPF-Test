<UniformGrid
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   Background="White"
   Width="640"
   Height="400"
   HorizontalAlignment="Left"
   VerticalAlignment="Top"
>
    <FlowDocumentScrollViewer Grid.Row="0"><FlowDocument FontSize="15" Background="Wheat">
        <Paragraph>FontSize="15"</Paragraph>
    </FlowDocument></FlowDocumentScrollViewer>

    <FlowDocumentScrollViewer Grid.Row="1"><FlowDocument FontSize="15px">
        <Paragraph>FontSize="15px"</Paragraph>
    </FlowDocument></FlowDocumentScrollViewer>

    <FlowDocumentScrollViewer Grid.Row="2"><FlowDocument FontSize="12pt" Background="Wheat">
        <Paragraph>FontSize="12pt"</Paragraph>
    </FlowDocument></FlowDocumentScrollViewer>
</UniformGrid>
