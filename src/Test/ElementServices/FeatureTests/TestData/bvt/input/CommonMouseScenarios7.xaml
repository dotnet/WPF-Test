      <Canvas.ContextMenu>
        <ContextMenu>
          <MenuItem Header="Item1">Item1</MenuItem>
          <MenuItem Header="Item2">Item2</MenuItem>
        </ContextMenu>
      </Canvas.ContextMenu>
