<cmn:CustomStackPanel
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cc="clr-namespace:Avalon.Test.CoreUI.Parser;assembly=ElementServicesTest"
    xmlns:cmn="clr-namespace:Microsoft.Test.Serialization.CustomElements;assembly=TestRuntime"
    xmlns:ci="clr-namespace:Avalon.Test.CoreUI.CoreInput.Common.Controls;assembly=ElementServicesTest"
    xmlns:cmd="clr-namespace:System.Windows.Input;assembly=PresentationCore"
    Verifier="ElementServicesTest.dll#Avalon.Test.Framework.Commanding.MultipleCommandBindingVerifiers.VerifyCommandBindingValue"
    xmlns:MappingPIGen1="clr-namespace:System.Windows.Input;assembly=PresentationCore"
    xmlns:MappingPIGen2="clr-namespace:System.Windows.Documents;assembly=PresentationFramework"
    xmlns:MappingPIGen3="clr-namespace:Avalon.Test.CoreUI.Parser;assembly=ElementServicesTest"
    xmlns:MappingPIGen4="clr-namespace:Avalon.Test.CoreUI.CoreInput.Common.Controls;assembly=ElementServicesTest"
    xmlns:MappingPIGen5="clr-namespace:Microsoft.Test.Serialization.CustomElements;assembly=TestRuntime"
    >
    <!--
    This is a Commanding test file, displaying elements with command and input bindings in a grid. 
    All commands have short names (no "CommandLibrary" prefix).
    -->
    <ci:InstrFrameworkPanel Height="100" Width="100" Name="Open">
        <ci:InstrFrameworkPanel.CommandBindings>
            <cmd:CommandBinding Command="Open" />
        </ci:InstrFrameworkPanel.CommandBindings>
        <ci:InstrFrameworkPanel.InputBindings>
            <cmd:KeyBinding Command="Open" Gesture="Ctrl+F9" />
            <cmd:MouseBinding Command="Open" Gesture="Alt+RightClick" />
        </ci:InstrFrameworkPanel.InputBindings>
    </ci:InstrFrameworkPanel>
    <ci:InstrFrameworkPanel Height="100" Width="100" Name="New">
        <ci:InstrFrameworkPanel.CommandBindings>
            <cmd:CommandBinding Command="New" />
        </ci:InstrFrameworkPanel.CommandBindings>
        <ci:InstrFrameworkPanel.InputBindings>
            <cmd:KeyBinding Command="New" Gesture="shift+NumPad0" />
            <cmd:MouseBinding Command="New" Gesture="LeftClick" />
        </ci:InstrFrameworkPanel.InputBindings>
    </ci:InstrFrameworkPanel>
    <ci:InstrFrameworkPanel Height="100" Width="100" Name="MoveRightByWord">
        <ci:InstrFrameworkPanel.CommandBindings>
            <cmd:CommandBinding Command="MoveRightByWord" />
        </ci:InstrFrameworkPanel.CommandBindings>
        <ci:InstrFrameworkPanel.InputBindings>
            <cmd:KeyBinding Command="MoveRightByWord" Gesture="ALT+o" />
            <cmd:MouseBinding Command="MoveRightByWord" Gesture="SHIFT+LeftDoubleClick" />
        </ci:InstrFrameworkPanel.InputBindings>
    </ci:InstrFrameworkPanel>
    <ci:InstrFrameworkPanel Height="100" Width="100" Name="Print">
        <ci:InstrFrameworkPanel.CommandBindings>
            <cmd:CommandBinding Command="Print" />
        </ci:InstrFrameworkPanel.CommandBindings>
        <ci:InstrFrameworkPanel.InputBindings>
            <cmd:KeyBinding Command="Print" Gesture="shift+Alt+F9" />
            <cmd:MouseBinding Command="Print" Gesture="Win+LeftClick" />
        </ci:InstrFrameworkPanel.InputBindings>
    </ci:InstrFrameworkPanel>
    <ci:InstrFrameworkPanel Height="100" Width="100" Name="SaveAs">
        <ci:InstrFrameworkPanel.CommandBindings>
            <cmd:CommandBinding Command="SaveAs" />
        </ci:InstrFrameworkPanel.CommandBindings>
        <ci:InstrFrameworkPanel.InputBindings>
            <cmd:KeyBinding Command="SaveAs" Gesture="Alt+Control+9" />
            <cmd:MouseBinding Command="SaveAs" Gesture="Ctrl+Alt+LeftClick" />
        </ci:InstrFrameworkPanel.InputBindings>
    </ci:InstrFrameworkPanel>
    <ci:InstrFrameworkPanel Height="100" Width="100" Name="Cut">
        <ci:InstrFrameworkPanel.CommandBindings>
            <cmd:CommandBinding Command="Cut" />
        </ci:InstrFrameworkPanel.CommandBindings>
        <ci:InstrFrameworkPanel.InputBindings>
            <cmd:KeyBinding Command="Cut" Gesture="Shift+Ctrl + VolumeUp" />
            <cmd:MouseBinding Command="Cut" Gesture="Ctrl+shift+RightDoubleClick" />
        </ci:InstrFrameworkPanel.InputBindings>
    </ci:InstrFrameworkPanel>
    <ci:InstrFrameworkPanel Height="100" Width="100" Name="AlignCenter">
        <ci:InstrFrameworkPanel.CommandBindings>
            <cmd:CommandBinding Command="AlignCenter" />
        </ci:InstrFrameworkPanel.CommandBindings>
        <ci:InstrFrameworkPanel.InputBindings>
            <cmd:KeyBinding Command="AlignCenter" Gesture="Ctrl+VolumeDown" />
            <cmd:MouseBinding Command="AlignCenter" Gesture="Alt+SHift+RightClick" />
        </ci:InstrFrameworkPanel.InputBindings>
    </ci:InstrFrameworkPanel>
    <ci:InstrFrameworkPanel Height="100" Width="100" Name="AlignLeft">
        <ci:InstrFrameworkPanel.CommandBindings>
            <cmd:CommandBinding Command="AlignLeft" />
        </ci:InstrFrameworkPanel.CommandBindings>
        <ci:InstrFrameworkPanel.InputBindings>
            <cmd:KeyBinding Command="AlignLeft" Gesture="shift+VolumeMute" />
            <cmd:MouseBinding Command="AlignLeft" Gesture="LeftClick" />
        </ci:InstrFrameworkPanel.InputBindings>
    </ci:InstrFrameworkPanel>
    <ci:InstrFrameworkPanel Height="100" Width="100" Name="AlignRight">
        <ci:InstrFrameworkPanel.CommandBindings>
            <cmd:CommandBinding Command="AlignRight" />
        </ci:InstrFrameworkPanel.CommandBindings>
        <ci:InstrFrameworkPanel.InputBindings>
            <cmd:KeyBinding Command="AlignRight" Gesture="ALT+MediaNexttrack" />
            <cmd:MouseBinding Command="AlignRight" Gesture="SHIFT+LeftDoubleClick" />
        </ci:InstrFrameworkPanel.InputBindings>
    </ci:InstrFrameworkPanel>
    <ci:InstrFrameworkPanel Height="100" Width="100" Name="Backspace">
        <ci:InstrFrameworkPanel.CommandBindings>
            <cmd:CommandBinding Command="Backspace" />
        </ci:InstrFrameworkPanel.CommandBindings>
        <ci:InstrFrameworkPanel.InputBindings>
            <cmd:KeyBinding Command="Backspace" Gesture="shift+Alt+mediapreviousTRACK" />
            <cmd:MouseBinding Command="Backspace" Gesture="Control+Win+MiddleClick" />
        </ci:InstrFrameworkPanel.InputBindings>
    </ci:InstrFrameworkPanel>
    <ci:InstrFrameworkPanel Height="100" Width="100" Name="ToggleBold">
        <ci:InstrFrameworkPanel.CommandBindings>
            <cmd:CommandBinding Command="ToggleBold" />
        </ci:InstrFrameworkPanel.CommandBindings>
        <ci:InstrFrameworkPanel.InputBindings>
            <cmd:KeyBinding Command="ToggleBold" Gesture="Alt+Control+mediAStop" />
            <cmd:MouseBinding Command="ToggleBold" Gesture="Ctrl+Alt+MiddleDoubleClick" />
        </ci:InstrFrameworkPanel.InputBindings>
    </ci:InstrFrameworkPanel>
    <ci:InstrFrameworkPanel Height="100" Width="100" Name="AlignJustify">
        <ci:InstrFrameworkPanel.CommandBindings>
            <cmd:CommandBinding Command="AlignJustify" />
        </ci:InstrFrameworkPanel.CommandBindings>
        <ci:InstrFrameworkPanel.InputBindings>
            <cmd:KeyBinding Command="AlignJustify" Gesture="Shift+Ctrl + Space" />
            <cmd:MouseBinding Command="AlignJustify" Gesture="Alt+Ctrl+shift+RightDoubleClick" />
        </ci:InstrFrameworkPanel.InputBindings>
    </ci:InstrFrameworkPanel>
</cmn:CustomStackPanel>
