            </FlowDocument>
        </RichTextBox>
    </DockPanel>

    <!-- Styling with triggers -->
    <DockPanel Background="white" Margin="5">
        <DockPanel.Resources>
            <Style x:Key="Style3">
                <Style.Triggers>
                    <Trigger Property="Control.IsMouseOver" Value="true">
                        <Setter Property="Control.Background" Value="Black" />
                        <Setter Property="Control.Foreground" Value="Yellow" />
                        <Setter Property="Control.AllowDrop" Value="False" />
                        <Setter Property="Control.IsEnabled" Value="true" />
                        <Setter Property="Control.AllowDrop" Value="False" />
                        <Setter Property="Control.BorderBrush" Value="Red" />
                        <Setter Property="Control.BorderThickness" Value="3,3,3,3" />
                        <Setter Property="Control.FlowDirection" Value="RightToLeft" />
                        <Setter Property="Control.FontFamily" Value="Arial" />
                        <Setter Property="Control.FontSize" Value="20" />
                        <Setter Property="Control.FontWeight" Value="800" />
                        <Setter Property="Control.Height" Value="100" />
                        <Setter Property="Control.FontStyle" Value="Italic" />
                        <Setter Property="Control.Width" Value="200" />
                        <Setter Property="Control.Padding" Value="10,10,0,0" />
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="Style4" BasedOn="{StaticResource Style3}">
                <Style.Triggers>
                    <Trigger Property="Control.IsMouseOver" Value="true">


                        <Setter Property="TextBoxBase.HorizontalScrollBarVisibility" Value="Visible" />
                        <Setter Property="TextBoxBase.VerticalScrollBarVisibility" Value="Visible" />
                    </Trigger>
                </Style.Triggers>
            </Style>
        </DockPanel.Resources>

