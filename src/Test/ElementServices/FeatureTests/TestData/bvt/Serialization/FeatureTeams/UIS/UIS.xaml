


<!-- Styling the Template-->
<cmn:CustomStackPanel Orientation="Vertical"
    xmlns='http://schemas.microsoft.com/winfx/2006/xaml/presentation'
    xmlns:x='http://schemas.microsoft.com/winfx/2006/xaml'
    xmlns:cmn="clr-namespace:Microsoft.Test.Serialization.CustomElements;assembly=TestRuntime" 
    >

    <!-- Templates for controls-->
    <DockPanel Background="Ivory" Margin="5">
        <DockPanel.Resources>
            <Style x:Key="MyBox" TargetType="{x:Type TextBoxBase}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type TextBoxBase}">
                            <Border Background="LightGreen" BorderThickness="3" BorderBrush="violet">
                                <ScrollViewer x:Name="PART_ContentHost" />
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="MyPassBox" TargetType="{x:Type PasswordBox}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type PasswordBox}">
                            <Border Background="LightBlue" BorderThickness="3" BorderBrush="violet">
                                <ScrollViewer x:Name="PART_ContentHost" />
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </DockPanel.Resources>


        <TextBox Style="{StaticResource MyBox}" Height="100" Width="200" DockPanel.Dock='Top'>Inside TB</TextBox>
        <RichTextBox Style="{StaticResource MyBox}" Height="100" Width="200" HorizontalAlignment="Left" DockPanel.Dock='Top'>
            <FlowDocument>
                <Paragraph>
                    hello inside RTB
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <PasswordBox Password="inside PB" Style="{StaticResource MyPassBox}" Height="100" Width="200" DockPanel.Dock='Top' />

    </DockPanel>

    <!-- Animating Controls - color -->
    <DockPanel Background="Ivory" Margin="5">
        <DockPanel.Resources>
            <Style x:Key="StyleForBox">
                <Setter Property="Control.Background">
                    <Setter.Value>
                        <SolidColorBrush Color="Red" x:Name="myBrush" />
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <EventTrigger RoutedEvent="Mouse.MouseEnter">
                        <EventTrigger.Actions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Duration="0:0:0.5" Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)" To="Yellow" AccelerationRatio=".9" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger.Actions>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="Mouse.MouseLeave">
                        <EventTrigger.Actions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Duration="0:0:0.5" Storyboard.TargetProperty="(Control.Background).(SolidColorBrush.Color)" AccelerationRatio=".9" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger.Actions>
                    </EventTrigger>
                </Style.Triggers>
            </Style>
        </DockPanel.Resources>

        <TextBox Text="hello" Style="{DynamicResource StyleForBox}" DockPanel.Dock='Top' />
        <PasswordBox Password="hello" Style="{DynamicResource StyleForBox}" DockPanel.Dock='Top' />
        <RichTextBox Style="{DynamicResource StyleForBox}" DockPanel.Dock='Top' />
    </DockPanel>

    <!-- Animating Controls - FontSize -->
    <DockPanel Background="white" Margin="5">
        <DockPanel.Resources>
            <Style x:Key="StyleForRect">
                <Style.Triggers>

                    <!-- Complex (multi-step) property path in a Style for a FrameworkElement -->
                    <EventTrigger RoutedEvent="Mouse.MouseEnter">
                        <EventTrigger.Actions>
                            <BeginStoryboard>
                                <BeginStoryboard.Storyboard>
                                    <Storyboard>
                                        <DoubleAnimation From="24" To="36" Duration="0:0:0.5"
                                         Storyboard.TargetProperty="FontSize" />
                                    </Storyboard>
                                </BeginStoryboard.Storyboard>
                            </BeginStoryboard>
                        </EventTrigger.Actions>
                    </EventTrigger>

                </Style.Triggers>
            </Style>
        </DockPanel.Resources>

        <!-- Sample FrameworkElement for Style Storyboard -->
        <TextBox FontSize="24" Width="200" Foreground="Black" Style="{DynamicResource StyleForRect}" Text="Animate" DockPanel.Dock='Top' />
        <PasswordBox FontSize="24" Width="200" HorizontalAlignment="Left" Foreground="Black" Style="{DynamicResource StyleForRect}" Password="Animate" DockPanel.Dock='Top ' />
        <RichTextBox Width="200" Foreground="Black" Style="{DynamicResource StyleForRect}">
