                  </GradientStopCollection>
                </LinearGradientBrush.GradientStops>
              </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        </MultiTrigger>
        </Style.Triggers>
    </Style>
      </Button.Style>
    </Button>
  </StackPanel>
</cmn:CustomCanvas>

