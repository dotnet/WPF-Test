<Page
    xmlns       = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x     = "http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Name="grid1">
        <Grid.Resources>
            <DataTemplate x:Key="MyDataTemplate">
                <Grid>
                    <Ellipse x:Name="MyEllipse" Height="20" Width="80" Fill="Cyan" />
                </Grid>
            </DataTemplate>
        </Grid.Resources>
        <Button x:Name="MyButton" ContentTemplate="{StaticResource MyDataTemplate}" />
    </Grid>
</Page>
