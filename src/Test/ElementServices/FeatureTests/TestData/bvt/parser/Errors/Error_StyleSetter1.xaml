	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
>
	<DockPanel.Resources>
		<Style x:Key="ListBoxStyle">
			<Setter Property="SelectionMode" Value="Extended" />
		</Style>
	<DockPanel.Resources>

	<ListBox Style="{StaticResource ResourceKey=ListBoxStyle}">
		<ListBox.Items>
			<ListBoxItem> 1 </ListBoxItem>
		</ListBox.Items>
	</ListBox>	
</DockPanel>
</Page>
