

<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:MappingPIGen1="clr-namespace:System.Windows.Media;assembly=PresentationCore" xmlns:MappingPIGen2="clr-namespace:Avalon.Test.CoreUI.Parser;assembly=CoreTestsUntrusted">
<DockPanel xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:mil="clr-namespace:System.Windows.Media;assembly=PresentationCore"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:cc="clr-namespace:Avalon.Test.CoreUI.Parser;assembly=CoreTestsUntrusted">
  <DockPanel.Resources>
      <mil:Color x:Key="DaColor" R="255" />
      <mil:SolidColorBrush x:Key="DaBrush">
         <mil:SolidColorBrush.Color>
             <mil:Color R="255" />
         </mil:SolidColorBrush.Color>
      </mil:SolidColorBrush>
      <cc:ChangeableTest x:Key="ValueChange" IsChangeTest="1" />
  </DockPanel.Resources>
  <DockPanel>
    <Border Width="150" Height="50" Background="{DynamicResource DaBrush}"><DockPanel /></Border> 
    <Button Content="{DynamicResource ValueChange}" />
  </DockPanel>
</DockPanel>

</Page>
