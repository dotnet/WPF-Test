
<Application xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mil="clr-namespace:System.Windows.Media;assembly=PresentationCore"
    StartupUri="pack://siteoforigin:,,,/resource.xaml" xmlns:MappingPIGen1="clr-namespace:System.Windows.Media;assembly=PresentationCore">

    <Application.Resources>
        <!-- Resource only in App -->
        <mil:SolidColorBrush x:Key="RedBrush">
          <mil:SolidColorBrush.Color>
            <mil:Color A="255" R="255" />
          </mil:SolidColorBrush.Color>
        </mil:SolidColorBrush>

        <!-- Resource in both Page and App with same values -->
        <mil:SolidColorBrush x:Key="GreenBrush">
          <mil:SolidColorBrush.Color>
            <mil:Color A="255" G="255" />
          </mil:SolidColorBrush.Color>
        </mil:SolidColorBrush>
        
        <!-- Resource in both Page and App with different values -->
        <mil:SolidColorBrush x:Key="BlueBrush">
          <mil:SolidColorBrush.Color>
            <mil:Color A="255" R="128" G="128" />
          </mil:SolidColorBrush.Color>
        </mil:SolidColorBrush>
    </Application.Resources>

</Application>
