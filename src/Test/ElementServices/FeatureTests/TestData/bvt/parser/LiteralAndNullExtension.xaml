<!-- We are trying to verify that :
1. The new MarkupExtension called NullExtension works fine
2. Literal strings (with '{' escaped) work fine. 
-->

<cmn:CustomDockPanel
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:cc="clr-namespace:Avalon.Test.CoreUI.Parser;assembly=CoreTestsUntrusted" xmlns:cmn="clr-namespace:Microsoft.Test.Serialization.CustomElements;assembly=TestRuntime" xmlns:sys="clr-namespace:System;assembly=mscorlib"
 Verifier="CoreTestsUntrusted.dll#Avalon.Test.CoreUI.Parser.ParserVerifier.LiteralAndNullExtensionVerify" xmlns:MappingPIGen1="clr-namespace:Avalon.Test.CoreUI.Parser;assembly=CoreTestsUntrusted" xmlns:MappingPIGen2="clr-namespace:Microsoft.Test.Serialization.CustomElements;assembly=TestRuntime" xmlns:MappingPIGen3="clr-namespace:System;assembly=mscorlib"
>  
        <!-- These do not need escaping they don't start with '{' -->
	<Button Name="Button0" Content=" {Foo}" />
	<Button Name="Button1" Content="}" />

        <!-- These need escaping with {} -->
	<Button Name="Button2" Content="{}{Foo}" />
	<Button Name="Button3" Content="{}{" />
	<Button Name="Button4" Content="{}{{}}" />
	
	<!-- NullExtension -->
	<Button Name="Button5" Background="{x:Null}" />
</cmn:CustomDockPanel>
