<UserControl x:Class="Microsoft.Test.Input.MultiTouch.Tests.PhotoControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="White" Padding="5" BorderThickness="1" BorderBrush="Black"
    MinHeight="100" MinWidth="80"
    ManipulationStarted="OnManipulationStarted"
    ManipulationDelta="OnManipulationDelta"
    ManipulationInertiaStarting="OnManipulationInertiaStarting"
    ManipulationCompleted="OnManipulationCompleted"             
    >
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1">
            <Image x:Name="Photo" RenderOptions.BitmapScalingMode="LowQuality">
                <Image.LayoutTransform>
                    <ScaleTransform ScaleX="0.3" ScaleY="0.3" />
                </Image.LayoutTransform>
            </Image>
        </Border>
    </Grid>
</UserControl>
