
<DockPanel xmlns:ser="clr-namespace:DRT;assembly=DrtMarkupSerializer" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:MappingPIGen1="clr-namespace:DRT;assembly=DrtMarkupSerializer">

  <DockPanel.Resources>
    <Style xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="yellow" />
    </Style>
  </DockPanel.Resources>

  <TextBlock> Hello World! </TextBlock>

  <Button> Click Me! </Button>

  <Button> 
    <TextBlock> Click Me Again! </TextBlock> 
  </Button>

  <Button Command="Cut"> 
  </Button>

  <Button Command="ScrollBar.PageDownCommand"> 
  </Button>

  <Button Command="ser:Label.MyCommand"> 
  </Button>

  <TextBlock>
    <Hyperlink> 
    <Button> 
      <TextBlock> Click Me Again and Again! </TextBlock> 
    </Button> 
  </Hyperlink></TextBlock>

  <Button> 
    <StackPanel>
      <TextBlock> Click Me Again and Again and Again! </TextBlock> 
      <TextBlock> Click Me Again and Again and Again and Again! </TextBlock> 
    </StackPanel>
  </Button> 

  <StackPanel>

  
    <TextBlock Margin="2,2,2,2" FontFamily="Arial" FontSize="12">20% grid grid</TextBlock>
  </StackPanel>

  <Canvas>
    <Ellipse Width="152" Height="102" Canvas.Left="174" Canvas.Top="24" StrokeThickness="2" Name="Ellipse1" Stroke="black">
      <Ellipse.Fill>
        <RadialGradientBrush Opacity="0.5">
          <RadialGradientBrush.GradientStops>
            <GradientStopCollection>
              <GradientStop Color="red" Offset="0" />
            </GradientStopCollection>
          </RadialGradientBrush.GradientStops>
        </RadialGradientBrush>
      </Ellipse.Fill>
    </Ellipse>
  </Canvas>

  <Canvas>
    <Line Name="Line1">
      <Line.X1>455</Line.X1>
      <Line.Y1>255</Line.Y1>
      <Line.X2>200</Line.X2>
      <Line.Y2>150</Line.Y2>
      <Line.Stroke>
        <LinearGradientBrush Opacity="0.5">
          <LinearGradientBrush.GradientStops>
             <GradientStopCollection>
                <GradientStop Color="green" Offset="0" />
             </GradientStopCollection>
          </LinearGradientBrush.GradientStops>
        </LinearGradientBrush>
      </Line.Stroke>
    </Line>
  </Canvas>

  <StackPanel xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Uid="0" Cursor="Hand" />

</DockPanel>
