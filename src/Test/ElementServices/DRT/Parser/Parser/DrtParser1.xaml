<Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:dorf="http://schemas.microsoft.com/winfx/2006/xaml" dorf:SynchronousMode="Sync">
 <Canvas.Triggers>
  <EventTrigger RoutedEvent="FrameworkElement.Loaded">
   <EventTrigger.Actions>
    <BeginStoryboard>
     <Storyboard>
      <DoubleAnimation Storyboard.TargetName="b1" Storyboard.TargetProperty="(Canvas.Left)"
         From="40" To="300" AutoReverse="true" RepeatBehavior="0:0:4" Duration="0:0:1.2" />
      <DoubleAnimation Storyboard.TargetName="b1" Storyboard.TargetProperty="(Canvas.Top)"
         From="10" To="180" AutoReverse="true" RepeatBehavior="0:0:4" Duration="0:0:3.2" />
      <DoubleAnimation Storyboard.TargetName="b1" Storyboard.TargetProperty="(Border.Height)"
        From="10" To="180" AutoReverse="true" RepeatBehavior="0:0:4" Duration="0:0:2" />
      <DoubleAnimation Storyboard.TargetName="b1" Storyboard.TargetProperty="(Border.Width)"
        From="10" To="470" AutoReverse="true" RepeatBehavior="0:0:4" Duration="0:0:0.79" />

      <DoubleAnimation Storyboard.TargetName="b2" Storyboard.TargetProperty="(Canvas.Left)"
        From="40" To="300" AutoReverse="true" RepeatBehavior="0:0:4" Duration="0:0:4" />
      <DoubleAnimation Storyboard.TargetName="b2" Storyboard.TargetProperty="(Canvas.Top)"
        From="10" To="180" AutoReverse="true" RepeatBehavior="0:0:4" Duration="0:0:3.7" />
      <DoubleAnimation Storyboard.TargetName="b2" Storyboard.TargetProperty="(Border.Height)"
        From="10" To="150" AutoReverse="true" RepeatBehavior="0:0:4" Duration="0:0:0.75" />
      <DoubleAnimation Storyboard.TargetName="b2" Storyboard.TargetProperty="(Border.Width)"
        From="10" To="300" AutoReverse="true" RepeatBehavior="0:0:4" Duration="0:0:0.53" />

      <DoubleAnimation Storyboard.TargetName="ProgressBar" Storyboard.TargetProperty="(Border.Width)"
        From="0" To="600" FillBehavior="HoldEnd" Duration="0:0:4" />
     </Storyboard>
    </BeginStoryboard>
   </EventTrigger.Actions>
  </EventTrigger>
 </Canvas.Triggers>
  <Border Name="b1" Height="10" Width="10" BorderBrush="#80ff80" BorderThickness="4px" Canvas.Top="10" Canvas.Left="10" />
  
  <Border Name="b2" Height="50" Width="50" BorderBrush="#ff8080" BorderThickness="25" Canvas.Top="10" Canvas.Left="50" xml:lang="en-CA" />
  
  <Border Name="ProgressBar" Height="50" Width="0" Background="red" Canvas.Top="200" Canvas.Left="0" />

</Canvas>
