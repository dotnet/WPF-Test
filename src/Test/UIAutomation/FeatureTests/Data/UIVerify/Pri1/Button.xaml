<Canvas
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
>
	<StackPanel Orientation="Vertical">
		<Label Name="MyLabel" Target="{Binding ElementName=TestObject}">My Label</Label>
		<Button Name="TestObject" AutomationProperties.AccessKey="K" 
				AutomationProperties.HelpText="This is a button"
				AutomationProperties.AcceleratorKey="Alt+F4">Button</Button>
	<Button Name="SiblingButton">SiblingButton</Button>
	</StackPanel>
</Canvas>