<DocumentViewer xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			    Name="TestObject" Width="480">
	<FixedDocument>
		<PageContent>
			<FixedPage Background="#EEEEEE" Width="480" Height="230">
				<Canvas FixedPage.Top="0" FixedPage.Left="20">
					<TextBlock Height="20" Canvas.Top="5" FontSize="18">
						This is a photo from my recent vacation.
					</TextBlock>
					<TextBlock Height="20" Canvas.Top="40" FontSize="18">
						I had a great time visiting the different places
					</TextBlock>
					<TextBlock Height="20" Canvas.Top="60" FontSize="18">
						and seeing all the sights, but my favorite
					</TextBlock>
					<TextBlock Height="20" Canvas.Top="80" FontSize="18">
						place to visit was Cape Canaveral.
					</TextBlock>
					<Rectangle Canvas.Top="120" Canvas.Left="60" Width="100" Height="100">
						<Rectangle.Fill>
							<SolidColorBrush Opacity="1" Color="Orange"/>
						</Rectangle.Fill>
					</Rectangle>
				</Canvas>
			</FixedPage>
		</PageContent>
	</FixedDocument>
</DocumentViewer>