<Canvas
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
>
	<Grid Margin="0,0,0,0">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="60"/>
			<ColumnDefinition Width="50"/>
			<ColumnDefinition Width="50"/>
			<ColumnDefinition Width="60"/>
			<ColumnDefinition Width="60"/>
			<ColumnDefinition Width="60"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="50"/>
			<RowDefinition Height="20"/>
			<RowDefinition Height="50"/>
		</Grid.RowDefinitions>
		<TextBox Text="Test11" Grid.Row="0" TextWrapping="Wrap" />
		<TextBox Grid.Column="1" Grid.Row="0" Text="Test12" />
		<TextBox Grid.Column="2" Grid.Row="0" Text="Test13" />
		<TextBox Grid.Column="3" Grid.Row="0" Text="Test14" FontWeight="Bold" />
		<TextBox Grid.Column="4" Grid.Row="0" Text="Test15" />
		<TextBox Grid.Column="5" Grid.Row="0" Text="Test16" />

		<GridSplitter AutomationProperties.AutomationId="TestObject" 
			AutomationProperties.HelpText="This is a GridSplitter" 
			Grid.Row="1" Grid.ColumnSpan="6" 
			VerticalAlignment="Stretch"
			HorizontalAlignment="Stretch"
			ResizeDirection="Rows" Height="20" />
		
		<TextBox Grid.Column="0" Grid.Row="2" Text="Test21" TextWrapping="Wrap" />
		<TextBox Grid.Column="1" Grid.Row="2" Text="Test22" />
		<TextBox Grid.Column="2" Grid.Row="2" Text="Test23" />
		<TextBox Grid.Column="3" Grid.Row="2" Text="Test24" FontWeight="Bold" />
		<TextBox Grid.Column="4" Grid.Row="2" Text="Test25" />
		<TextBox Grid.Column="5" Grid.Row="2" Text="Test26" />
	</Grid>
</Canvas>