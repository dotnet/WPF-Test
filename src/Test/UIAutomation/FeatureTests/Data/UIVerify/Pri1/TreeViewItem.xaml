<Canvas
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
>
	<TreeView Grid.Row="2" Grid.Column="1" Margin="5">
		<TreeViewItem Name="TestObject" Header="My Computer" 
					  AutomationProperties.AcceleratorKey="Alt+F4"
					  AutomationProperties.AccessKey="T"
					  AutomationProperties.HelpText="A Tab Item"
					  AutomationProperties.IsRequiredForForm="False"
					  AutomationProperties.IsRowHeader="False">
			<TreeViewItem Header="Floppy Drive" />
			<TreeViewItem Header="Hard Drive">
				<TreeViewItem Header="boot.ini" />
				<TreeViewItem Header="config.sys" />
			</TreeViewItem>
		</TreeViewItem>
		<TreeViewItem Header="My Network Places">
			<TreeViewItem Header="msn.com" />
			<TreeViewItem Header="msweb" />
			<TreeViewItem Header="Other sites">
				<TreeViewItem Header="World News" />
				<TreeViewItem Header="Local News" />
				<TreeViewItem Header="Business News" />
			</TreeViewItem>
		</TreeViewItem>
	</TreeView>
</Canvas>
