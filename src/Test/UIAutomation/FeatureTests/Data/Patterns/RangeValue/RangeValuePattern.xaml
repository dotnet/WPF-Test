<Canvas
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
>
<!-- ProgressBar supports RangeValuePattern when IsIndeterminate is false. -->
<ProgressBar IsIndeterminate="false" LargeChange="50" SmallChange="10" Minimum="20" Maximum="200" Name="progressbar"/>
<ScrollBar LargeChange="50" SmallChange="10" Minimum="20" Maximum="200" Name="scrollbar" Height="200" Canvas.Top="50"/>
<Slider LargeChange="50" SmallChange="10" Minimum="20" Maximum="200" Name="slider" Canvas.Top="50" Canvas.Left="30"/>
</Canvas>
