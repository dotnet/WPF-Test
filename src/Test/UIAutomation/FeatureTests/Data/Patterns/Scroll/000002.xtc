<?xml version="1.0" ?>
<XTC
>
    <TEST
            Auto="1"
            Frequency="Weekly"
            Owner="Microsoft"
            Priority="1"
    >
        <DIMENSION
                Type="Class"
        />
        <DIMENSION
                Name="AdditionalTests"
                Value="*"
        />
        <DIMENSION
                Name="Language"
                Value="*"
        />
        <DIMENSION
                Name="Platform"
                Value="*"
        />
        <SCENARIO
                ID="7522451"
                Language="*:28203"
                Platform="*:16169"
        >
            <INIT
                    Class="Avalon.Test.ComponentModel.UiaScrollTest"
                    Assembly="UiAutoFTUtils"
                    TestType="UIAutomation"
            />
		<VARIATION
		    ID="3"
		>
		    <UIAPatternTest
			XamlFile="ScrollPattern.xaml"
			ControlName="listbox"
			>
			<Property Name="InitialHorizontallyScrollable" Value="true"/>
			<Property Name="InitialVerticallyScrollable" Value="false"/>
		    </UIAPatternTest>
		 </VARIATION>
	</SCENARIO>
        <STEP
                Index="1"
                Loader="FullTrust"
                LoaderSwitch="UIAutoLoader.exe"
                Run="000001.xtc"
        >
            <FILE
                    Path="*\FeatureTests\UIAutomation\*"
                    Type="support"
            />
        </STEP>
    </TEST>
</XTC>
