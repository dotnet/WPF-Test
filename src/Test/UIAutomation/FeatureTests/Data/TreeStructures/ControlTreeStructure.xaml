<Canvas
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
>
<ComboBox Name="combobox">
        <ComboBoxItem IsSelected="true" Name="comboboxitem1">Item1</ComboBoxItem>
        <ComboBoxItem Name="comboboxitem2">Item2</ComboBoxItem>
        <ComboBoxItem Name="comboboxitem3">Item3</ComboBoxItem>
</ComboBox>
<ListBox Name="listbox" Canvas.Left="180">
	<ListBoxItem Name="listboxitem1">Item1</ListBoxItem>
	<ListBoxItem Name="listboxitem2">Item2</ListBoxItem>
	<ListBoxItem Name="listboxitem3">Item3</ListBoxItem>
</ListBox>
<TabControl Canvas.Left="250" Name="tabcontrol">
	<TabItem Header="Item1" Name="item1">
		<StackPanel><Button>Button1</Button></StackPanel>
	</TabItem>
	<TabItem Header="Item2" Name="item2">
		<StackPanel><Button>Button 2</Button></StackPanel>
	</TabItem>
	<TabItem Header="Item3" Name="item3">
		<StackPanel><Button>Button 3</Button></StackPanel>
	</TabItem>
</TabControl>
<TreeView Canvas.Left="450" Grid.Row="2" Grid.Column="1" Margin="5" Name="treeview">
    <TreeViewItem Header="item1" IsExpanded="true" Name="treeviewitem1">
    </TreeViewItem>
    <TreeViewItem Header="item2" IsExpanded="true" Name="treeviewitem2">
    </TreeViewItem>
    <TreeViewItem Header="items" IsExpanded="true" Name="treeviewitem3">
    </TreeViewItem>
</TreeView>
<ScrollBar Name="scrollbar" Height="100" Canvas.Left="550"/>
<ToolBar Name="toolbar" Canvas.Left="600">
	<Button Name="button1">B1</Button>
	<Button Name="button2">B2</Button>
	<Button Name="button3">B3</Button>
</ToolBar>
<Slider Name="slider" Canvas.Top="50"/>
</Canvas>
