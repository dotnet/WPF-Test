                  </Trigger>
                </Style.Triggers>
              </Style>
            </ToggleButton.Style>
          </ToggleButton>
        </StackPanel>        
        <Border Name="Holder" Grid.Row="2" Background="White" BorderThickness="10" BorderBrush="Red">
            
        </Border>        
    </Grid> 
