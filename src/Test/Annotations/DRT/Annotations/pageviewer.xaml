                <ComboBoxItem>Blue</ComboBoxItem>
            </ComboBox>          

          <ToggleButton Name="FlowButton" Focusable="False">
            <ToggleButton.Style>
              <Style TargetType="{x:Type ToggleButton}">
                <Setter Property="Content " Value="LeftToRight"/>
