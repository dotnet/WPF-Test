<Canvas Width="300" Height="300" Background="Gray" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" > 

	<Path Canvas.Top="40" Data="M 100,200 C100,100 250,100 250,200"
	     Stroke="blue" StrokeThickness="16" StrokeDashOffset="0"
	    StrokeDashCap="Flat"             StrokeDashArray="4 2 2">
	</Path>

	<Path Data="M 100,200 C100,100 250,100 250,200"

              Stroke="red" StrokeThickness="16" StrokeDashOffset="0"
              StrokeDashCap="Flat" StrokeDashArray="4 2 2">

		<Path.BitmapEffect>
		      <DropShadowBitmapEffect ShadowDepth="10" Direction="5"/>
		</Path.BitmapEffect> 
        </Path>
</Canvas>
