<Canvas Width="300" Height="300" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" Background="Gray"> 
	<Ellipse Margin="20" Stretch="Fill" Width="100" Height="100" Fill="Blue" >
		<Ellipse.BitmapEffect>
			<BitmapEffectGroup>
				<DropShadowBitmapEffect ShadowDepth="115" Color="Black" Noise="10"/>
			</BitmapEffectGroup>
		</Ellipse.BitmapEffect>

	</Ellipse>
	<Ellipse Stretch="Fill" Margin="20" Canvas.Left="150" Width="100" Height="100" Fill="Blue" >
		<Ellipse.BitmapEffect>
			<BitmapEffectGroup>
				<DropShadowBitmapEffect ShadowDepth="115" Color="Black" Noise="10"/>
			</BitmapEffectGroup>
		</Ellipse.BitmapEffect>

	</Ellipse>
</Canvas>
