<Canvas Width="300" Height="300" Background="Gray" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Opacity="1">
    <Rectangle Canvas.Left="10" Canvas.Top="10" Name="r3" Stroke="Black" StrokeThickness="1" Width="50" Height="100">
        <Rectangle.BitmapEffect>
            <DropShadowBitmapEffect />
        </Rectangle.BitmapEffect>
    </Rectangle>
    <Rectangle Canvas.Left="150" Canvas.Top="10" Name="r4" Stroke="Black" StrokeThickness="1" Width="50" Height="100">
        <Rectangle.BitmapEffect>
            <DropShadowBitmapEffect Softness="0" />
        </Rectangle.BitmapEffect>
    </Rectangle>
    <Rectangle Canvas.Left="10" Canvas.Top="150" Name="r1" Stroke="Black" StrokeThickness="1" Width="200" Height="100">
        <Rectangle.LayoutTransform>
            <ScaleTransform ScaleX="0.2213" ScaleY="1" />
        </Rectangle.LayoutTransform>
        <Rectangle.BitmapEffect>
            <DropShadowBitmapEffect ShadowDepth="10" />
        </Rectangle.BitmapEffect>
    </Rectangle>
    <Rectangle Canvas.Left="150" Canvas.Top="150" Width="75" Height="75" Stroke="Black">
        <Rectangle.Fill>
            <SolidColorBrush Opacity="0.2" Color="Red" />
        </Rectangle.Fill>
        <Rectangle.BitmapEffect>
            <DropShadowBitmapEffect ShadowDepth="2" Softness="0.2" Color="Blue" />
        </Rectangle.BitmapEffect>
    </Rectangle>
</Canvas>
