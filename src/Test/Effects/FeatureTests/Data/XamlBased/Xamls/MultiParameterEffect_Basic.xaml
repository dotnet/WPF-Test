<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:ShaderEffects="clr-namespace:Microsoft.Test.Effects;assembly=ShaderEffects"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Rectangle Width="200" Height="200" Fill="Blue">
        <Rectangle.Effect>
            <ShaderEffects:MultiParameterShaderEffect 
                    FloatValue="200" 
                    DoubleValue="800" 
                    PointValue="50,80"
                    Point3DValue="30,40,100"
                    Point4DValue="20,30,5,80"
                    Vector3DValue="60,70,80" 
                    SizeValue="40,60"
                    VectorValue="50, 60" 
                    ColorValue="#ff00ff00" 
            />
        </Rectangle.Effect>
    </Rectangle>
</Grid>