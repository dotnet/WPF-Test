<!-- Regression for Part1 Regression_Bug8 : 
Changing FillRule of a Polygon does not update in real-time-->
<Grid xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
    <Polygon Fill="#FF000000" FillRule="NonZero" x:Name="polygon" >
        <Polygon.Points>
            <Point/>
            <Point X="200" Y="200"/>
            <Point X="200"/>
            <Point Y="200" />
            <Point X="100" />
            <Point X="100" Y="200" />
        </Polygon.Points>
    </Polygon>
</Grid>
