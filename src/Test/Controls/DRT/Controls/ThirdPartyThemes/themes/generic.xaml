

<ResourceDictionary
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:local="clr-namespace:DRT.ThirdPartyThemes"
           xmlns:sys="clr-namespace:System;assembly=mscorlib" xmlns:MappingPIGen1="clr-namespace:DRT.ThirdPartyThemes" xmlns:MappingPIGen2="clr-namespace:System;assembly=mscorlib"
           >
<Style TargetType="{x:Type local:ThirdPartyButton}">
    <Setter Property="Index" Value="2" />
    <Setter Property="Tag" Value="Style1" />
    <Setter Property="Template">
    <Setter.Value>
    <ControlTemplate TargetType="{x:Type local:ThirdPartyButton}">
        <Border Background="Red">
            <ContentPresenter />
        </Border>
    </ControlTemplate>
    </Setter.Value>
    </Setter>
</Style>

<sys:String x:Key="{ComponentResourceKey TypeInTargetAssembly={x:Type local:ThirdPartyButton},ResourceId=CRK}">CRKString</sys:String>
<SolidColorBrush x:Key="{ComponentResourceKey TypeInTargetAssembly={x:Type local:ThirdPartyButton},ResourceId=SharedBrush}" Color="#FF00AA00" x:Shared="True" />
<SolidColorBrush x:Shared="False" x:Key="{ComponentResourceKey TypeInTargetAssembly={x:Type local:ThirdPartyButton},ResourceId=NotSharedBrush}" Color="#FFAA0000" />
<UIElement x:Shared="False" x:Key="{ComponentResourceKey TypeInTargetAssembly={x:Type local:ThirdPartyButton},ResourceId=NotSharedUIElement}" />

</ResourceDictionary>
