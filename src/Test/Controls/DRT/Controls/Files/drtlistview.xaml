
<AdornerDecorator xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib" xmlns:MappingPIGen1="clr-namespace:System;assembly=mscorlib">
    
    <Canvas Name="canvas" Width="450" Height="450" Background="White">
        <Canvas.Resources>
            <DataTemplate x:Key="CellTemplate_Month_Blue">
                <Border BorderThickness="1" BorderBrush="Blue">
                    <TextBlock Text="{Binding Path=Month}" FontSize="28" Margin="20,2,20,2" />
                </Border>
            </DataTemplate>

            <DataTemplate x:Key="CellTemplate_Year_Yellow">
                <Border BorderThickness="1" BorderBrush="Yellow">
                    <TextBlock Text="{Binding Path=Year}" FontSize="28" Margin="20,2,20,2" />
                </Border>
            </DataTemplate>

            <DataTemplate x:Key="ColumnHeaderTemplate_Day_Pink">
                <Border BorderThickness="1" BorderBrush="Pink">
                    <TextBlock Text="Day" FontSize="28" Margin="20,2,20,2" />
                </Border>
            </DataTemplate>

            <DataTemplate x:Key="ColumnHeaderTemplate_Month_Blue">
                <Border BorderThickness="1" BorderBrush="Blue">
                    <TextBlock Text="Month" FontSize="28" Margin="20,2,20,2" />
                </Border>
            </DataTemplate>

            <DataTemplate x:Key="ColumnHeaderTemplate_Year_Yellow">
                <Border BorderThickness="1" BorderBrush="Yellow">
                    <TextBlock Text="Year" FontSize="28" Margin="20,2,20,2" />
                </Border>
            </DataTemplate>
            
        </Canvas.Resources>
            
        <ListView Name="listView"
            Width="400" Height="94" />

    </Canvas>
</AdornerDecorator>
