<StackPanel
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="White"
    Name="RootElement">
    
    <Button Name="Button1">System Theme Button</Button>

    <StackPanel>
        <StackPanel.Resources>
            <ResourceDictionary Source="{ThemeDictionary DrtThemeDictionaryExtension}" />
        </StackPanel.Resources>

        <Button Name="Button2">Custom Theme Button</Button>

        <StackPanel>
            <StackPanel.Resources>
                <ResourceDictionary Source="{ThemeDictionary PresentationFramework}" />
            </StackPanel.Resources>

            <Button Name="Button3">Restored System Theme Button</Button>
        </StackPanel>
    </StackPanel>
</StackPanel>
