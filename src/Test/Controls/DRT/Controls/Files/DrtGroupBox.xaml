<AdornerDecorator xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="sys"
    Width="300" Height="400">
    <Border>
        <GroupBox
          BorderBrush="White">
            <GroupBox.Header>
                <Label Foreground="White" Target="button" Name="label">GroupBox Header</Label>
            </GroupBox.Header>
            <Button Name="button">Test</Button>
        </GroupBox>
    </Border>
</AdornerDecorator>
