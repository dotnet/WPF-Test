<StackPanel xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="sys" Name="Root" Background="White"
    Orientation="Horizontal">
  <DatePicker x:Name="TestDatePicker" Width="150"></DatePicker>
  <StackPanel>
    <Button x:Name="TestButton" Height="50">Click Me</Button>
    <TextBox Text="{Binding ElementName=TestDatePicker, Path=SelectedDate}" />
    <TextBox Text="{Binding ElementName=TestDatePicker, Path=DisplayDate}" />
  </StackPanel>
</StackPanel>
