<DockPanel xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="sys" Name="Root" Width="200" Height="200"
    Background="Black">

   <ScrollBar Name="VerticalScrollBar" />

   <ScrollBar Name="HorizontalScrollBar" DockPanel.Dock="top" Orientation="Horizontal" />

   <ScrollViewer Name="ScrollViewer" HorizontalScrollBarVisibility="Visible" Margin="10">
       <Canvas Width="1000" Height="1000">
          <Canvas.Background>
             <LinearGradientBrush EndPoint="1,1">
                <LinearGradientBrush.GradientStops>
                   <GradientStop Offset="0" Color="White" />
                   <GradientStop Offset="1" Color="Black" />
                </LinearGradientBrush.GradientStops>
             </LinearGradientBrush>
          </Canvas.Background>
       </Canvas>
   </ScrollViewer>

</DockPanel>
