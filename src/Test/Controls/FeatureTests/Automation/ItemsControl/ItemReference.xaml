<Page x:Class="Microsoft.Test.Controls.ItemReference.ItemReference"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Microsoft.Test.Controls.ItemReference"
    Title="ItemReference Regresstion Test">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ListBox x:Name="listbox" Margin="3" ItemsSource="{Binding StringData}"/>

        <StackPanel Grid.Column="1">
            <Button x:Name="btnReplace" Margin="3" Content="Replace" Click="btn_Replace"/>
            <Button x:Name="btnGC" Margin="3" Content="GC" Click="btn_GC"/>
        </StackPanel>
    </Grid>
</Page>
