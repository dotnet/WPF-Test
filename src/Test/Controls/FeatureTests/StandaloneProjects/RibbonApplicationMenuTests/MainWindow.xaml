<Window x:Class="RibbonApplicationMenuTests.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525"
        >
    <Window.Resources>

        <DataTemplate x:Key="firstTemplate">
            <StackPanel>
                <TextBlock Text="{Binding Path=name}"></TextBlock>
                <Button Content="{Binding Path=val}" >
                </Button>
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="secondTemplate">
            <StackPanel>
                <Button Content="{Binding Path=val}" ></Button>
                <TextBlock Text="{Binding Path=name}"></TextBlock>
            </StackPanel>
        </DataTemplate>

    </Window.Resources>
    <Grid>
        <Button Content="RAM page" Height="45" HorizontalAlignment="Left" Margin="10,10,0,0" Name="button1" VerticalAlignment="Top" Width="93" Click="button1_Click" />
        <Button Content="run RAM tests" Height="43" HorizontalAlignment="Right" Margin="0,12,303,0" Name="button2" VerticalAlignment="Top" Width="91" Click="button2_Click" />
        <Button Content="NoTextPage" Height="42" HorizontalAlignment="Left" Margin="10,115,0,0" Name="button3" VerticalAlignment="Top" Width="91" Click="button3_Click" />
        <Button Content="RunVisTests" Height="42" HorizontalAlignment="Right" Margin="0,61,303,0" Name="button4" VerticalAlignment="Top" Width="91" Click="button4_Click" />
        <TextBox Height="138" HorizontalAlignment="Left" Margin="0,173,0,0" Name="output" VerticalAlignment="Top" Width="503" TextWrapping="Wrap" />
        <Button Content="Run API Tests" Height="43" HorizontalAlignment="Left" Margin="206,12,0,0" Name="button5" VerticalAlignment="Top" Width="120" Click="button5_Click" />
        <Button Content="Empty" Height="23" HorizontalAlignment="Left" Margin="427,37,0,0" Name="button6" VerticalAlignment="Top" Width="75" Click="button6_Click" />
        <Label Content="Recent docs
               " HorizontalAlignment="Left" Margin="428,10,0,273" Name="label1" Width="75" />
        <Button Content="1" Height="23" HorizontalAlignment="Left" Margin="428,61,0,0" Name="button7" VerticalAlignment="Top" Width="75" Click="button7_Click" />
        <Button Content="Many" Height="23" HorizontalAlignment="Left" Margin="428,90,0,0" Name="button8" VerticalAlignment="Top" Width="75" Click="button8_Click" />
        <Button Content="TemplatePage" Height="42" HorizontalAlignment="Left" Margin="109,115,0,0" Name="button9" VerticalAlignment="Top" Width="91" Click="button9_Click" />
    </Grid>
</Window>
