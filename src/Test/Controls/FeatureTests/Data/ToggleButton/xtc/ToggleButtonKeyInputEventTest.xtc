<XTC>
  <TEST Name="ToggleButtonInputEventTest" Priority="0" SubArea="ToggleButton" Timeout="600">
    <Keywords>
      <Keyword>Localization_Suite</Keyword>
    </Keywords>
    <DATA>
      <INIT Class="ButtonInputEventTest"/>
      <PICT Name="ButtonInputTest.pict" Args="/o:2" Excludes=""/>
      <XAMLS>
        <XAML Name="ButtonBVT.xaml"/>
        <XAML Name="ButtonClickModePressBVT.xaml"/>
      </XAMLS>
      <VARIATION ControlName="toggleButton" InputType="Keyboard" EventName="Click" ShouldEventFire="true" Key="Space" />
      <VARIATION ControlName="toggleButton" InputType="Keyboard" EventName="Click" ShouldEventFire="true" Key="Enter" />
      <VARIATION ControlName="uncheckedToggleButton" InputType="Keyboard" EventName="Checked" ShouldEventFire="true" Key="Space" />
      <VARIATION ControlName="checkedToggleButton" InputType="Keyboard" EventName="Unchecked" ShouldEventFire="true" Key="Space" />
    </DATA>
  </TEST>
</XTC>
