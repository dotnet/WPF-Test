<XTC>
  <TEST Name="ToggleButtonInputEventTest" Priority="0" SubArea="ToggleButton" Timeout="600">
    <DATA>
      <INIT Class="ButtonInputEventTest"/>
      <PICT Name="ButtonInputTest.pict" Args="/o:2" Excludes=""/>
      <XAMLS>
        <XAML Name="ButtonBVT.xaml"/>
        <XAML Name="ButtonClickModePressBVT.xaml"/>
        <XAML Name="ButtonClickModeHoverBVT.xaml"/>
      </XAMLS>
      <VARIATION ControlName="toggleButton" InputType="Mouse" EventName="Click" ShouldEventFire="true" MouseButton="Left" />
      <!-- Disabled on 4.X because it's broken there.  TODO: Fix and re-enable 
      <VARIATION ControlName="uncheckedToggleButton" InputType="Mouse" EventName="Checked" ShouldEventFire="true" MouseButton="Left" /> 
      <VARIATION ControlName="checkedToggleButton" InputType="Mouse" EventName="Unchecked" ShouldEventFire="true" MouseButton="Left" />
      -->

    </DATA>
  </TEST>
</XTC>
