<XTC>
    <TEST Name="StatusBar:FlowDirection property" SubArea="StatusBar" Priority="2" ExecutionGroup="Pri2">
        <DATA>
            <INIT Class="StatusBarFlowDirection"/>
            <VARIATION ID="1">
                <CONTROL>
                    <StatusBar
                            FlowDirection="LeftToRight"
                            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    >
                    </StatusBar>
                </CONTROL>
            </VARIATION>
            <VARIATION ID="2">
                <CONTROL>
                    <StatusBar
                            FlowDirection="RightToLeft"
                            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    >
                    </StatusBar>
                </CONTROL>
            </VARIATION>
            <VARIATION ID="3">
                <CONTROL>
                    <StatusBar
                            FlowDirection="LeftToRight"  Language="hr-hr" 
                            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    >
                    </StatusBar>
                </CONTROL>
            </VARIATION>
            <VARIATION ID="4">
                <CONTROL>
                    <StatusBar
                            FlowDirection="RightToLeft" Language="hr-hr" 
                            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    >
                    </StatusBar>
                </CONTROL>
            </VARIATION>
        </DATA>
    </TEST>
</XTC>
