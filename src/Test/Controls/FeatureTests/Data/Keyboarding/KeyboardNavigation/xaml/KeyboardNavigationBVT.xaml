<StackPanel xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"     
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    >
        <Button Name="topButton" Content="Top Button" />
        <Canvas Name="panel" Height="80" Background="LightBlue">
            <Button Name="button1" Canvas.Top="3" Canvas.Left="3">Button 1</Button>
            <Button Name="button2" Canvas.Top="3" Canvas.Left="110">Button 2</Button>
            <Button Name="button3" Height="20" Canvas.Top="40" Canvas.Left="3">Button 3</Button>
            <TextBox Name="textbox" Text="TextBox" Width="100" Height="20" Canvas.Top="40" Canvas.Left="110" />
        </Canvas>
        <Button Name="bottomButton" Content="Bottom Button"/>
</StackPanel>
