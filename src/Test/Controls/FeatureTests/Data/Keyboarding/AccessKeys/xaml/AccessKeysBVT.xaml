<WrapPanel xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"     
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Name="panel">
        <Label Name="label" Content="_Label"/>
        <Button Name="button" Content="_Button"/>
        <RepeatButton Name="repeatbutton" Content="_RepeatButton"/>
        <ToggleButton Name="togglebutton" Content="_ToggleButton"/>
        <CheckBox Name="checkbox" Content="_CheckBox"/>
        <RadioButton Name="radiobutton" Content="R_adioButton"/>
        <TabControl Width="200" Height="50">
            <TabItem Header="Item1"/>
            <TabItem Name="tabitem" Header="_Item2"/>
        </TabControl>
        <Menu>
            <MenuItem Name="menuitem" Header="_File">
                <MenuItem Name="submenuitem" Header="_New" InputGestureText="Ctrl+N" />
                <MenuItem Header="_Open" InputGestureText="Ctrl+O" />
            </MenuItem>
        </Menu>
</WrapPanel>
