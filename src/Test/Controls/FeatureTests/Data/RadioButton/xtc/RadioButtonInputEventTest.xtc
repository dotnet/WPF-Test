<XTC>
  <TEST Name="RadioButtonInputEventTest" Priority="0" SubArea="RadioButton" Timeout="600">
    <Keywords>
      <Keyword>Localization_Suite</Keyword>
    </Keywords>
    <DATA>
      <INIT Class="ButtonInputEventTest"/>
      <PICT Name="ButtonInputTest.pict" Args="/o:2" Excludes=""/>
      <XAMLS>
        <XAML Name="ButtonBVT.xaml"/>
        <XAML Name="ButtonClickModePressBVT.xaml"/>
      </XAMLS>
      <VARIATION ControlName="radioButton" InputType="Keyboard" EventName="Click" ShouldEventFire="true" Key="Space" />
      <VARIATION ControlName="uncheckedRadioButton" InputType="Keyboard" EventName="Checked" ShouldEventFire="true" Key="Space" />
      <VARIATION ControlName="checkedRadioButton" InputType="Keyboard" EventName="Unchecked" ShouldEventFire="false" Key="Space" />

      <VARIATION ControlName="radioButton" InputType="Mouse" EventName="Click" ShouldEventFire="true" MouseButton="Left" />
      <VARIATION ControlName="uncheckedRadioButton" InputType="Mouse" EventName="Checked" ShouldEventFire="true" MouseButton="Left" />
      <VARIATION ControlName="checkedRadioButton" InputType="Mouse" EventName="Unchecked" ShouldEventFire="false" MouseButton="Left" />
    </DATA>
  </TEST>
</XTC>
