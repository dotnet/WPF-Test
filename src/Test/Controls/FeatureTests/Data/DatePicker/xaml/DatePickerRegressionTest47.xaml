<StackPanel xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"                
            Width="200">
        <DatePicker Name="datepicker" IsEnabled="{Binding ElementName=checkbox1,Path=IsChecked}" IsDropDownOpen="{Binding ElementName=checkbox2,Path=IsChecked}"/>
        <CheckBox Name="checkbox1" IsChecked="True" Content="IsEnabled"/>
        <CheckBox Name="checkbox2" IsChecked="False" Content="IsDropDownOpen"/>
</StackPanel>