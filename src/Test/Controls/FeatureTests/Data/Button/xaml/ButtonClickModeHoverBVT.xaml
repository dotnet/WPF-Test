<WrapPanel xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"     
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Name="panel">
        <Button ClickMode="Hover" Name="button" Content="Button"/>
        <RepeatButton ClickMode="Hover" Name="repeatButton" Content="RepeatButton"/>
        <ToggleButton ClickMode="Hover" Name="toggleButton" Content="ToggleButton"/>
        <ToggleButton ClickMode="Hover" Name="uncheckedToggleButton" Content="UncheckedToggleButton" IsChecked="False"/>
        <ToggleButton ClickMode="Hover" Name="checkedToggleButton" Content="CheckedToggleButton" IsChecked="True"/>
        <CheckBox ClickMode="Hover" Name="checkBox" Content="CheckBox"/>
        <CheckBox ClickMode="Hover" Name="uncheckedCheckBox" Content="UncheckedCheckBox" IsChecked="False"/>
        <CheckBox ClickMode="Hover" Name="checkedCheckBox" Content="CheckedCheckBox" IsChecked="True"/>
        <CheckBox ClickMode="Hover" Name="uncheckedCheckBoxThreeState" Content="UncheckedCheckBoxThreeState" IsChecked="False" IsThreeState="True"/>
        <CheckBox ClickMode="Hover" Name="checkedCheckBoxThreeState" Content="CheckedCheckBoxThreeState" IsChecked="True" IsThreeState="True"/>
        <CheckBox ClickMode="Hover" Name="nullCheckedCheckBoxThreeState" Content="NullCheckedCheckBoxThreeState" IsChecked="{x:Null}"  IsThreeState="True"/>
        <RadioButton ClickMode="Hover" Name="radioButton" GroupName="myGroup" Content="RadioButton"/>
        <RadioButton ClickMode="Hover" Name="uncheckedRadioButton" GroupName="myGroup" Content="UncheckedRadioButton" IsChecked="False"/>
        <RadioButton ClickMode="Hover" Name="checkedRadioButton" GroupName="myGroup" Content="CheckedRadioButton" IsChecked="True"/>
        <RepeatButton ClickMode="Hover" Name="repeatButtonDelayInterval" Content="RepeatButton" Delay="1000" Interval="500"/>
</WrapPanel>
