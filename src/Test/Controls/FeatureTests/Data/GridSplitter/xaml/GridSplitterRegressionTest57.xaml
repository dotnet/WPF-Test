        <ColumnDefinition Name="columnDefinition1" Width="0.5*"/>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="0.5*"/>
    </Grid.ColumnDefinitions>
    <Border Grid.Column="0" Background="Blue"/>
