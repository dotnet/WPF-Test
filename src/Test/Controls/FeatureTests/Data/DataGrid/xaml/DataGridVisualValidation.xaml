    <DataGrid x:Name="myDataGrid" Grid.Row="1"
                 AutoGenerateColumns="False"
                 ItemsSource="{Binding Source={StaticResource NutritionalData}, XPath=food}">

        <DataGrid.Resources>

            <Style x:Key="AlternationCountStyle">
                <Setter Property="DataGridRow.Background" Value="Pink" />
                <Style.Triggers>
                    <Trigger Property="DataGridRow.AlternationIndex" Value="1">
                        <Setter Property="DataGridRow.Background" Value="Blue" />
                    </Trigger>
                </Style.Triggers>
            </Style>
            
            <Style x:Key="ValidationErrorStyle">
                <Setter Property="DataGridRow.ValidationErrorTemplate">
                    <Setter.Value>
                        <ControlTemplate>
                            <DockPanel LastChildFill="True">
                                <TextBlock DockPanel.Dock="Right" Foreground="Maroon" FontSize="14" FontWeight="Bold">X</TextBlock>
                            </DockPanel>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <!--Validation.ErrorTemplate below is buggy. So comment it out for now.-->
                <!--
                <Setter Property="Validation.ErrorTemplate">
                    <Setter.Value>
                        <ControlTemplate>
                            <Border BorderBrush="Maroon" BorderThickness="2">
                                <AdornedElementPlaceholder Name="adornerPlaceholder" />
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                -->
            </Style>
            
            <DataTemplate x:Key="RowDetailsTemplate">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Background="Pink"  Margin="10"  Text="{Binding XPath=name}" />
                    <TextBlock Grid.Row="1" Background="Yellow"  Margin="10" Text="Hello Row Details!" />
                    <Button Grid.Row="2" Margin="10" Content="Just a button..." />
                </Grid>
            </DataTemplate>
            
        </DataGrid.Resources>

        <DataGrid.RowHeaderStyle>
            <Style TargetType="DataGridRowHeader">
                <Setter Property="Content" Value="Food Item" />
            </Style>
        </DataGrid.RowHeaderStyle>

        <DataGrid.Columns>
            <DataGridTextColumn Binding="{Binding XPath=name}" />
            <DataGridTextColumn Binding="{Binding XPath=mfr}" />
            <DataGridTextColumn Binding="{Binding XPath=serving}" />
        </DataGrid.Columns>
    </DataGrid>
</Grid>
