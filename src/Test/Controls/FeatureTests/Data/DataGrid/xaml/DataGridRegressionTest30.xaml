<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Name="GridPanel"
    Height="600" Width="700">
  <Grid.Resources>

  </Grid.Resources>

  <Grid.RowDefinitions>
    <RowDefinition Height="Auto"/>
    <RowDefinition Height="*"/>
    <RowDefinition Height="Auto"/>
  </Grid.RowDefinitions>

  <TextBlock Text="WPF DataGrid" Grid.Row="0"/>

  <DataGrid Margin="12" Grid.Row="2" Name="DataGrid_Standard">
    <DataGrid.Columns>
      <DataGridTextColumn Header="Column1" x:Name="dgcColumn1" DisplayIndex="2" />
      <DataGridTextColumn Header="Column2" x:Name="dgcColumn2" />
      <DataGridTextColumn Header="Column3" x:Name="dgcColumn3" DisplayIndex="0" />
      <DataGridTextColumn Header="Column4" x:Name="dgcColumn4" />
    </DataGrid.Columns>
  </DataGrid>
</Grid>