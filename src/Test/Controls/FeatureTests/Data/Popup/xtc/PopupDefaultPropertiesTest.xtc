<XTC>
  <TEST Name="Popup: Default properties" SubArea="Popup" Priority="2" ExecutionGroup="Pri2" Disabled="True">
    <DATA NOTE="Does not test attached and complex properties... need advanced cases for those.">
      <INIT Class="ControlTestActionValidationUnitTest" SuppressGtoLogger="true" />

      <VARIATION ID="1">
        <CONTROL>
          <Popup
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    />
        </CONTROL>
        <Actions>
        </Actions>
        <Validations>
          <Validation Name="ControlPropertyValidation">
            <Property Name = "IsOpen" />
            <Property Value = "false" />
          </Validation>
        </Validations>
      </VARIATION>
      <VARIATION ID="2">
        <CONTROL>
          <Popup
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    />
        </CONTROL>
        <Actions>
        </Actions>
        <Validations>
          <Validation Name="ControlPropertyValidation">
            <Property Name = "Placement" />
            <Property Value = "Bottom" />
          </Validation>
        </Validations>
      </VARIATION>
      <VARIATION ID="3">
        <CONTROL>
          <Popup
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    />
        </CONTROL>
        <Actions>
        </Actions>
        <Validations>
          <Validation Name="ControlPropertyValidation">
            <Property Name = "StaysOpen" />
            <Property Value = "true" />
          </Validation>
        </Validations>
      </VARIATION>
      <VARIATION ID="4">
        <CONTROL>
          <Popup
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    />
        </CONTROL>
        <Actions>
        </Actions>
        <Validations>
          <Validation Name="ControlPropertyValidation">
            <Property Name = "HorizontalOffset" />
            <Property Value = "0" />
          </Validation>
        </Validations>
      </VARIATION>
      <VARIATION ID="5">
        <CONTROL>
          <Popup
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    />
        </CONTROL>
        <Actions>
        </Actions>
        <Validations>
          <Validation Name="ControlPropertyValidation">
            <Property Name = "VerticalOffset" />
            <Property Value = "0" />
          </Validation>
        </Validations>
      </VARIATION>
    </DATA>
  </TEST>
</XTC>
