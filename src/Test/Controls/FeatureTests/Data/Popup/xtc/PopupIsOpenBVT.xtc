<XTC>
  <TEST Name="PopupIsOpenBVT" Priority="0" SubArea="Popup" ExecutionGroup="BVT">
    <DATA>
      <INIT Class="PopupIsOpenBVT"/>
      <VARIATION ID="1">
        <CONTROL>
          <Canvas
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            >
            <Popup Placement="Bottom" PlacementTarget="{Binding ElementName=cb}" IsOpen="{Binding ElementName=cb, Path=IsChecked}" AllowsTransparency="true">
              <Canvas Width="200" Height="200" Background="LightBlue">
              </Canvas>
            </Popup>
            <CheckBox Name="cb">toggle me to open the donut popup</CheckBox>
          </Canvas>
        </CONTROL>
      </VARIATION>
    </DATA>
  </TEST>
</XTC>
