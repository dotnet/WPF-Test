<StackPanel xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Height="300"  Width="600" x:Name="panel">
        <TextBlock HorizontalAlignment="Left" Margin="12,12,0,0" x:Name="textBlock1" Text="The OK button should become enabled when 8 or more characters are entered into the field..." VerticalAlignment="Top" TextWrapping="Wrap" FontSize="32" />
        <TextBox Text="{Binding MyText, UpdateSourceTrigger=PropertyChanged}"  Height="59"  x:Name="textBox1" VerticalAlignment="Top" Width="424" FontSize="18" />
        <Button Command="{Binding MyButton}" Height="23" Width="75" x:Name="btnTest" Content="OK"  Margin="267,20,258,20" />
    </StackPanel>
</StackPanel>